.container {
    width: 100%;
    background: #f8f8f8;
}

.container .title {
    padding: 30rpx 0;
    width: 100%;
    border-top: 1rpx solid #e4e0de;
    border-bottom: 1rpx solid #e4e0de;
    background: #fff;
}

.container .title,.container .title .title_wrap {
    display: flex;
    justify-content: center;
}

.container .title .title_wrap {
    flex: 1;
    text-align: center;
}

.container .title .title_wrap view {
    color: #aea7a7;
    font-size: 30rpx;
}

.container .title .title_wrap view.active {
    color: #584f4f;
    position: relative;
    z-index: 0;
}

.container .title .title_wrap view.active::after {
    content: "";
    width: 100%;
    height: 10rpx;
    background: #ff7200;
    position: absolute;
    left: 0;
    bottom: 5rpx;
    z-index: -1;
}

.container .title .title_wrap:first-child {
    border-right: 1rpx solid #c7c0bc;
}

.container .user_estimate {
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
}

.container .user_estimate .noengineer_estimate {
    display: flex;
    flex-flow: column;
    align-items: center;
    padding-top: 130rpx;
}

.container .user_estimate .noengineer_estimate image {
    width: 203rpx;
    height: 166rpx;
}

.container .user_estimate .noengineer_estimate view {
    color: #aca3a3;
    font-size: 24rpx;
    margin-top: 10rpx;
}

.container .user_estimate .user_estimate_wrapper {
    width: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    background: #fff;
}

.container .user_estimate .user_estimate_wrapper .border {
    padding: 32rpx 0;
    box-sizing: border-box;
    font-size: 24rpx;
    border-bottom: 1rpx solid #e4e0de;
}

.container .user_estimate .user_estimate_wrapper .border .name {
    color: #aca3a3;
}

.container .user_estimate .user_estimate_wrapper .border .detail {
    color: #584f4f;
}

.container .user_estimate .user_estimate_wrapper .border .detail_title {
    display: flex;
    align-items: center;
    color: #584f4f;
}

.container .user_estimate .user_estimate_wrapper .border .detail_title .difference {
    width: 53rpx;
    height: 28rpx;
    background: #ff7200;
    border-radius: 4rpx;
    color: #fff;
    font-size: 20rpx;
    line-height: 28rpx;
    text-align: center;
    margin-left: 10rpx;
}

.container .user_estimate .user_estimate_wrapper .border .user {
    color: #aca3a3;
    margin-top: 12rpx;
}

.container .user_estimate .user_estimate_wrapper .border .engineer {
    color: #ff7200;
    margin-top: 12rpx;
}

.container .user_estimate .user_estimate_wrapper .flex {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.container .user_estimate .user_estimate_wrapper:last-child .border {
    border: 0;
}