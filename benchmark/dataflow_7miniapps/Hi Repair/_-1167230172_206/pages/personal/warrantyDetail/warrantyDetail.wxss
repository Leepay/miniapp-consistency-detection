.warranty_container {
    min-height: 100vh;
    background: #f7f5f4;
    padding-top: 20rpx;
}

.warranty_wrap {
    padding-left: 20rpx;
    background: #fff;
}

.warranty_bg {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    border: 1rpx solid #e4e0de;
    position: relative;
}

.outdate {
    position: absolute;
    top: 9rpx;
    right: 0;
    width: 151rpx;
    height: 106rpx;
}

.warranty_bg.noborder {
    border: 0;
}

.warranty_image {
    width: 46rpx;
    height: 54rpx;
    margin-right: 23rpx;
}

.name,.time {
    color: #584f4f;
    font-size: 28rpx;
}

.time {
    display: flex;
}

.timeinfo.active,.title {
    color: #aca3a3;
}