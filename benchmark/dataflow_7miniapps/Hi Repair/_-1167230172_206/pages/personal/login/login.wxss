page {
    padding-bottom: 50rpx;
    background: #fff;
}

.logo {
    margin: 100rpx auto 50rpx;
}

.logo,.logo-img {
    width: 110rpx;
    height: 110rpx;
}

.inps-wrap {
    width: 680rpx;
    margin: 0 auto;
}

.inps-inner {
    display: flex;
    align-items: center;
    align-content: center;
    justify-content: space-between;
    height: 98rpx;
    border-radius: 8rpx;
    border: 1px solid #e4e0de;
    margin-bottom: 30rpx;
}

.inp-yzm {
    width: 280rpx;
}

.icon-sjh,.icon-yzm {
    width: 35rpx;
    height: 40rpx;
    margin: 0 35rpx 0 6rpx;
}

.icon-yzm {
    position: relative;
}

input {
    width: 320rpx;
    height: 50rpx;
    color: #333;
    min-height: 50rpx;
}

.moren,input {
    line-height: 50rpx;
    font-size: 32rpx;
}

.moren {
    color: #999;
}

.hqyzm {
    position: none;
    width: 210rpx;
    float: right;
    text-align: right;
    font-size: 32rpx;
    line-height: 55rpx;
    color: #aca3a3;
    background: transparent;
    padding: 0;
    border: 0;
    margin: 0 18rpx 0 0;
}

button::after {
    content: none;
}

.btnlogin {
    width: 680rpx;
    height: 88rpx;
    margin: 80rpx auto;
    border-radius: 10rpx;
    text-align: center;
    font-size: 30rpx;
    line-height: 88rpx;
    color: #fff;
}

.tipslogin {
    margin: 20rpx auto 0;
    height: 26rpx;
    line-height: 26rpx;
    font-size: 24rpx;
    color: #aca3a3;
    text-align: center;
}

.icon-xy {
    width: 26rpx;
    height: 26rpx;
    margin-right: 14rpx;
    vertical-align: middle;
    position: relative;
    margin-top: -6rpx;
}

.on-yzm {
    color: #ff7a00;
}

.on-login {
    background: #ff7a00;
}

.on-icon-sjh {
    background: url("https://pic.hiweixiu.com/hiweixiu-app/weapp/img/17020409-2.png") no-repeat 50%;
    background-size: contain;
}

.on-icon-yzm {
    background: url("https://pic.hiweixiu.com/hiweixiu-app/weapp/img/17020410-2.png") no-repeat 50%;
    background-size: contain;
}

.imgbtn,button[disabled]:not([type]) {
    background: transparent;
}

.imgbtn {
    position: none;
    width: 230rpx;
    float: right;
    text-align: center;
    font-size: 32rpx;
    line-height: 55rpx;
    color: #aca3a3;
    padding: 0;
    margin: 0;
    border: 0;
    vertical-align: middle;
}

.imgbtn image {
    width: 200rpx;
    height: 80rpx;
    margin-top: 16rpx;
}

.input_content {
    position: relative;
}

.input_placeholder {
    position: absolute;
    display: inline-block;
    background: #fff;
    color: #aca3a3;
    top: 0rpx;
    left: 30rpx;
    padding: 0 12rpx;
    transition: .3s;
    font-size: 30rpx;
}

.input_placeholder.focus {
    top: -38rpx;
    font-size: 20rpx;
}

.input_content input {
    margin-left: 30rpx;
}