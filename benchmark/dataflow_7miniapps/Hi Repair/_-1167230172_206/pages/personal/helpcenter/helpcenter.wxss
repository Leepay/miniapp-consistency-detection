.qa_container {
    background: #f7f5f4;
    padding-top: 20rpx;
    padding-bottom: 40rpx;
}

.qa_container .qa_wrap {
    background: #fff;
    padding-left: 30rpx;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}

.qa_container .qa_wrap .q_wrap {
    padding: 17rpx 0;
    box-sizing: border-box;
    display: flex;
    border-bottom: 1rpx solid #e4e0de;
}

.qa_container .qa_wrap .q_wrap .q {
    width: 44rpx;
    height: 44rpx;
    background: #fff;
    border-radius: 7rpx;
    border: 1rpx solid #ff5000;
    color: #ff5000;
    font-size: 36rpx;
    text-align: center;
    line-height: 44rpx;
}

.qa_container .qa_wrap .q_wrap .q_detail {
    margin-left: 11rpx;
    color: #aea7a7;
    font-size: 28rpx;
}

.qa_container .qa_wrap .a_wrap {
    padding: 30rpx 30rpx 60rpx 0;
    display: flex;
}

.qa_container .qa_wrap .a_wrap .a {
    flex-shrink: 0;
    width: 44rpx;
    height: 44rpx;
    background: linear-gradient(90deg,#f80,#ff5000);
    border-radius: 7rpx;
    color: #fff;
    font-size: 36rpx;
    text-align: center;
    line-height: 44rpx;
}

.qa_container .qa_wrap .a_wrap .a_detail {
    margin-left: 11rpx;
    color: #584f4f;
    font-size: 28rpx;
}