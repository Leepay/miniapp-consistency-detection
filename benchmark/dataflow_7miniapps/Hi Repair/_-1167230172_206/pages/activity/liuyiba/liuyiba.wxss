.lyb_container {
    width: 100%;
}

.lyb_container .title_wrap {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    padding: 0 58rpx;
    box-sizing: border-box;
    width: 100%;
    height: 72rpx;
    background: #34439e;
    line-height: 72rpx;
    display: flex;
    justify-content: space-between;
}

.lyb_container .title_wrap .title text {
    font-size: 28rpx;
    color: #adb3d8;
    position: relative;
}

.lyb_container .title_wrap .title.active text {
    color: #fff;
    font-weight: 700;
}

.lyb_container .title_wrap .title.active text::after {
    position: absolute;
    bottom: 7rpx;
    left: 0;
    z-index: -1;
    display: block;
    content: "";
    width: 100%;
    height: 6rpx;
    background: #66afff;
}

.lyb_container .content_wrap {
    padding-top: 72rpx;
    background: #34439e;
}

.lyb_container .content_wrap .banner {
    width: 100%;
}

.lyb_container .content_wrap .info_wrap {
    width: 100%;
    padding: 0 62rpx;
    box-sizing: border-box;
}

.lyb_container .content_wrap .info_wrap .info_title {
    width: 100%;
}

.lyb_container .content_wrap .info_wrap .coupon_wrap {
    display: flex;
    flex-flow: row;
    flex-wrap: wrap;
    justify-content: space-between;
    width: 100%;
}

.lyb_container .content_wrap .info_wrap .coupon_wrap .coupon {
    position: relative;
    margin-bottom: 20rpx;
    display: flex;
    align-items: center;
    padding: 26rpx 14rpx;
    box-sizing: border-box;
    width: 298rpx;
    height: 138rpx;
    background: url(https://pic.hiweixiu.com/hiweixiu-mobile/img/copuponbg.png) no-repeat;
    background-size: 298rpx 138rpx;
}

.lyb_container .content_wrap .info_wrap .coupon_wrap .coupon .price {
    flex-shrink: 0;
    display: flex;
    align-items: baseline;
    color: #fff;
    font-weight: 700;
    width: 90rpx;
}

.lyb_container .content_wrap .info_wrap .coupon_wrap .coupon .price .sym {
    font-size: 28rpx;
}

.lyb_container .content_wrap .info_wrap .coupon_wrap .coupon .price .count {
    font-size: 54rpx;
}

.lyb_container .content_wrap .info_wrap .coupon_wrap .coupon .condition {
    margin-left: 43rpx;
    color: #584f4f;
    font-size: 24rpx;
}

.lyb_container .content_wrap .info_wrap .coupon_wrap .coupon .condition .use {
    margin-top: 5rpx;
    width: 100rpx;
    height: 36rpx;
}

.lyb_container .content_wrap .info_wrap .coupon_wrap .coupon .condition button.use {
    border-radius: 0;
    padding: 0;
}

.lyb_container .content_wrap .info_wrap .coupon_wrap .coupon .condition button.use image {
    display: block;
}

.lyb_container .content_wrap .info_wrap .coupon_wrap .coupon .condition button.use::after {
    border: 0;
}

.lyb_container .content_wrap .info_wrap .coupon_wrap .coupon .alreadyget {
    position: absolute;
    right: 0;
    top: 0;
    width: 81rpx;
    height: 76rpx;
}

.lyb_container .content_wrap .info_wrap .model_wrap {
    display: flex;
    flex-flow: row;
    flex-wrap: wrap;
    justify-content: space-between;
    width: 100%;
}

.lyb_container .content_wrap .info_wrap .model_wrap .model {
    margin-bottom: 20rpx;
    padding-top: 40rpx;
    box-sizing: border-box;
    display: flex;
    flex-flow: column;
    align-items: center;
    width: 298rpx;
    height: 440rpx;
    border-radius: 4rpx;
    border: 1rpx solid #a6b2ff;
    color: #fff;
}

.lyb_container .content_wrap .info_wrap .model_wrap .model .model_img {
    width: 172rpx;
    height: 172rpx;
}

.lyb_container .content_wrap .info_wrap .model_wrap .model .name {
    font-size: 28rpx;
    margin-top: 6rpx;
}

.lyb_container .content_wrap .info_wrap .model_wrap .model .price {
    margin-top: 10rpx;
    display: flex;
    align-items: baseline;
    font-weight: 700;
}

.lyb_container .content_wrap .info_wrap .model_wrap .model .price .sym {
    font-size: 20rpx;
}

.lyb_container .content_wrap .info_wrap .model_wrap .model .price .cou {
    font-size: 28rpx;
}

.lyb_container .content_wrap .info_wrap .model_wrap .model .des {
    font-size: 20rpx;
    color: hsla(0,0%,100%,.8);
}

.lyb_container .content_wrap .info_wrap .model_wrap .model .order_now {
    margin-top: 26rpx;
    width: 140rpx;
    height: 46rpx;
    background: linear-gradient(90deg,#ff8f5e,#ff5d13);
    border-radius: 4rpx;
    text-align: center;
    line-height: 46rpx;
    font-size: 22rpx;
}

.lyb_container .content_wrap .info_wrap .moremodel {
    display: flex;
    align-items: center;
    justify-content: center;
}

.lyb_container .content_wrap .info_wrap .moremodel view {
    color: #fff;
    font-size: 28rpx;
}

.lyb_container .content_wrap .info_wrap .moremodel image {
    width: 21rpx;
    height: 21rpx;
    margin-left: 8rpx;
}

.lyb_container .content_wrap .info_wrap .intention_wrap {
    width: 100%;
}

.lyb_container .content_wrap .info_wrap .intention_wrap .inten {
    margin-bottom: 20rpx;
    display: flex;
    color: #fff;
    font-size: 22rpx;
}

.lyb_container .content_wrap .info_wrap .intention_wrap .inten .inten_title {
    flex-shrink: 0;
}

.lyb_container .content_wrap .info_wrap .intention_wrap .shuoming {
    color: #fff;
    font-size: 22rpx;
}

.lyb_container .content_wrap .info_wrap.no_padding {
    padding: 0;
}

.lyb_container .content_wrap .info_wrap.no_padding .img_wrap {
    padding: 0 62rpx;
    box-sizing: border-box;
}

.lyb_container .content_wrap .info_wrap.no_padding .img_wrap .info_title {
    width: 100%;
}

.lyb_container .content_wrap .info_wrap.no_padding .desc_wrap {
    padding: 0 30rpx;
    box-sizing: border-box;
}

.lyb_container .content_wrap .info_wrap.no_padding .desc_wrap image {
    width: 100%;
}

.lyb_container .content_wrap .bottom_wrap {
    margin-top: 106rpx;
    text-align: center;
}

.lyb_container .content_wrap .bottom_wrap image {
    width: 174rpx;
}

.lyb_container .content_wrap .bottom_wrap .tel {
    font-size: 20rpx;
    color: #fff;
}

.lyb_container .content_wrap .bottom_info {
    margin-top: 48rpx;
    width: 100%;
    height: 72rpx;
    background: #1d2e92;
    text-align: center;
    line-height: 72rpx;
    font-size: 22rpx;
    color: hsla(0,0%,100%,.8);
}