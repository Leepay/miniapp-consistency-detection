.container,.container .wrapper {
    width: 100%;
}

.container .modal {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,.47);
}

.container .modal .content {
    position: absolute;
    top: 257rpx;
    left: 119rpx;
    width: 512rpx;
    height: 542rpx;
    background: #fff;
    padding: 70rpx 0;
    box-sizing: border-box;
    text-align: center;
}

.container .modal .content .close {
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    width: 32rpx;
    height: 32rpx;
}

.container .modal .content .info {
    width: 241rpx;
    height: 270rpx;
}

.container .modal .content .de {
    margin-top: 66rpx;
    color: #584f4f;
    font-size: 34rpx;
}