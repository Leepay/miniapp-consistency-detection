.commoditContainer {
    width: 100%;
    padding: 0 21rpx;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
}

.commoditContainer .commoditWrapper {
    width: 50%;
    padding: 15rpx;
    box-sizing: border-box;
}

.commoditContainer .commoditWrapper .commodit {
    padding-top: 20rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #fff;
    border-radius: 4rpx;
    position: relative;
}

.commoditContainer .commoditWrapper .commodit .device-avatar {
    position: absolute;
    top: 0rpx;
    right: 50rpx;
    width: 66rpx;
}

.commoditContainer .commoditWrapper .commodit image {
    width: 180rpx;
    height: 180rpx;
}

.commoditContainer .commoditWrapper .commodit .model {
    color: #584f4f;
    font-size: 28rpx;
    margin-top: 12rpx;
    width: 280rpx;
    text-align: center;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.commoditContainer .commoditWrapper .commodit .fault {
    color: #9b9696;
    font-size: 28rpx;
    margin-top: 4rpx;
    width: 280rpx;
    text-align: center;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.commoditContainer .commoditWrapper .commodit .price {
    margin-top: 26rpx;
    color: #ff5000;
    font-size: 30rpx;
}

.commoditContainer .commoditWrapper .commodit .yPrice {
    color: #9b9696;
    font-size: 24rpx;
    text-decoration: line-through;
}

.commoditContainer .commoditWrapper .order {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    color: #546aff;
    text-align: center;
    background: #ffe832;
    margin-top: 8rpx;
}

.commoditContainer .seeMore {
    width: 100%;
}