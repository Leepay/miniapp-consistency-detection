page {
    width: 100%;
    height: 100%;
    background: #f5f5f7;
}

.couponContainer {
    width: 100%;
    padding: 20rpx 36rpx;
    box-sizing: border-box;
}

.couponContainer .couponWrap {
    width: 100%;
    height: 154rpx;
    padding: 35rpx 20rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: url(https://pic.hiweixiu.com/hiweixiu-mobile/img/selectcoupon.png) no-repeat;
    background-size: 100% 100%;
    margin-top: 20rpx;
}

.couponContainer .couponWrap .title {
    color: #333;
    font-size: 30rpx;
}

.couponContainer .couponWrap .time {
    color: #86868b;
    font-size: 22rpx;
    margin-top: 9rpx;
}

.couponContainer .couponWrap.active {
    background: url(https://pic.hiweixiu.com/hiweixiu-mobile/img/noselectcoupon.png) no-repeat;
    background-size: 100% 100%;
}

.couponContainer .priceWrap {
    flex-shrink: 0;
    display: flex;
    flex-flow: column;
    align-items: center;
    justify-content: center;
}

.couponContainer .priceWrap .price_count {
    display: flex;
    align-items: baseline;
    color: #333;
    font-weight: 700;
}

.couponContainer .priceWrap .price_count .sym {
    font-size: 30rpx;
}

.couponContainer .priceWrap .price_count .count {
    font-size: 40rpx;
}

.couponContainer .priceWrap .price_count .zhe {
    font-size: 30rpx;
}

.couponContainer .priceWrap .price_condition {
    color: #86868b;
    font-size: 22rpx;
    font-weight: 400;
}

.couponContainer .nocoupon {
    text-align: center;
    padding-top: 240rpx;
}

.couponContainer .nocoupon image {
    width: 182rpx;
    height: 140rpx;
}

.couponContainer .nocoupon .noucoupontext {
    margin: 44rpx;
    color: #333;
    font-size: 23rpx;
}