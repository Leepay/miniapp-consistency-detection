page {
    background: #f5f5f7;
}

.modelcontainer {
    padding: 20rpx;
}

.modelSelect {
    width: 100%;
    box-sizing: border-box;
}

.modelSelect .modelwrap {
    width: 100%;
    height: 72rpx;
    display: flex;
    border-radius: 12rpx;
    border: 1rpx solid #b4b4b5;
    overflow: hidden;
}

.modelSelect .modelwrap .modelTitle {
    flex: 1;
    text-align: center;
    line-height: 72rpx;
    color: #86868b;
    border-right: 1px solid #b4b4b5;
    font-size: 30rpx;
}

.modelSelect .modelwrap .modelTitle.noBorder {
    border-right: 0;
}

.modelSelect .modelwrap .modelTitle.active {
    background: #333;
    color: #fff;
}

.modelShowList {
    box-sizing: border-box;
    background: #fff;
    margin-top: 20rpx;
    padding-bottom: 20rpx;
    border-radius: 10rpx;
}

.modelShowList .showTitle {
    padding: 40rpx 20rpx 20rpx;
    font-size: 30rpx;
    color: #111;
}

.modelShowList .modelContainer {
    padding: 0 20rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.modelShowList .modelContainer .model {
    width: 325rpx;
    height: 112rpx;
    border: 1rpx solid #c8c8cc;
    border-radius: 12rpx;
    text-align: center;
    color: #333;
    font-size: 24rpx;
    margin-top: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 10rpx;
    box-sizing: border-box;
}

.modelShowList .modelContainer .model.active {
    border: 1rpx solid #007aff!important;
}