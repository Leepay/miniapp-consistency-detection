.phonelist_container .search_container {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    width: 100%;
    height: 80rpx;
    background: #fff;
}

.phonelist_container .search_container .search {
    margin-top: 10rpx;
    width: 715rpx;
    height: 60rpx;
    background: #f1f1f1;
    border-radius: 25rpx;
    color: #c7c0bc;
    font-size: 24rpx;
    line-height: 60rpx;
    padding: 0 24rpx;
    box-sizing: border-box;
}

.phonelist_container .phone_brand_container .series_wrap {
    width: 100%;
    height: 92rpx;
    box-shadow: 0 8rpx 16rpx 0 rgba(0,0,0,.06);
    position: relative;
    z-index: 1;
}

.phonelist_container .phone_brand_container .series_wrap .series_scroll {
    padding: 10rpx 30rpx;
    box-sizing: border-box;
    width: 100%;
    height: 80rpx;
    white-space: nowrap;
}

.phonelist_container .phone_brand_container .series_wrap .series_scroll .series {
    margin-right: 58rpx;
    display: inline-block;
    color: #9e9e9e;
    font-size: 28rpx;
    position: relative;
    height: 60rpx;
    line-height: 60rpx;
    z-index: 0;
}

.phonelist_container .phone_brand_container .series_wrap .series_scroll .series .bottombg {
    position: absolute;
    bottom: 10rpx;
    left: 0;
    width: 100%;
    height: 10rpx;
    border-radius: 5rpx;
    background: #ffbfa1;
    z-index: -1;
}

.phonelist_container .phone_brand_container .series_wrap .series_scroll .series.active {
    color: #636363;
    font-weight: 600;
}

.phonelist_container .phone_brand_container .brand_model_wrap {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
}

.phonelist_container .phone_brand_container .brand_model_wrap .brand_wrap {
    width: 160rpx;
    background: #f7f7f7;
}

.phonelist_container .phone_brand_container .brand_model_wrap .brand_wrap .brand {
    width: 100%;
    height: 86rpx;
    background: #f7f7f7;
    line-height: 90rpx;
    text-align: center;
    color: #9e9e9e;
    font-size: 26rpx;
    position: relative;
}

.phonelist_container .phone_brand_container .brand_model_wrap .brand_wrap .brand .leftbg {
    position: absolute;
    left: 0rpx;
    top: 20rpx;
    width: 10rpx;
    height: 50rpx;
    border-radius: 5rpx;
    background: #ffbfa1;
}

.phonelist_container .phone_brand_container .brand_model_wrap .brand_wrap .brand.active {
    background: #fff;
    color: #636363;
    font-size: 26rpx;
    font-weight: 600;
}

.phonelist_container .phone_brand_container .brand_model_wrap .brand_wrap .brand.noborder {
    border-bottom: 0;
}

.phonelist_container .phone_brand_container .brand_model_wrap .model_wrap {
    width: 590rpx;
    background: #fff;
}

.phonelist_container .phone_brand_container .brand_model_wrap .model_wrap .model {
    height: 98rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid #f3f3f3;
    margin: 0 26rpx;
}

.phonelist_container .phone_brand_container .brand_model_wrap .model_wrap .model .model-name-right .max-price {
    color: #ff7200;
    font-weight: 600;
    font-size: 24rpx;
    text-align: right;
}

.phonelist_container .phone_brand_container .brand_model_wrap .model_wrap .model .model-name-right .text {
    color: #9e9e9e;
    font-size: 20rpx;
    text-align: right;
}

.phonelist_container .phone_brand_container .brand_model_wrap .model_wrap .model .model_name {
    color: #333;
    font-size: 26rpx;
}

.phonelist_container .phone_brand_container .brand_model_wrap .model_wrap .model.noborder {
    border-bottom: 0;
}