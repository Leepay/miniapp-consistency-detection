.page__bd {
    position: fixed;
    top: 0;
    width: 100%;
}

.weui-search-bar {
    position: relative;
    padding: 0rpx 32rpx 32rpx;
    display: flex;
    box-sizing: border-box;
    background-color: #fff;
}

.weui-icon-search {
    margin-right: 8px;
    font-size: inherit;
}

.weui-icon-search_in-box {
    position: absolute;
    left: 32rpx;
    top: 26rpx;
}

.weui-search-bar__text {
    display: inline-block;
    font-size: 28rpx;
    vertical-align: middle;
    margin-top: -10rpx;
}

.weui-search-bar__form {
    position: relative;
    -webkit-box-flex: 1;
    flex: auto;
    border-radius: 5px;
    background: #f7f7f7;
}

.weui-search-bar__box {
    position: relative;
    padding-left: 80rpx;
    padding-right: 50rpx;
    width: 100%;
    box-sizing: border-box;
    z-index: 1;
}

.weui-search-bar__input {
    height: 76rpx;
    line-height: 76rpx;
    font-size: 28rpx;
}

.weui-icon-clear {
    position: absolute;
    top: 0;
    right: 0;
    padding: 26rpx 14rpx;
    font-size: 0;
}

.weui-search-bar__label {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 2;
    border-radius: 3px;
    text-align: center;
    color: #9b9b9b;
    background: #f7f7f7;
    line-height: 76rpx;
}

.weui-search-bar__cancel-btn {
    margin-left: 20rpx;
    line-height: 76rpx;
    color: #000;
    font-size: 28rpx;
    white-space: nowrap;
}

.splitArea {
    height: 10rpx;
    width: 100%;
    background: #f7f7f7;
    margin-top: 108rpx;
}

.searchPage {
    position: relative;
    background: #fff;
    padding-bottom: 32rpx;
    box-sizing: border-box;
}

.searchInput {
    box-sizing: border-box;
    background: url(https://pic.hiweixiu.com/images/miniprogram/search.png) 28rpx no-repeat;
    background-color: #f7f7f7;
    background-size: 34rpx 34rpx;
    border-radius: 20rpx;
    padding: 5rpx 0;
}

.searchInput .s_input {
    width: 100%;
    height: 72rpx;
    padding-left: 84rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    line-height: 72rpx;
}

.searchPage .latestSearch {
    width: 100%;
    border-radius: 20rpx;
    padding: 0 32rpx;
    box-sizing: border-box;
}

.searchPage .latestSearch .latestSearchTitle {
    padding-bottom: 20rpx;
    font-size: 24rpx;
    color: #2d2a2a;
    font-weight: 600;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    box-sizing: border-box;
}

.searchPage .latestSearch .latestSearchTitleLeft {
    float: left;
}

.searchPage .latestSearch .latestSearchTitleRight {
    float: right;
    width: 28rpx;
    height: 28rpx;
    margin-top: 10rpx;
}

.searchPage .latestSearch .latestSearchResult {
    display: flex;
    flex-wrap: wrap;
}

.searchPage .latestSearch .latestSearchResult .latestSearchResultList {
    margin-bottom: 20rpx;
    border: 1rpx solid #c7c0bc;
    border-radius: 8rpx;
    margin-right: 20rpx;
    height: 52rpx;
    display: flex;
    align-items: center;
    padding: 0 17rpx;
    font-size: 24rpx;
}

.searchPage .searchResult .noResult {
    padding-top: 20rpx;
    text-align: center;
    font-size: 28rpx;
    font-weight: 400;
    color: #363636;
    line-height: 42rpx;
}

.searchPage .searchResult .haveResult {
    padding: 20rpx;
}

.searchPage .searchResult .haveResult .haveResultList {
    padding: 20rpx;
    font-size: 28rpx;
    color: #000;
}

.popular-container {
    padding: 30rpx 30rpx 0;
    width: 100%;
    box-sizing: border-box;
}

.popular-container .popular-container-item {
    padding-bottom: 20rpx;
}

.popular-container .popular-container-item .title {
    font-size: 24rpx;
    font-weight: 600;
    color: #2d2a2a;
    line-height: 33rpx;
    padding-bottom: 20rpx;
}

.popular-container .popular-container-item .child-body {
    display: flex;
    flex-wrap: wrap;
}

.popular-container .popular-container-item .child-body .child-item {
    border: 1rpx solid #c7c0bc;
    display: flex;
    flex-wrap: nowrap;
    max-width: 690rpx;
    white-space: nowrap;
    height: 52rpx;
    line-height: 52rpx;
    padding: 0 17rpx;
    margin-right: 20rpx;
    border-radius: 8rpx;
    font-size: 24rpx;
    align-items: center;
    margin-bottom: 30rpx;
    box-sizing: border-box;
}

.popular-container .popular-container-item .child-body .child-item .avatar {
    margin-right: 8rpx;
}

.popular-container .popular-container-item .child-body .child-item .avatar image {
    height: 28rpx;
    float: left;
    width: 90rpx;
}

.popular-container .popular-container-item .child-body .child-item .label {
    margin-left: 8rpx;
    color: red;
}