page {
    background: #fff;
    height: 100%;
}

.chooseDeviceContainer {
    height: 100%;
    display: flex;
    flex-flow: column;
}

.navContainer {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    padding-left: 20rpx;
}

.navContainer .back {
    width: 40rpx;
    height: 40rpx;
}

.search {
    display: block;
    background: #fff;
    margin-left: 20rpx;
}

.search .searchInput {
    width: 458rpx;
    padding-left: 55rpx;
    line-height: 54rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    color: #d1d1d1;
    border-radius: 27rpx;
    background: url(https://pic.hiweixiu.com/images/miniprogram/search.png) 21rpx no-repeat;
    background-color: #f7f7f7;
    background-size: 24rpx 24rpx;
}

.wodeshebei {
    position: fixed;
    width: 100%;
    height: 62rpx;
    margin-bottom: 20rpx;
    background: #ffedc3 url("https://pic.hiweixiu.com/hiweixiu-app/weapp/img/17020413.png") no-repeat 718rpx;
    line-height: 62rpx;
    text-align: center;
    color: #333;
    font-size: 26rpx;
    background-size: 11rpx 20rpx;
}

.content {
    flex: 1;
    display: flex;
    background: #fff;
}

.top0 {
    top: 0rpx;
}

.top90 {
    top: 100rpx;
}

.sidebar {
    width: 179rpx;
    min-width: 179rpx;
    max-width: 179rpx;
    height: 100%;
    flex-grow: 0;
    background: #f5f5f5;
}

.menu {
    width: 180rpx;
    height: 100rpx;
    text-align: center;
    display: flex;
    flex-flow: column;
    align-items: center;
    justify-content: center;
}

.menu.hi_logo {
    background: #fff;
    margin-bottom: 10rpx;
}

.hi_logo image {
    width: 180rpx;
    height: 100rpx;
}

.menu .txt.brand {
    position: relative;
}

.menu .brandImage {
    height: 22rpx;
}

.menu.on .txt {
    color: #ff7200;
    position: relative;
}

.menu .txt {
    display: block;
    text-align: center;
    font-size: 28rpx;
    color: #ababab;
    position: relative;
    transition: 1s;
}

.menu.on {
    background-color: #fff;
}

.tabs {
    background: #fff;
    position: relative;
}

.arrowscroll {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: 12rpx;
    top: 50%;
    transform: translateY(-50%);
}

.tabsContainer {
    width: 100%;
    height: 92rpx;
    box-sizing: border-box;
    display: flex;
}

.fl {
    float: left;
}

.cl::after {
    display: block;
    content: "";
    clear: both;
}

.nav {
    height: 92rpx;
    line-height: 92rpx;
    text-align: center;
    font-size: 28rpx;
    float: left;
    color: #666;
    position: relative;
    padding: 0;
    margin: 0 60rpx 0 0;
    background: none;
    flex-shrink: 0;
}

.nav::after {
    content: none;
}

.nav.on {
    font-weight: 700;
    background-size: contain;
}

.nav.on text.active {
    position: relative;
    z-index: 0;
}

.nav.on text.active::after {
    content: "";
    position: absolute;
    bottom: 6rpx;
    left: 0;
    z-index: -1;
    width: 100%;
    height: 8rpx;
    background: #ff7200;
    border-radius: 4rpx;
}

.right {
    flex-grow: 2;
}

.list {
    width: 570rpx;
    clear: both;
}

.blockView {
    display: flex;
    flex-wrap: wrap;
    padding: 42rpx;
    box-sizing: border-box;
}

.item {
    flex-shrink: 0;
    width: 110rpx;
    flex-flow: column;
    margin-bottom: 42rpx;
    position: relative;
}

.item,.item1 {
    display: flex;
    align-items: center;
}

.item1 {
    width: 100%;
    margin-bottom: 20rpx;
}

.item1 .img {
    flex-shrink: 0;
    width: 80rpx;
    height: 80rpx;
    margin-right: 36rpx;
}

.item1 .con {
    width: 360rpx;
    font-size: 26rpx;
    color: #000;
    display: block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.item.addmar {
    margin: 0 75rpx;
}

.item .img {
    width: 110rpx;
    height: 110rpx;
}

.item .con {
    margin-top: 20rpx;
    width: 110rpx;
    text-align: center;
    font-size: 22rpx;
    color: #000;
    height: 66rpx;
    word-break: break-all;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.item .device-avatar {
    position: absolute;
    top: -23rpx;
    right: -23rpx;
    width: 60rpx;
    height: 60rpx;
}

.img {
    opacity: 0;
}

.mineWrap {
    width: 480rpx;
    height: 161rpx;
    margin: 0 auto;
    flex-flow: column;
    justify-content: center;
    background: url("https://image.hiweixiu.com/web-template/minebg.png") no-repeat;
    background-size: 480rpx 131rpx;
    background-position: 0 100%;
    padding: 46rpx 0 20rpx 190rpx;
    box-sizing: border-box;
}

.mineWrap,.tipWrap {
    display: flex;
}

.tipWrap {
    align-items: center;
}

.tip {
    width: 46rpx;
    height: 25rpx;
    color: #fff;
    border-radius: 6rpx;
    border: 1rpx solid #fff;
    font-size: 18rpx;
    text-align: center;
    line-height: 20rpx;
}

.modelname {
    color: #fff;
    font-size: 26rpx;
    margin-left: 10rpx;
}

.tips {
    margin-top: 10rpx;
    display: flex;
    align-items: center;
    font-size: 0;
}

.tips view {
    color: #fff;
    font-size: 26rpx;
}

.notFound {
    width: 150rpx;
    height: 160rpx;
    position: fixed;
    right: 0;
    bottom: 155rpx;
    transform: translateX(0);
}

.confirmQuickorder {
    position: fixed;
    top: 300rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 604rpx;
    height: 614rpx;
    background: #fff;
    z-index: 11;
}

.confirmQuickorder .close {
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    width: 30rpx;
    height: 30rpx;
    padding: 20rpx;
    z-index: 1;
}

.confirmQuickorder .tanchuang {
    width: 604rpx;
    height: 614rpx;
}

.confirmQuickorder .agree {
    position: absolute;
    bottom: 30rpx;
    left: 30rpx;
    width: 544rpx;
    height: 60rpx;
    background: #ff7200;
    border-radius: 8rpx;
    color: #fff;
    font-size: 24rpx;
    text-align: center;
    line-height: 60rpx;
    font-weight: 700;
}

.modal {
    position: fixed;
    z-index: 8;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background: rgba(0,0,0,.6);
}