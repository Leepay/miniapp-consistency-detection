.quickorderContainer {
    padding: 0 20rpx 20rpx;
    box-sizing: border-box;
    width: 100%;
}

.quickorderContainer .quickorderWrap {
    padding: 20rpx;
    box-sizing: border-box;
    background: #fff;
    border-radius: 8rpx;
}

.quickorderContainer .quickorderWrap .title {
    color: #2d2a2a;
    font-size: 30rpx;
    font-weight: 700;
}

.quickorderContainer .descWrap .comment-item {
    display: inline-block;
    width: 547rpx;
    height: 352rpx;
    background-size: 547rpx 352rpx;
    background-repeat: no-repeat;
    background-position: 50%;
}

.comment-item-content {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 46rpx 38rpx 72rpx 92rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.comment-item-content .content-time {
    font-size: 20rpx;
    line-height: 28rpx;
    color: #a4a4a4;
}

.comment-item-content .content-main {
    margin-top: 4rpx;
    width: 423rpx;
    white-space: normal;
    font-size: 24rpx;
    line-height: 34rpx;
    color: #2d2a2a;
}

.comment-item-content .content-user {
    display: flex;
    align-items: center;
}

.comment-item-content .content-user .name {
    font-size: 20rpx;
    font-weight: 400;
    color: #939393;
    line-height: 28rpx;
}

.comment-item-content .content-user .star {
    margin-left: 9rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.comment-item-content .content-user .star image {
    height: 13rpx;
}

.comment-item-content .content-model {
    display: flex;
    align-items: center;
    height: 28rpx;
    font-size: 20rpx;
    font-weight: 400;
    color: #939393;
    line-height: 28rpx;
}

.comment-item-content .content-model .model-fault {
    margin-left: 9rpx;
}