.imgtabContainer {
    padding: 0 20rpx 20rpx;
    box-sizing: border-box;
    width: 100%;
}

.imgtabContainer .imgtabWrap {
    padding: 20rpx 0rpx 0;
    box-sizing: border-box;
    background: #fff;
    border-radius: 8rpx;
}

.imgtabContainer .imgtabWrap .tabWrap {
    padding: 0 20rpx;
    display: flex;
    align-items: center;
}

.imgtabContainer .imgtabWrap .tabWrap .tab {
    color: #bababa;
    font-size: 30rpx;
    font-weight: 700;
    position: relative;
    z-index: 0;
    margin-right: 60rpx;
}

.imgtabContainer .imgtabWrap .tabWrap .tab.active {
    color: #2d2a2a;
}

.imgtabContainer .imgtabWrap .tabWrap .tab.active::after {
    content: "";
    position: absolute;
    bottom: -2rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 26rpx;
    height: 4rpx;
    background: #ff7200;
    border-radius: 4rpx;
}

.imgtabContainer .imgtabWrap .imgWrap {
    font-size: 0;
    margin-top: 30rpx;
}

.imgtabContainer .imgtabWrap .imgWrap image {
    width: 100%;
}