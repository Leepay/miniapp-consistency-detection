.flashsale-container {
    padding: 0 20rpx 20rpx;
    box-sizing: border-box;
    width: 100%;
}

.flashsale-container-body {
    background: #fff;
    width: 710rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    border-radius: 8rpx;
    margin: 0 auto;
}

.flashsale-container .flashsale-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 42rpx;
    padding-top: 20rpx;
}

.flashsale-container .flashsale-top .flashsale-title {
    font-size: 30rpx;
    font-family: PingFangSC-Semibold,PingFang SC;
    font-weight: 600;
    color: #2d2a2a;
    line-height: 42rpx;
}

.flashsale-container .flashsale-top .flashsale-tab {
    width: 530rpx;
}

.flashsale-container .flashsale-top .flashsale-tab-item {
    display: inline-block;
    height: 33rpx;
    font-size: 24rpx;
    font-family: PingFangSC;
    color: #a4a4a4;
    line-height: 33rpx;
    margin: 0 20rpx;
}

.flashsale-container .flashsale-top .flashsale-tab-item.active {
    position: relative;
    color: #ff7200;
}

.flashsale-container .flashsale-top .flashsale-tab-item.active::after {
    content: "";
    position: absolute;
    bottom: -2rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 26rpx;
    height: 4rpx;
    background: #ff7200;
    border-radius: 4rpx;
}

.flashsale-container .flashsale-top .flashsale-tab-item image {
    height: 24rpx;
}

.flashsale-container .flashsale-main {
    padding-top: 8rpx;
}

.flashsale-container .flashsale-main .flashsale-item {
    display: flex;
    padding: 32rpx 0;
    border-bottom: 1rpx solid #e1e1e1;
}

.flashsale-container .flashsale-main .flashsale-item:last-child {
    border: none;
}

.flashsale-container .flashsale-main .flashsale-item .flashsale-item-l {
    position: relative;
}

.flashsale-item-l .icon {
    position: absolute;
    width: 108rpx;
    height: 46rpx;
    top: -12rpx;
    left: 0rpx;
}

.flashsale-item-l .model-img {
    width: 188rpx;
    height: 188rpx;
}

.flashsale-item-r {
    margin-left: 10rpx;
    flex: 1;
}

.flashsale-item-r .flashsale-model-name {
    height: 42rpx;
    font-size: 30rpx;
    font-weight: 600;
    color: #2d2a2a;
    line-height: 42rpx;
}

.flashsale-item-r .flashsale-model-des {
    height: 33rpx;
    font-size: 24rpx;
    color: #696969;
    line-height: 33rpx;
    margin-top: 6rpx;
}

.flashsale-model-progress {
    display: flex;
    align-items: center;
    margin-top: 4rpx;
}

.flashsale-model-progress progress {
    width: 330rpx;
}

.flashsale-model-progress .progress-text {
    height: 33rpx;
    font-size: 24rpx;
    color: #a4a4a4;
    line-height: 33rpx;
    margin-left: 12rpx;
}

.flashsale-model-btn {
    display: flex;
    align-items: baseline;
    margin-top: 20rpx;
}

.flashsale-model-btn .price-name {
    font-size: 24rpx;
    color: #ff7200;
}

.flashsale-model-btn .price-sale {
    margin: 0 10rpx;
    font-size: 24rpx;
    color: #ff7200;
}

.flashsale-model-btn .price-sale text {
    font-size: 34rpx;
    font-weight: 600;
}

.flashsale-model-btn .price-underline {
    font-size: 24rpx;
    font-family: PingFangSC;
    color: #a4a4a4;
    line-height: 33rpx;
    text-decoration: line-through;
}

.flashsale-model-btn .price-btn {
    width: 168rpx;
    height: 52rpx;
    text-align: center;
    background: #ff7200;
    border-radius: 29rpx;
    font-size: 24rpx;
    line-height: 52rpx;
    font-weight: 600;
    color: #fff;
    margin-left: auto;
}

.flashsale-main .show-more {
    border-top: 1rpx solid #e1e1e1;
    text-align: center;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 24rpx;
    color: #ff7200;
    position: relative;
    padding-right: 40rpx;
}

.flashsale-main .show-more::after {
    position: absolute;
    content: "";
    height: 14rpx;
    width: 14rpx;
    border-bottom: 1rpx solid #ff7200;
    border-left: 1rpx solid #ff7200;
    transform: rotate(-45deg);
    bottom: 20rpx;
    left: 350rpx;
}