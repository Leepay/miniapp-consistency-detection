.homeContainer,page {
    width: 100%;
    height: 100%;
}

.homeContainer {
    box-sizing: border-box;
}

.scrollView {
    position: relative;
    width: 100%;
    height: 100%;
}

.navContainer {
    display: flex;
    align-items: center;
    padding-left: 20rpx;
}

.navContainer .navLogo {
    width: 454rpx;
    height: 40rpx;
}

.fixed {
    width: 100%;
}

.searchContainer {
    padding: 10rpx 20rpx 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
}

.searchContainer .zero-buy {
    width: 138rpx;
    height: 52rpx;
}

.searchContainer .search-main {
    width: 552rpx;
    height: 52rpx;
    box-sizing: border-box;
    opacity: .8;
    background: #fff;
    border-radius: 28rpx;
    position: relative;
}

.searchContainer .inputWrap,.searchContainer .search-main {
    font-size: 22rpx;
    display: flex;
    align-items: center;
}

.searchContainer .inputWrap {
    width: 488rpx;
    justify-content: center;
    color: #686868;
    height: 36rpx;
    border-right: 1rpx solid rgba(0,0,0,.16);
    margin-right: 15rpx;
}

.searchContainer .inputWrap .iconsearch {
    width: 20rpx;
    height: 20rpx;
    margin-right: 6rpx;
}

.searchContainer .iconkefu {
    width: 32rpx;
    height: 32rpx;
}

.searchContainer .kuWrap {
    position: absolute;
    right: 20rpx;
    top: 80rpx;
    background: #474747;
    padding: 0 24rpx;
    width: 234rpx;
    box-sizing: border-box;
    border-radius: 8rpx;
    z-index: 100;
    display: none;
}

.searchContainer .kuWrap .zskf {
    display: flex;
    align-items: center;
    height: 80rpx;
    width: 100%;
    color: #fff;
    font-size: 28rpx;
    position: relative;
}

.searchContainer .kuWrap .zskf image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 4rpx;
}

.searchContainer .kuWrap .zskf .miaohui {
    width: 46rpx;
    height: 25rpx;
    text-align: center;
    line-height: 25rpx;
    font-size: 16rpx;
    color: #fff;
    background: #e92d00;
    border-radius: 13rpx;
    position: absolute;
    right: 0;
    top: 4rpx;
}

.searchContainer .kuWrap .cellKf {
    position: absolute;
    top: 10rpx;
    left: 30rpx;
    z-index: 1;
    opacity: 0;
}

.searchContainer .kuWrap .addBorder {
    border-bottom: 1rpx solid #313131;
}

.searchContainer .showKfWrap {
    display: block;
}

.searchContainer .kuWrap::after {
    content: "";
    position: absolute;
    top: -20rpx;
    right: 20rpx;
    border: 10rpx solid transparent;
    border-bottom-color: #474747;
}

.modal {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 21;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.7);
    display: flex;
    justify-content: center;
}

.modal .tipsimage {
    width: 600rpx;
    margin-top: 300rpx;
}

.modal .closemodal {
    position: absolute;
    bottom: 20%;
    left: 50%;
    transform: translateX(-50%);
    width: 60rpx;
    height: 60rpx;
}

.modalInfo {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.7);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
}

.modalInfo,.modalInfo .imgWrap {
    display: flex;
    align-items: center;
    justify-content: center;
}

.modalInfo .imgWrap {
    position: relative;
}

.modalInfo .imgWrap .imgWrap-image2 {
    width: 88rpx;
    position: absolute;
    z-index: 1;
    opacity: 1;
    bottom: 45%;
    left: 50%;
    transform: translateX(-50%) rotateX(90deg);
}

.modalInfo .imgWrap .close {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    bottom: -50rpx;
    left: 50%;
    transform: translateX(-50%);
}

.modal1 {
    position: fixed;
    z-index: 8;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background: rgba(0,0,0,.7);
}

.modal1.zindex {
    z-index: 10;
}

.confirmQuickorder {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%,-50%,0);
    width: 604rpx;
    height: 614rpx;
    z-index: 11;
}

.confirmQuickorder .close {
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    width: 30rpx;
    height: 30rpx;
    z-index: 1;
}

.confirmQuickorder .tanchuang {
    width: 604rpx;
    height: 614rpx;
}

.confirmQuickorder .agree {
    position: absolute;
    bottom: 30rpx;
    left: 30rpx;
    width: 544rpx;
    height: 60rpx;
    background: #ff7200;
    border-radius: 8rpx;
    color: #fff;
    font-size: 24rpx;
    text-align: center;
    line-height: 60rpx;
    font-weight: 700;
}

.notFound {
    width: 205rpx;
    height: 112rpx;
    position: fixed;
    right: 0;
    bottom: 155rpx;
    transform: translateX(70%);
}

.buttonLogin {
    background: transparent;
    border: none;
    outline: 0;
    padding: 0;
    margin: 0;
}

.buttonLogin image {
    width: 205rpx;
    height: 112rpx;
}

.buttonLogin::after {
    border: none;
}