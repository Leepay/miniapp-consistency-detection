.storeContainer {
    padding: 0 20rpx 20rpx;
    box-sizing: border-box;
    width: 100%;
}

.storeContainer .storeWrap {
    padding: 20rpx;
    box-sizing: border-box;
    background: #fff;
    border-radius: 8rpx;
}

.storeContainer .storeWrap .storeTitleWrap {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.storeContainer .storeWrap .storeTitleWrap .title {
    color: #2d2a2a;
    font-size: 30rpx;
    font-weight: 700;
    display: flex;
    align-items: center;
}

.storeContainer .storeWrap .storeTitleWrap .title .distance {
    margin-left: 12rpx;
    padding: 5rpx 11rpx;
    background: #e9e9e9;
    font-weight: 400;
    border-radius: 50rpx;
    text-align: center;
    color: #584f4f;
    font-size: 22rpx;
}

.storeContainer .storeWrap .storeTitleWrap .more {
    display: flex;
    align-items: center;
    color: #2d2a2a;
    font-size: 22rpx;
    font-weight: 700;
}

.storeContainer .storeWrap .storeTitleWrap .more image {
    width: 20rpx;
    height: 20rpx;
}

.storeContainer .storeWrap .detailWrap {
    margin-top: 20rpx;
}

.storeContainer .storeWrap .detailWrap .name {
    color: #2d2a2a;
    font-size: 24rpx;
    font-weight: 700;
    display: flex;
    align-items: center;
}

.storeContainer .storeWrap .detailWrap .name text {
    background: #ff7200;
    border-radius: 4rpx;
    color: #fff;
    font-weight: 400;
    font-size: 20rpx;
    padding: 0rpx 8rpx;
    height: 24rpx;
    line-height: 24rpx;
}

.storeContainer .storeWrap .detailWrap .detailDescWrap {
    margin-top: 12rpx;
    display: flex;
    justify-content: space-between;
}

.storeContainer .storeWrap .detailWrap .detailDescWrap .detailDesc {
    width: 550rpx;
}

.storeContainer .storeWrap .detailWrap .detailDescWrap .detailDesc .tese {
    margin-top: 8rpx;
    width: 400rpx;
    padding: 4rpx 8rpx;
    box-sizing: border-box;
    background: #ffefe1;
    border-radius: 4rpx;
    color: #ff7200;
    font-size: 20rpx;
}

.storeContainer .storeWrap .detailWrap .detailDescWrap .detailDesc .time {
    margin-top: 12rpx;
    color: #696969;
    font-size: 24rpx;
}

.storeContainer .storeWrap .detailWrap .detailDescWrap .action {
    flex-shrink: 0;
    display: flex;
    flex-flow: column;
    justify-content: space-around;
}

.storeContainer .storeWrap .detailWrap .detailDescWrap .action .tel {
    display: flex;
    align-items: center;
    color: #2d2a2a;
    font-size: 22rpx;
}

.storeContainer .storeWrap .detailWrap .detailDescWrap .action .tel image {
    width: 44rpx;
    height: 44rpx;
    margin-right: 4rpx;
}