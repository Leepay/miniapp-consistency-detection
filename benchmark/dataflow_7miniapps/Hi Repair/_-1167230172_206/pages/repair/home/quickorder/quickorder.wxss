.quickorderContainer {
    padding: 0 20rpx 20rpx;
    box-sizing: border-box;
    width: 100%;
}

.quickorderContainer .quickorderWrap {
    padding: 20rpx;
    box-sizing: border-box;
    background: #fff;
    border-radius: 8rpx;
}

.quickorderContainer .quickorderWrap .title {
    color: #2d2a2a;
    font-size: 30rpx;
    font-weight: 700;
}

.quickorderContainer .quickorderWrap .descWrap {
    margin-top: 10rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.quickorderContainer .quickorderWrap .descWrap .desc {
    color: #696969;
    font-size: 24rpx;
}

.quickorderContainer .quickorderWrap .descWrap .order {
    display: flex;
    align-items: center;
    color: #2d2a2a;
    font-size: 22rpx;
}

.quickorderContainer .quickorderWrap .descWrap .order image {
    width: 44rpx;
    height: 44rpx;
}

.modal {
    position: fixed;
    z-index: 8;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background: rgba(0,0,0,.6);
}

.modal.zindex {
    z-index: 10;
}

.confirmQuickorder {
    position: fixed;
    top: 300rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 604rpx;
    height: 614rpx;
    z-index: 11;
}

.confirmQuickorder .close {
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    width: 30rpx;
    height: 30rpx;
    padding: 20rpx;
    z-index: 1;
}

.confirmQuickorder .tanchuang {
    width: 604rpx;
    height: 614rpx;
}

.confirmQuickorder .agree {
    position: absolute;
    bottom: 30rpx;
    left: 30rpx;
    width: 544rpx;
    height: 60rpx;
    background: #ff7200;
    border-radius: 8rpx;
    color: #fff;
    font-size: 24rpx;
    text-align: center;
    line-height: 60rpx;
    font-weight: 700;
}