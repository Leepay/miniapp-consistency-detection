<form bindsubmit="onAuth">
    <view class="item">
        <image class="img-item-icon" mode="aspectFit" src="../../images/ic_user.png"></image>
        <text class="item-title  ">姓名</text>
        <input class="item-input  " maxlength="10" name="userName" placeholder="请输入姓名" placeholderStyle="color:#323232"></input>
    </view>
    <view class="view-line"></view>
    <view class="view-blank-line"></view>
    <view class="item">
        <image class="img-item-icon" mode="aspectFit" src="../../images/ic_card_number.png"></image>
        <text class="item-title  ">储蓄卡号</text>
        <input class="item-input  " name="debitCardNumber" placeholder="请输入储蓄卡卡号" placeholderStyle="color:#323232" value="{{cardNumber}}"></input>
        <image bindtap="onClickScane" class="img-photo" mode="aspectFit" src="../../images/ic_take_photo.png"></image>
    </view>
    <view class="view-line"></view>
    <view class="item">
        <image class="img-item-icon" mode="aspectFit" src="../../images/ic_bank.png"></image>
        <text class="item-title  ">开户银行</text>
        <input class="item-input  " name="debitBankName" placeholder="请输入开户银行名称" placeholderStyle="color:#323232" value="{{debitBankName}}"></input>
    </view>
    <view class="view-blank-line"></view>
    <view class="item">
        <image class="img-item-icon" mode="aspectFit" src="../../images/ic_phone.png"></image>
        <text class="item-title  ">手机号</text>
        <input class="item-input  " name="debitPhone" placeholder="请输入银行预留手机号码" placeholderStyle="color:#323232"></input>
    </view>
    <view class="view-line"></view>
    <view style="height:50rpx;width:100%;"></view>
    <button class="btn-main " formType="submit"> 确定</button>
</form>
