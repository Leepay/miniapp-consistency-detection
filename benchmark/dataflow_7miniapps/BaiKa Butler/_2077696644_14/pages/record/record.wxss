.head {
    width: 100%;
    align-items: center;
    height: 159rpx;
    padding-top: 30rpx;
}

.head,.head-part {
    display: flex;
}

.head-part {
    height: 100%;
    flex-direction: column;
    flex: 1;
    border-radius: 10rpx;
    background: #e7edf3;
    margin-left: 22rpx;
    border: 1rpx solid #678fb5;
}

.head-left {
    background: #fff;
    color: #000;
    border: 1rpx solid #ccc;
}

.head-left-activity {
    background: #51c7c9;
    color: #fff;
    border: 1rpx solid #51c7c9;
}

.head-right {
    margin-left: 12rpx;
    background: #fff;
    color: #000;
    border: 1rpx solid #ccc;
}

.head-right-activity {
    margin-left: 12rpx;
    background: #706cfb;
    color: #fff;
    border: 1rpx solid #706cfb;
}

.head-part-title {
    font-size: 27rpx;
    margin-top: 23rpx;
}

.head-part-money,.head-part-title {
    margin-left: 23rpx;
    display: block;
    height: 30rpx;
    line-height: 30rpx;
}

.head-part-money {
    margin-top: 13rpx;
    font-size: 30rpx;
}

.head-part-bottom {
    display: flex;
    height: 25rpx;
    margin-left: 23rpx;
    margin-top: 20rpx;
    font-size: 22rpx;
    line-height: 25rpx;
}

.head-part-bottom-part {
    flex: 1;
}

.head-part-fail {
    background: #ac2828;
}

.head-part-fail,.head-part-success {
    margin-left: 9rpx;
    padding-left: 5rpx;
    padding-right: 5rpx;
    color: #fff;
}

.head-part-success {
    background: #699f4c;
}

.head-record {
    margin-left: 12rpx;
    margin-right: 22rpx;
    width: 84rpx;
    height: 159rpx;
    background: #7a81b5;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10rpx;
}

.head-record:active {
    background: #7080b0;
}

.btn-head-record {
    font-size: 27rpx;
    color: #fff;
    display: inline-block;
    text-align: center;
}

.menu {
    margin-top: 38rpx;
    font-size: 27rpx;
    line-height: 27rpx;
}

.item-menu,.menu {
    display: flex;
    align-items: center;
}

.item-menu {
    margin-left: 54rpx;
    height: 40rpx;
    position: relative;
}

.item-menu-options {
    position: absolute;
    left: 0;
    right: 0;
    top: 50rpx;
    display: flex;
    z-index: 50;
    flex-direction: column;
    background-image: url("data:image/png;base64,");
    background-size: 100% 100%;
}

.item-menu-options-content {
    width: 100%;
    display: block;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    font-size: 27rpx;
}

.ic-chose {
    margin-left: 20rpx;
    width: 17rpx;
    height: 17rpx;
}

.ic-chose-type {
    width: 12rpx;
    margin-left: 12rpx;
    height: 8rpx;
    margin-right: 20rpx;
}

.bank-title {
    margin-left: 15rpx;
}

.menu-line {
    height: 23rpx;
    border-bottom: 1rpx solid #ccc;
}

.item {
    margin-top: 18rpx;
    width: 100%;
    height: 128rpx;
    margin-bottom: 10rpx;
}

.item,.item-bank {
    display: flex;
    align-items: center;
}

.item-bank {
    width: 209rpx;
    height: 100%;
    background: #d8d8d8;
}

.item-bank-border {
    width: 63rpx;
    height: 63rpx;
    background: #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 24rpx;
}

.item-ic-bank {
    width: 44rpx;
    height: 44rpx;
}

.item-bank-info {
    display: flex;
    flex-direction: column;
    margin-left: 13rpx;
    font-size: 24rpx;
}

.item-bank-name,.item-bank-num {
    display: block;
    line-height: 24rpx;
    height: 24rpx;
}

.item-bank-name {
    margin-top: 10rpx;
}

.item-body {
    flex: 1;
    height: 100%;
    background: #fff;
    position: relative;
}

.item-money {
    top: 34rpx;
    font-size: 28rpx;
    line-height: 30rpx;
}

.item-commission,.item-money {
    display: block;
    position: absolute;
    left: 35rpx;
    color: #000;
    height: 30rpx;
}

.item-commission {
    top: 80rpx;
    font-size: 23rpx;
    line-height: 25rpx;
}

.item-state-info {
    display: flex;
    align-items: center;
    position: absolute;
    top: 30rpx;
    right: 60rpx;
}

.item-ic-state {
    width: 37rpx;
    height: 37rpx;
}

.item-state {
    margin-left: 14rpx;
    font-size: 26rpx;
}

.item-time {
    font-size: 23rpx;
    color: #313131;
    position: absolute;
    bottom: 20rpx;
    right: 56rpx;
}

.item-error-tip {
    font-size: 25rpx;
    display: inline-block;
    height: 40rpx;
    line-height: 40rpx;
    margin-right: 20rpx;
    width: 60rpx;
    text-align: center;
    color: #404040;
    background: #e9e9e9;
    border-radius: 5rpx;
}

.item-comment {
    width: 81rpx;
    height: 100%;
    flex-direction: column;
}

.item-comment,.item-comment-part {
    display: flex;
}

.item-comment-part {
    flex: 1;
    width: 100%;
    align-items: center;
    justify-content: center;
    background: #ebebeb;
}

.item-comment-part:active {
    background: #cbcbcb;
}

.ic-item-comment {
    width: 25rpx;
    height: 25rpx;
}

.mask {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0,0,0,.3);
    z-index: 100;
    align-items: center;
    justify-content: center;
}

.mask,.mask-dialog {
    display: flex;
}

.mask-dialog {
    width: 80%;
    min-height: 150rpx;
    flex-direction: column;
    background: #fff;
    border-radius: 10rpx;
}

.mask-title {
    font-size: 30rpx;
    height: 80rpx;
    display: block;
    line-height: 80rpx;
    text-align: center;
    border-bottom: 1rpx solid #efefef;
}

.mask-body {
    padding: 20rpx;
    font-size: 24rpx;
    flex-direction: column;
}

.mask-bank,.mask-body {
    display: flex;
    align-items: center;
}

.mask-bank {
    width: 100%;
    height: 40rpx;
    justify-content: center;
}

.mask-bank .ic-bank {
    width: 35rpx;
    height: 35rpx;
}

.mask-bank .name {
    font-size: 26rpx;
    margin-left: 15rpx;
}

.mask-reason {
    width: 90%;
    margin-top: 10rpx;
    display: block;
    font-size: 25rpx;
    color: #484848;
    line-height: 35rpx;
    text-align: center;
}

.mask-bottom {
    height: 80rpx;
    display: flex;
    border-top: 1rpx solid #efefef;
}

.btn-mask {
    flex: 1;
    min-height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    background: #fff;
}

.mask-bottom-line {
    height: 100%;
    width: 1rpx;
    background: #efefef;
}