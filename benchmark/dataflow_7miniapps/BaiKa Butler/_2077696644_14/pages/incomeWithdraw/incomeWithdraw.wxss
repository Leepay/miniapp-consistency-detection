.body {
    width: 694rpx;
    margin-left: 28rpx;
    margin-top: 40rpx;
    height: 500rpx;
    background: #fff;
    border-radius: 10rpx;
}

.title {
    font-size: 28rpx;
    height: 28rpx;
    margin-left: 63rpx;
    line-height: 28rpx;
}

.title-tip {
    font-size: 26rpx;
    color: #aaa;
    margin-left: 15rpx;
}

.input-body {
    margin: 50rpx 63rpx 0;
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #ddd;
}

.symbol {
    font-size: 68rpx;
}

.input-money {
    margin-left: 33rpx;
    font-size: 35rpx;
    flex: 1;
    height: 100rpx;
    line-height: 100rpx;
    letter-spacing: 3rpx;
}

.could-withdraw-tip {
    display: block;
    margin-left: 63rpx;
    margin-top: 45rpx;
    color: #8c8c8c;
    letter-spacing: 3rpx;
    font-size: 24rpx;
}

.body-bottom {
    width: 570rpx;
    height: 92rpx;
    margin-top: 70rpx;
    margin-left: 63rpx;
    position: relative;
}

.body-bottom-position {
    width: 100%;
}

.btn-withdraw {
    background: transparent;
    border-radius: 46rpx;
}

.btn-withdraw:active {
    background: rgba(0,0,0,.1);
}

.bottom {
    margin-top: 73rpx;
    margin-left: 57rpx;
    margin-right: 57rpx;
    display: flex;
    align-items: flex-start;
    position: relative;
}

.bottom-tip-ic {
    width: 35rpx;
    height: 35rpx;
}

.bottom-tip {
    margin-left: 15rpx;
    display: flex;
    flex-direction: column;
    flex: 1;
    font-size: 26rpx;
    line-height: 35rpx;
    letter-spacing: 3rpx;
    color: #5e5e5e;
}