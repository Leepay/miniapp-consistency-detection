.body {
    height: 100vh;
    position: relative;
    flex-flow: column;
    display: flex;
}

.body-img {
    flex: 1;
    width: 100%;
}

.item-slide-image {
    width: 100%;
    height: 100%;
}

.scroll-body {
    margin-top: 20rpx;
    width: 750rpx;
    height: 128rpx;
    display: flex;
    white-space: nowrap;
}

.item-picture {
    height: 120rpx;
    width: 100rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
    display: inline-block;
}

.item-picture-check {
    background: #ddd;
}

.item {
    width: 150rpx;
    height: 128rpx;
    display: inline-block;
}

.bottom {
    margin-top: 20rpx;
    display: flex;
    width: 100%;
    height: 101rpx;
    align-items: center;
    justify-content: center;
}

.btn-main {
    margin: 0;
    color: #fff;
}

.save-tip {
    display: block;
    z-index: 30;
    position: absolute;
    top: 400rpx;
    width: 100%;
    font-size: 25rpx;
    text-align: center;
    color: red;
}