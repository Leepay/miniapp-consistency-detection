.head {
    height: 155rpx;
    display: flex;
    align-items: center;
    background: #fff;
}

.head-info {
    flex: 1;
    display: inline-flex;
    margin-left: 48rpx;
    flex-direction: column;
}

.head-title {
    font-size: 29rpx;
    color: #000;
}

.head-number-info {
    display: inline-flex;
    margin-top: 15rpx;
    font-size: 23rpx;
    line-height: 23rpx;
}

.head-number-tip {
    color: #000;
}

.head-insurance-number {
    color: #0c44f9;
    margin-left: 10rpx;
}

.btn-copy {
    margin-left: 20rpx;
    color: #333;
}

.ic-insturance {
    width: 115rpx;
    height: 56rpx;
    margin-right: 40rpx;
}

.view-blank-line {
    height: 24rpx;
}

.body {
    position: absolute;
    top: 180rpx;
    bottom: 0;
    width: 100%;
}

.scroll-body {
    height: 100%;
    width: 100%;
}

.item {
    display: flex;
    font-size: 26rpx;
    align-items: center;
    height: 91rpx;
    position: relative;
    background: #fff;
}

.img-item-icon {
    display: inline-block;
    width: 30rpx;
    height: 30rpx;
    margin-left: 40rpx;
}

.item-body {
    display: inline-flex;
    align-items: center;
    height: 100%;
    width: 650rpx;
    position: relative;
}

.item-title {
    margin-left: 20rpx;
    color: #6e6e6e;
}

.item-input,.item-title {
    display: inline-block;
    height: 100%;
    line-height: 91rpx;
}

.item-input {
    flex: 1;
    text-align: right;
    color: #000;
}

.view-line {
    width: 100%;
    height: 1rpx;
    background: #dcdcdc;
}

.item-add {
    height: 103rpx;
}

.item-add-title {
    color: #000;
    flex: 1;
    line-height: 103rpx;
}

.item-num-body {
    display: inline-flex;
    align-items: center;
    height: 100%;
}

.ic-item-num {
    display: inline-block;
    width: 30rpx;
    padding: 20rpx;
    height: 30rpx;
}

.item-add-body {
    width: 670rpx;
}

.ic-importance {
    width: 41rpx;
    height: 41rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 10;
}

.bottom {
    border-top: 1rpx solid #efefef;
    display: flex;
    position: fixed;
    bottom: 0;
    height: 100rpx;
    line-height: 100rpx;
    width: 100%;
    z-index: 30;
    background: #fff;
}

.bottom-tip {
    margin-left: 63rpx;
}

.btn-pay {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 239rpx;
    color: #fff;
    font-size: 36rpx;
    height: 100rpx;
    background: #ffb204;
    border-radius: 0rpx;
}

.btn-pay:active {
    background: #f0b204;
}

.btn-pay::after {
    border: none;
}

.ic-question {
    z-index: 80;
    position: fixed;
    top: 0;
    right: 0;
    padding: 10rpx 10rpx 150rpx 100rpx;
    width: 33rpx;
    height: 33rpx;
}