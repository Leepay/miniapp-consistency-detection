<view class="head">
    <view class="head-info">
        <text class="head-title">银行账户资金安全险</text>
        <view class="head-number-info">
            <text class="head-number-tip">保单号:</text>
            <text class="head-insurance-number">{{insuranceInfo.policyNo}}</text>
            <text bindtap="onCopy" class="btn-copy">点击复制</text>
        </view>
    </view>
    <image class="ic-insturance" src="../../images/ic_insurance.png"></image>
</view>
<view class="view-blank-line"></view>
<view class="body">
    <scroll-view class="scroll-body" scrollY="true">
        <view class="item  ">
            <image class="img-item-icon" mode="aspectFit" src="../../images/ic_bank.png"></image>
            <view class="item-body">
                <text class="item-title ">承保公司</text>
                <text class="item-input">{{insuranceInfo.company}}</text>
            </view>
        </view>
        <view class="view-line"></view>
        <view class="item  ">
            <image class="img-item-icon" mode="aspectFit" src="../../images/ic_user.png"></image>
            <view class="item-body">
                <text class="item-title ">被保险人</text>
                <text class="item-input ">{{insuranceInfo.name}}</text>
            </view>
        </view>
        <view class="view-line"></view>
        <view class="item  ">
            <image class="img-item-icon" mode="aspectFit" src="../../images/ic_credit.png"></image>
            <view class="item-body">
                <text class="item-title ">保障额度</text>
                <text class="item-input main-color ">{{insuranceInfo.insuranceAmount}}元</text>
            </view>
        </view>
        <view class="view-line"></view>
        <view class="item  ">
            <image class="img-item-icon" mode="aspectFit" src="../../images/ic_date.png"></image>
            <view class="item-body">
                <text class="item-title ">开始日期</text>
                <text class="item-input ">{{insuranceInfo.startDate}}</text>
            </view>
        </view>
        <view class="view-line"></view>
        <view class="item  ">
            <image class="img-item-icon" mode="aspectFit" src="../../images/ic_date.png"></image>
            <view class="item-body">
                <text class="item-title ">结束日期</text>
                <text class="item-input ">{{insuranceInfo.endDate}}</text>
            </view>
        </view>
        <view class="view-line"></view>
        <view class="item  ">
            <image class="img-item-icon" mode="aspectFit" src="../../images/ic_phone.png"></image>
            <view class="item-body">
                <text class="item-title ">查保电话</text>
                <text class="item-input ">{{insuranceInfo.companyPhone}}</text>
            </view>
        </view>
        <view class="view-blank-line"></view>
        <view class="item  ">
            <image class="img-item-icon" mode="aspectFit" src="../../images/ic_insurance_type.png"></image>
            <view class="item-body">
                <text class="item-title ">保单类型</text>
                <text class="item-input ">{{insuranceInfo.insuranceType}}</text>
            </view>
        </view>
        <view class="view-line"></view>
        <view class="item  ">
            <image class="img-item-icon" mode="aspectFit" src="../../images/ic_insurance_day.png"></image>
            <view class="item-body">
                <text class="item-title ">已保障天数</text>
                <text class="item-input ">{{insuranceInfo.safeguardDays}}天</text>
            </view>
        </view>
        <view class="view-blank-line"></view>
    </scroll-view>
</view>
<image bindtap="onShowRule" class="ic-question" src="../../images/ic_insurance_question.png"></image>
