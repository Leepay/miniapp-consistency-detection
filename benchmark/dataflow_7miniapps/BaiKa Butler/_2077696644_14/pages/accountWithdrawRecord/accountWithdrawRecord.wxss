.item {
    margin-top: 10rpx;
    width: 713rpx;
    height: 245rpx;
    margin-left: 19rpx;
    position: relative;
}

.item-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
}

.item-bank,.item-record {
    display: flex;
    align-items: center;
}

.item-bank {
    flex-direction: column;
    width: 145rpx;
    height: 100%;
    margin-left: 8rpx;
}

.item-bank-ic {
    display: inline-block;
    width: 52rpx;
    margin-top: 58rpx;
    height: 52rpx;
}

.item-bank-number {
    font-size: 22rpx;
    margin-top: 31rpx;
    color: #fff;
}

.item-bank-name {
    font-size: 22rpx;
    margin-top: 3rpx;
    color: #fff;
}

.item-info {
    flex: 1;
    display: flex;
    height: 100%;
    flex-direction: column;
}

.item-money {
    margin-top: 77rpx;
    margin-left: 35rpx;
    font-size: 35rpx;
    letter-spacing: 2rpx;
    color: #000;
}

.item-time {
    margin-top: 25rpx;
    margin-left: 37rpx;
    font-size: 26rpx;
    letter-spacing: 2rpx;
    color: #8d8d8d;
}

.item-statu {
    display: flex;
    align-items: center;
    height: 100%;
    position: relative;
    width: 243rpx;
}

.item-btn-reason {
    width: 101rpx;
    height: 35rpx;
    position: absolute;
    right: 15rpx;
    font-size: 18rpx;
    bottom: 20rpx;
}

.item-statu-ic {
    display: inline-block;
    width: 35rpx;
    height: 35rpx;
}

.item-statu-tip {
    font-size: 32rpx;
    letter-spacing: 3rpx;
    margin-left: 16rpx;
}

.item-statu-success {
    color: #699f4c;
}

.item-statu-withdrawing {
    color: #f3ae00;
}

.item-statu-error {
    color: #d14d58;
}

.item-repay-detail {
    display: flex;
    align-items: center;
    height: 60rpx;
}

.item-repay-money {
    font-size: 26rpx;
    color: #323232;
    width: 160rpx;
}

.item-repay-date,.item-repay-money {
    margin-left: 15rpx;
    display: inline-block;
}

.item-repay-date {
    width: 120rpx;
    color: #8d8d8d;
    font-size: 24rpx;
}

.item-repay-statu {
    display: inline-block;
    margin-right: 15rpx;
    flex: 1;
    font-size: 26rpx;
    color: #323232;
}