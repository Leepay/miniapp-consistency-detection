.item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 28rpx;
    margin-top: 30rpx;
    padding: 30rpx 60rpx;
    background: #fff;
}

.item text {
    margin-right: 50rpx;
}

.item button {
    font-size: 26rpx;
    margin: 0;
    padding: 0 30rpx;
    background: #ededed;
    border: 1px solid #b6b6b6;
    border-radius: 0;
    line-height: 56rpx;
}