.activate-customer-head {
    height: 107rpx;
    flex-direction: column;
    margin-bottom: 30rpx;
    background: #fff;
    box-shadow: 0 0 30rpx -10rpx var(--theme-color);
}

.activate-customer-head,.head-item {
    width: 100%;
    display: flex;
    align-items: center;
}

.head-item {
    height: 87rpx;
    line-height: 87rpx;
}

.head-title {
    margin-left: 61rpx;
    font-size: 27rpx;
    color: #000;
    margin-right: 72rpx;
}

.head-radio-group {
    font-size: 26rpx;
    color: #000;
}

.item-radio {
    display: inline-block;
    width: 200rpx;
    height: 100%;
}

radio .wx-radio-input {
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
}

radio .wx-radio-input.wx-radio-input-checked {
    border: none;
    background: red;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
}

radio .wx-radio-input.wx-radio-input-checked::before {
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    background: transparent;
    line-height: 40rpx;
    transform: translate(-50%,-50%) scale(1);
}

.item-radio-name {
    line-height: 67rpx;
}

.num-body {
    align-items: center;
    display: flex;
    margin-top: 16rpx;
}

.ic-num {
    margin-left: 28rpx;
    width: 15rpx;
    height: 27rpx;
}

.num {
    font-size: 29rpx;
    color: #5d5d5d;
    margin-left: 17rpx;
}

.body {
    position: absolute;
    bottom: 0rpx;
    top: 180rpx;
    left: 0;
    right: 0;
}

.scroll-body {
    width: 100%;
    height: 100%;
}

.item {
    margin-bottom: 30rpx;
    margin-left: 28rpx;
    margin-right: 28rpx;
    flex-direction: column;
}

.item,.item-customer-info {
    display: flex;
}

.item-customer-info {
    width: 100%;
    height: 145rpx;
    background: #fff;
    align-items: center;
}

.item-customer-head {
    display: inline-block;
    width: 68rpx;
    height: 68rpx;
    border-radius: 50%;
    margin-left: 29rpx;
}

.item-customer-body {
    margin-left: 30rpx;
    flex: 1;
    display: flex;
    flex-direction: column;
}

.item-customer-phone {
    display: flex;
    align-items: center;
}

.item-ic-phone {
    width: 28rpx;
    height: 28rpx;
}

.item-phone-num {
    margin-left: 13rpx;
    font-size: 30rpx;
    display: block;
    height: 50rpx;
    line-height: 50rpx;
    color: #1b5cc0;
    border-bottom: 1rpx solid #ddd;
}

.item-customer-time {
    font-size: 24rpx;
    color: #8d8d8d;
    margin-top: 5rpx;
    letter-spacing: 1rpx;
}

.item-ic-member {
    display: inline-block;
    width: 39rpx;
    height: 39rpx;
}

.item-member {
    font-size: 30rpx;
    margin-left: 16rpx;
    letter-spacing: 2rpx;
    color: #000;
    margin-right: 15rpx;
}

.item-affiliation-info {
    width: 100%;
    height: 50rpx;
    display: flex;
    align-items: center;
    background: #e3e3e3;
}

.item-affiliation-tip {
    font-size: 26rpx;
    margin-left: 29rpx;
    letter-spacing: 2rpx;
    color: #454444;
}

.item-affilation-phone {
    flex: 1;
    font-size: 26rpx;
    margin-left: 35rpx;
    color: #000;
}