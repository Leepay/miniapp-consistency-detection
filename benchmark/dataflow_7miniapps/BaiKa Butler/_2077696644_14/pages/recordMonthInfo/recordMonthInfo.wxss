.head {
    height: 82rpx;
    display: flex;
    align-items: center;
    background: #fff;
}

.head-month {
    display: inline-block;
    width: 80rpx;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
    font-size: 27rpx;
    background: #f6fbff;
    border-radius: 5rpx;
    margin-left: 43rpx;
}

.head-tip {
    font-size: 27rpx;
    color: #202020;
    margin-left: 70rpx;
}

.head-month-date {
    line-height: 40rpx;
    width: 72rpx;
    display: inline-block;
    height: 40rpx;
    border-bottom: 1rpx solid #ccc;
}

.head-month-date,.head-to {
    margin-left: 17rpx;
    font-size: 27rpx;
}

.btn-update-date {
    display: block;
    width: 128rpx;
    height: 42rpx;
    font-size: 23rpx;
    color: #fff;
    text-align: center;
    line-height: 42rpx;
    border-radius: 5rpx;
    margin-left: 44rpx;
}

.head-line {
    height: 1rpx;
    width: 100%;
    background: #e1e1e1;
}

.head-info {
    background: #fff;
    height: 82rpx;
    display: flex;
    align-items: center;
}

.head-info-part {
    flex: 1;
    display: block;
    text-align: center;
    line-height: 82rpx;
    font-size: 28rpx;
    color: #505050;
}

.head-info-line {
    width: 1rpx;
    height: 100%;
    background: #e1e1e1;
}

.menu {
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
}

.item-menu,.menu {
    display: flex;
    align-items: center;
}

.item-menu {
    height: 30rpx;
}

.item-menu-title {
    font-size: 27rpx;
    margin-left: 15rpx;
    color: #343434;
}

.ic-item-menu {
    margin-left: 10rpx;
    margin-right: 10rpx;
    width: 12rpx;
    height: 8rpx;
}

.item-menu-picker {
    margin-left: 35rpx;
    display: flex;
    align-items: center;
    height: 100%;
    position: relative;
}

.ic-menu-chose {
    margin-left: 20rpx;
    width: 17rpx;
    height: 17rpx;
}

.item-menu-options {
    position: absolute;
    left: 0;
    right: 0;
    top: 50rpx;
    display: flex;
    z-index: 50;
    flex-direction: column;
    background-image: url("data:image/png;base64,");
    background-size: 100% 100%;
}

.item-menu-options-content {
    width: 100%;
    display: block;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    font-size: 27rpx;
}

.item {
    height: 102rpx;
    width: 100%;
    align-items: center;
    display: flex;
    background: #fff;
    margin-bottom: 10rpx;
    position: relative;
    border-bottom: 1rpx solid #e1e1e1;
}

.item-amount {
    margin-left: 43rpx;
    font-size: 32rpx;
    color: #000;
    display: inline-block;
    width: 160rpx;
}

.item-time {
    font-size: 24rpx;
    color: #727272;
    margin-left: 30rpx;
}

.item-ic-statu {
    width: 24rpx;
    height: 24rpx;
}

.item-statu {
    font-size: 28rpx;
    margin-right: 15rpx;
    margin-left: 12rpx;
}

.item-cost-success {
    color: #3997f1;
}

.item-repay-success {
    color: #48a815;
}

.item-repay-detail {
    display: flex;
    align-items: center;
    height: 60rpx;
}

.item-repay-money {
    margin-left: 15rpx;
    font-size: 26rpx;
    display: inline-block;
    color: #323232;
    width: 160rpx;
}

.item-repay-date {
    display: inline-block;
    flex: 1;
    margin-left: 10rpx;
    color: #8d8d8d;
    font-size: 24rpx;
}

.item-repay-statu {
    width: 120rpx;
    display: inline-block;
    margin-right: 15rpx;
    font-size: 26rpx;
    color: #323232;
}

.item-reson {
    width: 80rpx;
    height: 28rpx;
    line-height: 28rpx;
    font-size: 16rpx;
    position: absolute;
    left: 0;
    top: 0;
}

.item-comment {
    width: 81rpx;
    height: 100%;
    flex-direction: column;
}

.item-comment,.item-comment-part {
    display: flex;
}

.item-comment-part {
    flex: 1;
    width: 100%;
    align-items: center;
    justify-content: center;
    background: #ebebeb;
}

.item-comment-part:active {
    background: #cbcbcb;
}

.ic-item-comment {
    width: 25rpx;
    height: 25rpx;
}