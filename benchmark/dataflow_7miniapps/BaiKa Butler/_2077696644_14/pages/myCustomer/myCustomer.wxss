.head-body {
    display: flex;
    height: 200rpx;
    background: #fff;
    box-shadow: 0 0 30rpx -10rpx var(--theme-color);
}

.head-body,.head-half {
    align-items: center;
}

.head-half {
    display: inline-flex;
    flex-direction: column;
    width: 50%;
}

.head-half:first-child {
    border-right: 1rpx solid #ddd;
}

.head-number {
    font-size: 50rpx;
    letter-spacing: 5rpx;
    display: block;
    line-height: 50rpx;
    height: 50rpx;
}

.head-tip {
    margin-top: 20rpx;
    font-size: 24rpx;
    color: #8d8d8d;
    display: block;
    height: 24rpx;
    line-height: 24rpx;
}

.title-icon {
    display: inline-block;
    width: 13rpx;
    height: 28rpx;
    margin-left: 63rpx;
}

.title-item {
    height: 96rpx;
    line-height: 96rpx;
    display: flex;
    align-items: center;
}

.title-text {
    margin-left: 20rpx;
    font-size: 28rpx;
    color: #000;
    letter-spacing: 3rpx;
}

.body {
    position: absolute;
    bottom: 0rpx;
    top: 296rpx;
    left: 0;
    right: 0;
}

.scroll-body {
    width: 100%;
    height: 100%;
}

.item {
    margin-top: 30rpx;
    margin-left: 28rpx;
    margin-right: 28rpx;
    height: 218rpx;
    flex-direction: column;
}

.item,.item-customer-info {
    display: flex;
}

.item-customer-info {
    width: 100%;
    height: 145rpx;
    background: #fff;
    align-items: center;
}

.item-customer-head {
    display: inline-block;
    width: 80rpx;
    border-radius: 50%;
    height: 80rpx;
    margin-left: 20rpx;
}

.item-customer-body {
    flex: 1;
    display: flex;
    margin-left: 20rpx;
    flex-direction: column;
}

.item-customer-phone {
    display: flex;
    align-items: center;
}

.item-ic-phone {
    width: 28rpx;
    height: 28rpx;
}

.item-phone-num {
    font-size: 32rpx;
    margin-left: 13rpx;
    display: block;
    height: 50rpx;
    line-height: 50rpx;
    color: #1b5cc0;
    border-bottom: 1rpx solid #ddd;
}

.item-customer-time {
    font-size: 24rpx;
    color: #8d8d8d;
    margin-top: 5rpx;
    letter-spacing: 1rpx;
}

.item-ic-member {
    display: inline-block;
    width: 39rpx;
    height: 39rpx;
}

.item-member {
    font-size: 28rpx;
    margin-left: 16rpx;
    letter-spacing: 2rpx;
    color: #000;
    margin-right: 15rpx;
}

.item-affiliation-info {
    width: 100%;
    flex: 1;
    display: flex;
    align-items: center;
    background: #e3e3e3;
}

.item-affiliation-tip {
    font-size: 26rpx;
    margin-left: 29rpx;
    letter-spacing: 2rpx;
    color: #454444;
}

.item-affilation-phone {
    flex: 1;
    font-size: 26rpx;
    margin-left: 35rpx;
    color: #000;
}