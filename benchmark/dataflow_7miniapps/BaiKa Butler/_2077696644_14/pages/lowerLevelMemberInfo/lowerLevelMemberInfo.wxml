<view class="head main-background"></view>
<view class="body">
    <view class="item">
        <text class="item-title">手机号</text>
        <text class="item-body">{{userBeen.phone}}</text>
    </view>
    <view class="item">
        <text class="item-title">会员级别</text>
        <text class="item-body">{{userBeen.memberName}}</text>
    </view>
    <view class="item">
        <text class="item-title">昨日新增用户</text>
        <text class="item-body">{{userBeen.yestodayUser}}个</text>
    </view>
    <view class="item">
        <text class="item-title">直接用户</text>
        <text class="item-body">{{userBeen.directUserSum}}个</text>
    </view>
    <view class="item">
        <text class="item-title">间接用户</text>
        <text class="item-body">{{userBeen.indirectUser}}个</text>
    </view>
    <view class="item">
        <text class="item-title">总收益</text>
        <text class="item-body">￥{{userBeen.rewardAmount}}</text>
    </view>
    <view class="item-blank"></view>
    <view class="item">
        <text class="item-title">备注</text>
        <text bindtap="onRemark" class="btn-remark  main-color">修改</text>
    </view>
    <textarea autoHeight bindinput="onInputRemark" class="input-remark" placeholder="请输入备注" value="{{userBeen.remark}}"></textarea>
</view>
