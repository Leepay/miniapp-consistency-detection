.user-statistics-head {
    position: relative;
    align-items: center;
    flex-direction: column;
    margin-bottom: 30rpx;
    background: #fff;
    box-shadow: 0 0 30rpx -10rpx var(--theme-color);
}

.head-customer-num,.user-statistics-head {
    width: 100%;
    display: flex;
}

.head-customer-num {
    height: 139rpx;
}

.head-customer-num:first-child {
    border-bottom: 2rpx dashed #ccc;
}

.head-part {
    display: flex;
    flex: 1;
    height: 100%;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.head-part:first-child {
    border-right: 2rpx dashed #ccc;
}

.head-num {
    font-size: 45rpx;
    letter-spacing: 2rpx;
}

.head-customer-text {
    font-size: 23rpx;
    margin-top: 5rpx;
    letter-spacing: 2rpx;
    color: #5f5f5f;
}

.item-trade {
    height: 84rpx;
    display: flex;
    align-items: center;
    line-height: 84rpx;
    font-size: 28rpx;
    background: #fff;
}

.item-trade-title {
    color: #5f5f5f;
    margin-left: 58rpx;
}

.item-trade-num {
    display: block;
    flex: 1;
    text-align: right;
    color: #000;
    margin-right: 58rpx;
}

.item-trade-line {
    width: 100%;
    height: 1px;
    background: #f2f2f2;
}

.btn-lower-level {
    width: 522rpx;
    height: 85rpx;
    margin-top: 71rpx;
    margin-left: 113rpx;
}