.body {
    margin-top: 50rpx;
    margin-right: 30rpx;
}

.body,.name {
    margin-left: 30rpx;
}

.name {
    margin-bottom: 20rpx;
}

.item-modal {
    display: flex;
    align-items: center;
    height: 80rpx;
    background: #fff;
    border-radius: 40rpx;
    margin: 0rpx 10rpx 20rpx;
}

.item-modal-input-code {
    display: block;
    width: 100%;
    padding-left: 40rpx;
    text-align: left;
}

.btn-send-sms {
    display: inline-block;
    width: 140rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 25rpx;
    background: transparent;
    min-height: 50rpx;
}

.btn-send-sms::after {
    border: none;
}

.tips {
    font-size: 24rpx;
    margin: 80rpx 50rpx 0;
    display: block;
}