.head {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 120rpx;
}

.img-head {
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
}

.head-phone {
    font-size: 32rpx;
    margin-top: 25rpx;
    color: #fff;
}

.btn-login {
    width: 176rpx;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 32rpx;
    text-align: center;
    border-radius: 10rpx;
    background: #fff;
    box-shadow: 5rpx 5rpx 5rpx hsla(0,0%,100%,.2);
}

.btn-get-user {
    position: absolute;
    right: 0;
    top: 250rpx;
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    padding: 0rpx;
    font-size: 24rpx;
    border-radius: 25rpx 0 0 25rpx;
    background: #fff;
}

.me-menu {
    margin: -60rpx 50rpx 50rpx;
    padding: 20rpx 0;
    display: flex;
    background: #fff;
    border-radius: 10rpx;
    box-shadow: 0 0 30rpx -10rpx var(--theme-color);
}

.menu-part {
    width: 50%;
    text-align: center;
}

.menu-part:first-child {
    border-right: 2rpx solid #ccc;
}

.menu-title {
    font-size: 24rpx;
    color: #5f5f5f;
}

.menu-number {
    margin-top: 5rpx;
    font-size: 34rpx;
    color: #000;
    letter-spacing: 3rpx;
}

.item {
    position: relative;
    height: 85rpx;
    background: #fff;
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
}

.item:active {
    opacity: .5;
}

.item-tip {
    position: absolute;
    right: 100rpx;
    font-size: 25rpx;
}

.img-item-icon {
    display: inline-block;
    height: 34rpx;
    width: 34rpx;
    margin-left: 46rpx;
    margin-right: 43rpx;
}

.item-title {
    display: inline-block;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 26rpx;
    border: 0rpx solid transparent;
    background: #fff;
}

.ic-arrow-right {
    position: absolute;
    right: 55rpx;
    top: 35rpx;
}

.region-body {
    text-align: center;
    font-size: 28rpx;
    line-height: 40rpx;
}

.region-address {
    color: #e20d0d;
    margin-left: 20rpx;
    border-bottom: 1rpx solid #3d3d3d;
}