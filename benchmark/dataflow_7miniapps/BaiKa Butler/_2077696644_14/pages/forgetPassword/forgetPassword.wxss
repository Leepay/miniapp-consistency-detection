page {
    background: #fff;
}

.img-head {
    display: block;
    width: 100%;
    height: 450rpx;
}

.navigateBack {
    position: absolute;
    top: 70rpx;
    left: 30rpx;
    width: 20rpx;
    height: 20rpx;
    border-color: #fff;
    border-style: none none solid solid;
    border-width: 2px;
    transform: rotate(45deg);
}

.tabs {
    display: flex;
    margin: 30rpx 0 90rpx;
    font-size: 34rpx;
    color: #a9a9a9;
    justify-content: space-around;
}

.tabs .main-color::after {
    content: "";
    display: block;
    margin-top: 6rpx;
    border-bottom: 2px solid var(--theme-color);
}

.item {
    margin: 0 95rpx;
    height: 110rpx;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #c7c7c7;
}

.item image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 30rpx;
}

.item input {
    font-size: 28rpx;
}

.btn-sms-code {
    width: 160rpx;
    padding: 0rpx;
    font-size: 23rpx;
    background: transparent;
}

.bottom {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 70rpx;
    flex-direction: column;
}

.forgetPassword {
    font-size: 24rpx;
    text-align: right;
    margin: 30rpx 95rpx 0;
}

.img-head {
    margin-bottom: 90rpx;
}