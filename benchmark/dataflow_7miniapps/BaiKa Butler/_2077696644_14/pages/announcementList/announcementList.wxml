<view class="item" wx:for="{{announcementList}}" wx:for-index="idx">
    <text class="item-time">{{item.time}}</text>
    <view class="item-body">
        <view class="item-body-title">
            <image class="item-ic-notification" src="../../images/ic_notification.png"></image>
            <text class="item-notification-title">{{item.title}}</text>
        </view>
        <text class="item-content">{{item.content}}</text>
    </view>
</view>
<view style="height:100rpx;with:100%;"></view>
