page {
    display: flex;
    flex-direction: column;
}

.total-money {
    font-size: 26rpx;
    display: inline-block;
    margin-left: 77rpx;
    margin-top: 40rpx;
    line-height: 26rpx;
    color: #5d5d5d;
    letter-spacing: 3rpx;
}

.body {
    width: 100%;
    flex: 1;
}

.scroll-body {
    width: 100%;
    height: 100%;
}

.item {
    margin-top: 24rpx;
    width: 695rpx;
    margin-left: 28rpx;
    background: #fff;
    border-radius: 10rpx;
}

.item-success {
    display: flex;
    width: 100%;
    height: 158rpx;
    align-items: center;
}

.item-success-body {
    width: 546rpx;
    height: 100%;
}

.item-success-body-statue {
    display: flex;
    align-items: center;
    height: 35rpx;
    margin-left: 50rpx;
    margin-top: 42rpx;
}

.item-success-ic {
    display: inline-block;
    width: 35rpx;
    height: 35rpx;
}

.item-amount {
    display: inline-block;
    width: 150rpx;
    line-height: 158rpx;
    font-size: 36rpx;
    letter-spacing: 6rpx;
}

.item-time {
    display: inline-block;
    font-size: 24rpx;
    margin-left: 99rpx;
    color: #8d8d8d;
    margin-top: 25rpx;
}

.item-success-color {
    color: #699f4c;
}

.item-error-color {
    color: #9f4c4c;
}

.item-statue {
    display: inline-block;
    margin-left: 16rpx;
    height: 30rpx;
    line-height: 30rpx;
    font-size: 30rpx;
}

.item-error {
    padding-bottom: 19rpx;
    background: #d9d9d9;
    display: flex;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}

.item-tip-ic {
    display: inline-block;
    margin-left: 55rpx;
    margin-top: 18rpx;
    width: 27rpx;
    height: 27rpx;
}

.item-error-tip {
    display: inline-block;
    font-size: 26rpx;
    height: 26rpx;
    margin-left: 19rpx;
    margin-top: 19rpx;
    margin-right: 39rpx;
    line-height: 26rpx;
    color: #323232;
    letter-spacing: 3rpx;
}