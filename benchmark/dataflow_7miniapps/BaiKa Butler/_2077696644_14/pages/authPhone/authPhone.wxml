<text class="title">验证原先手机号</text>
<text class="phone-tip">当前手机号</text>
<text class="phone">{{phone}}</text>
<form bindsubmit="onSubmit">
    <form bindsubmit="onSendSms">
        <view class="item">
            <input class="item-input" name="smsCode" placeholder="请输入验证码"></input>
            <button class="item-sms-code main-color main-border-color" formType="submit">{{codeStr}}</button>
        </view>
    </form>
    <button class="btn-main" formType="submit">下一步</button>
</form>
