page {
    margin-bottom: 100rpx;
}

.box {
    font-size: 28rpx;
    background: #fff;
    border: 1rpx solid #dbdbdb;
    margin: 25rpx 30rpx 0;
}

.flex {
    display: flex;
    align-items: center;
}

.bank-logo {
    width: 36rpx;
    height: 38rpx;
    margin: 20rpx 20rpx 20rpx 30rpx;
}

.title {
    color: #434343;
    line-height: 60rpx;
    font-size: 26rpx;
}

.title::before {
    content: "";
    width: 12rpx;
    height: 28rpx;
    background: var(--theme-color);
    margin: 0 10rpx 0 30rpx;
}

.channels {
    border-top: 1rpx solid #e1e1e1;
    padding-bottom: 20rpx;
    padding-left: 8rpx;
}

.channels text {
    display: inline-block;
    margin-left: 25rpx;
    margin-top: 20rpx;
    width: 106rpx;
    line-height: 46rpx;
    text-align: center;
    background: #699f4c;
    font-size: 26rpx;
    color: #fff;
}

.channel-title {
    position: relative;
    left: 30rpx;
    top: 25rpx;
}

.channel-box {
    padding: 30rpx 40rpx;
    justify-content: space-between;
    border-bottom: none;
}

.channel text {
    width: 36rpx;
    text-align: center;
    display: inline-block;
    border: 1rpx solid #ccc;
    border-radius: 100%;
    margin-right: 20rpx;
}

.channel input {
    width: 180rpx;
    margin-left: 30rpx;
}

.bind-channel {
    margin: 0 30rpx;
    color: #55883a;
    font-size: 30rpx;
    text-align: center;
    line-height: 60rpx;
    padding-bottom: 10rpx;
    background: #fafff7;
    border: 1rpx solid #7b9602;
}

.bind-channel::before {
    content: "+";
    font-size: 55rpx;
    margin-right: 10rpx;
    position: relative;
    top: 5rpx;
}

.send-sms-code {
    color: #ff8604;
    padding-bottom: 5rpx;
    border-bottom: 1rpx solid #ff8604;
}

.send-sms-code.set {
    color: #8a8a8a;
    border-color: #8a8a8a;
}