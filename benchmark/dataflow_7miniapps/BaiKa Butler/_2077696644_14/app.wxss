page {
    --theme-color: #27beab;
    --theme-color-light: #00b3c4;
    background-color: #f2f2f2;
}

button::after {
    border: none;
}

button:active {
    opacity: .7;
}

.btn-main {
    margin: 60rpx auto;
    display: block;
    height: 87rpx;
    line-height: 87rpx;
    width: 600rpx;
    border-radius: 44rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Regular,sans-serif;
}

.btn-main,.btn-small {
    color: #fff;
    background: linear-gradient(90deg,var(--theme-color-light),var(--theme-color));
}

.btn-small {
    padding: 0;
    margin: 0;
}

.ic-arrow-right {
    width: 15rpx;
    height: 15rpx;
    margin-left: 20rpx;
    border-color: #666;
    border-style: solid solid none none;
    border-width: 3rpx;
    transform: rotate(45deg);
}

.no-login-info {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.img-no-login {
    width: 501rpx;
    margin-top: 30rpx;
    height: 307rpx;
}

.no-login-tip {
    margin-top: 5rpx;
    display: block;
    font-size: 21rpx;
    color: #aaa;
    line-height: 25rpx;
}

.btn-go-login {
    margin-top: 50rpx;
    width: 278rpx;
    height: 85rpx;
    text-align: center;
    line-height: 85rpx;
    font-size: 30rpx;
    border-radius: 43rpx;
    box-shadow: 5rpx 5rpx 5rpx #ddd;
    background: none;
}

.view-help {
    position: fixed;
    right: 30rpx;
    bottom: 30rpx;
    z-index: 50;
}

.btn-contact {
    width: 65rpx;
    height: 65rpx;
    min-height: 65rpx;
    font-size: 23rpx;
    line-height: 65rpx;
    background-size: 100% 100%;
    border-radius: 50%;
    background: #2a9608;
    color: #fff;
    padding: 0;
}

.btn-message {
    position: fixed;
    right: 30rpx;
    bottom: 130rpx;
    z-index: 50;
    line-height: 22rpx;
    padding-top: 10rpx;
    overflow: visible;
}

.btn-message.true::after {
    content: "æ–°";
    width: 60rpx;
    height: 60rpx;
    margin-top: -5rpx;
    margin-left: 50rpx;
    font-size: 36rpx;
    line-height: 60rpx;
    border-radius: 100%;
    background: red;
}

.btn-teach-tip {
    position: fixed;
    right: 30rpx;
    bottom: 230rpx;
    z-index: 50;
}

.btn-login-contact {
    position: fixed;
    right: 20rpx;
    bottom: 20rpx;
    font-size: 24rpx;
    background: transparent;
    color: #1a91ae;
    width: 140rpx;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0;
    margin: 0;
}

.black-text-color {
    color: #323232;
}

.gray-text-color {
    color: #aaa;
}

.main-active-color,.main-color {
    color: var(--theme-color);
}

.main-active-background,.main-background {
    background: var(--theme-color);
}

.main-border-color {
    border: 1rpx solid var(--theme-color);
}

.main-big-border-color {
    border: 7rpx solid var(--theme-color);
}

.main-border-bottom-color {
    border-bottom: 1rpx solid var(--theme-color);
}

.red {
    color: red;
}

.white-color {
    color: #fff;
}

.green-color {
    color: #09bb07;
}

.modal-view {
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    right: 0rpx;
    bottom: 0rpx;
    z-index: 100;
    background-color: rgba(55,55,55,.9);
}

.modal-body {
    background: #f2f2f2;
    position: absolute;
    left: 100rpx;
    right: 100rpx;
    top: 40vh;
    padding-left: 20rpx;
    padding-right: 20rpx;
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.modal-title {
    font-size: 28rpx;
    line-height: 80rpx;
    display: block;
}

.modal-input-sms,.modal-title {
    width: 100%;
    text-align: center;
    border-bottom: 1rpx solid #e2e2e2;
}

.modal-input-sms {
    font-size: 30rpx;
    line-height: 100rpx;
    height: 100rpx;
}

.modal-bottom {
    display: flex;
    height: 80rpx;
    width: 100%;
    align-items: center;
    justify-content: center;
}

.modal-btn {
    display: block;
    height: 80rpx;
    line-height: 80rpx;
    flex: 1;
    font-size: 28rpx;
    text-align: center;
}

.modal-btn::after {
    border: none;
}

.modal-btn:active {
    background: #bbb;
}

.mask {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0,0,0,.3);
    z-index: 100;
    align-items: center;
    justify-content: center;
}

.mask,.mask-dialog {
    display: flex;
}

.mask-dialog {
    width: 80%;
    min-height: 150rpx;
    flex-direction: column;
    background: #fff;
    border-radius: 10rpx;
}

.mask-img {
    width: 100%;
    height: 400rpx;
}

.mask-bottom {
    height: 80rpx;
    display: flex;
    border-top: 1rpx solid #efefef;
}

.btn-mask {
    flex: 1;
    min-height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
    background: #fff;
}

.mask-bottom picker {
    width: 50%;
}

.mask-bottom-line {
    height: 100%;
    width: 1rpx;
    background: #efefef;
}

.mask-notification-dialog {
    width: 500rpx;
    position: relative;
}

.mask-img-notification {
    width: 100%;
    height: auto;
}

.mask-img-notification-close {
    position: absolute;
    right: -20rpx;
    top: -20rpx;
    width: 40rpx;
    height: 40rpx;
}

.mask-notification-text-body {
    display: flex;
    width: 500rpx;
    border-radius: 15rpx;
    flex-direction: column;
    background: #fff;
}

.mask-img-notification-title {
    width: 100%;
}

.mask-text-notification {
    padding: 30rpx;
    font-size: 28rpx;
    line-height: 40rpx;
}

.mask-line {
    width: 100%;
    height: 2rpx;
    background: #efefef;
}

.mask-channel-notification-head {
    width: 531rpx;
    height: 135rpx;
}

.mask-ic-success {
    margin-top: 40rpx;
    width: 100rpx;
    height: 100rpx;
}

.mask-error-message-head {
    width: 531rpx;
    height: 126rpx;
}