.cinema-showlist {
    background: #fff;
}

.cinema-showlist-tomorrow-message {
    width: 100%;
    height: 60rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    background: var(--color-cg);
}

.cinema-showlist-tomorrow-message-image {
    margin-left: 32rpx;
    width: 30rpx;
    height: 28rpx;
}

.cinema-showlist-tomorrow-message-title {
    margin-left: 12rpx;
    line-height: 60rpx;
    padding-top: 2rpx;
    font-size: var(--font-te);
}

.cinema-showlist-cell {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: top;
    overflow: hidden;
    white-space: nowrap;
    padding-top: 20rpx;
}

.padding-bottom-10 {
    padding-bottom: 20rpx;
}

.cinema-showlist-short {
    height: 50rpx;
}

.is-middle {
    margin-top: 55rpx;
}

.cinema-showlist-firstblock {
    margin-left: 32rpx;
    width: 126rpx;
    flex-direction: column;
    margin-top: 3rpx;
}

.cinema-showlist-firstblock,.cinema-showlist-secondblock {
    height: 100%;
    display: flex;
    -webkit-flex-direction: column;
    justify-content: center;
}

.cinema-showlist-secondblock {
    flex-direction: column;
    flex: 1;
    margin-right: 20rpx;
    margin-top: 5rpx;
}

.cinema-showlist-thirdblock {
    width: 202rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-bottom: 3rpx;
}

.cinema-showlist-fourblock {
    width: 170rpx;
    height: 86rpx;
    display: flex;
}

.cinema-showlist-cell-member {
    display: flex;
    flex-direction: row;
}

.cinema-showlist-cell-starttime {
    font-size: var(--font-tb);
    font-weight: 500;
}

.cinema-showlist-cell-endtime {
    font-size: var(--font-th);
    color: var(--color-cd);
    margin-top: 3rpx;
}

.cinema-showlist-cell-langue {
    height: 44rpx;
    line-height: 46rpx;
    font-size: var(--font-tg);
}

.cinema-showlist-cell-address {
    white-space: pre-wrap;
    word-wrap: break-word;
    word-break: break-all;
    font-size: var(--font-th);
    color: var(--color-cd);
    padding: 0;
    margin-top: 1rpx;
    line-height: 36rpx;
}

.cinema-showlist-cell-area {
    height: 32rpx;
    line-height: 32rpx;
    width: 92rpx;
    text-align: center;
    font-size: var(--font-tf);
    border-radius: 4rpx;
    border: 1rpx solid #9cb3d2;
    color: #9cb3d2;
    margin-top: 4rpx;
    margin-bottom: 4rpx;
}

.cinema-showlist-buybtn {
    margin: auto;
    width: 110rpx;
    height: 60rpx;
    font-size: var(--font-tg);
    line-height: 60rpx;
    text-align: center;
    color: var(--color-ce);
    border-radius: 45rpx;
    border: 3rpx solid var(--color-ce);
}

.cinema-showlist-member-buybtn {
    background-image: linear-gradient(270deg,#f2c89f 3%,#fff0de);
    border: none;
    color: #292929;
}

.cinema-showlist-nomember-wait-buybtn {
    border: 1px solid #ebc28f;
    color: #ebc38f;
}

.cinema-showlist-buybtn-nonuse {
    color: var(--color-ci);
    border: 2rpx solid var(--color-cg);
}

.cinema_showlist_cell_save_price {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    height: 32rpx;
    align-items: center;
}

.cinema_showlist_cell_save_price_image {
    width: 30rpx;
    height: 30rpx;
}

.cinema_showlist_cell_save_text {
    color: #6e5226;
    font-size: var(--font-th);
    margin-left: 4rpx;
    margin-top: 4rpx;
}

.cinema-showlist-cellprice {
    display: flex;
    flex-direction: row-reverse;
    width: 100%;
    height: 46rpx;
}

.margin-top-16 {
    margin-top: 16rpx;
}

.cinema-showlist-cellprice-yuan {
    font-size: var(--font-th);
    color: var(--color-ce);
    align-self: flex-end;
    margin-bottom: 3rpx;
}

.cinema-showlist-cellprice-price {
    padding-left: 5rpx;
    line-height: 50rpx;
    font-size: var(--font-tb);
    color: var(--color-ce);
    font-weight: 500;
}

.cinema-showlist-cellprice-member {
    margin-top: 8rpx;
    line-height: 42rpx;
    font-size: var(--font-th);
    color: var(--color-ce);
}

.cinema-showlist-cellprice-memberhui {
    margin-top: 10rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    font-size: var(--font-tf);
    color: var(--color-ce);
}

.cinema-showlist-cell-serviceprice {
    width: 100%;
    height: 38rpx;
    line-height: 38rpx;
    text-align: right;
    font-size: var(--font-th);
    color: var(--color-ci);
    margin-top: 8rpx;
}

.cinema-showlist-cellbottomprice {
    height: 32rpx;
    width: 100%;
    display: flex;
    flex-direction: row-reverse;
}

.cinema-showlist-cellbottomprice-hideprice {
    font-size: var(--font-th);
    color: var(--color-cd);
    text-decoration: line-through;
}

.cinema-showlist-cellbottomprice-memberprice {
    height: 32rpx;
}

.cinema-showlist-cellbottomprice-memberprice,.cinema_showlist_cellbottomprice_memberprice_left {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.cinema_showlist_cellbottomprice_memberprice_left {
    background: #414245;
    height: 30rpx;
    border-radius: 4rpx 0 0 4rpx;
}

.cinema_showlist_cellbottomprice_memberprice_left_image {
    width: 21rpx;
    height: 17rpx;
    margin-left: 5rpx;
}

.cinema_showlist_cellbottomprice_memberprice_left_text {
    font-size: var(--font-th);
    color: #ffd5a5;
    margin-right: 5rpx;
}

.cinema_showlist_cellbottomprice_memberprice_right_text {
    font-size: var(--font-th);
    color: #6e4c26;
    background: #f7e7d3;
    border-radius: 0 4rpx 4rpx 0;
    padding-left: 5rpx;
    padding-right: 5rpx;
    height: 30rpx;
}

.cinema-showlist-buttomline {
    height: 8rpx;
    background-color: #f1f1f1;
}

.cinema-showlist-line {
    height: 1rpx;
    border-bottom: 1rpx dashed #c5c5c5;
    opacity: .65;
    margin-top: 20rpx;
}

.cinema-showlist-bottom-show-selltime {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.cinema-showlist-bottom-show-selltime-left-showstatus {
    width: 110rpx;
    height: 46rpx;
    margin-right: 10rpx;
    margin-left: 32rpx;
}

.cinema-showlist-bottom-show-selltime-left {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    height: 46rpx;
    margin-top: 18rpx;
    flex: 1;
}

.line-image {
    height: 6rpx;
    width: 100%;
}

.cinema-showlist-bottom-show-selltime-left-bottom {
    display: flex;
    align-items: center;
    height: 100%;
    margin-bottom: 3rpx;
}

.cinema-showlist-bottom-show-selltime-left-text-nonmember {
    font-size: var(--font-th);
    color: #ff9500;
}

.cinema-showlist-bottom-show-selltime-left-text-member {
    font-size: var(--font-th);
    color: #d4914d;
}

.cinema-showlist-bottom-show-selltime-left-text-margin-left {
    margin-left: 32rpx;
}

.cinema-showlist-bottom-show-selltime-left-icon {
    width: 40rpx;
    height: 26rpx;
    margin-left: 6rpx;
}

.cinema-showlist-bottom-show-selltime-right {
    display: flex;
    align-items: flex-end;
    height: 64rpx;
}

.cinema-showlist-bottom-show-selltime-right-triangle {
    width: 0;
    height: 0;
    border-color: transparent transparent #fef4e9;
    border-style: solid;
    border-width: 0 0 40rpx 15rpx;
    align-self: flex-end;
}

.cinema-showlist-bottom-show-selltime-right-tips {
    background: #fef4e9;
    padding-right: 20rpx;
    padding-left: 15rpx;
    display: flex;
    align-items: center;
    height: 46rpx;
    border-top-left-radius: 12rpx;
}

.cinema-showlist-bottom-show-selltime-right-colorblack {
    font-size: var(--font-th);
    color: #57462b;
    line-height: 16px;
}

.cinema-showlist-bottom-show-selltime-right-colorred {
    font-size: var(--font-th);
    color: #fe4632;
    line-height: 16px;
}

.cinema-showlist-bottom-show-selltime-right-icon {
    width: 24rpx;
    height: 24rpx;
    margin-left: 8rpx;
}

.is-hidden {
    display: none;
}