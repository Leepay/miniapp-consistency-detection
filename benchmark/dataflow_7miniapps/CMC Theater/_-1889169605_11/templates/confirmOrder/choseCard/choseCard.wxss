./templates/cardcell/cardcell.wxssrpx.chosecard-mask {
    position: fixed;
    top: 0rpx;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.4);
    opacity: 1;
    transition: opacity .3s;
}

.chosecard-show {
    opacity: 0;
}

.chosecard-upview {
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    height: 0rpx;
    z-index: 2;
    background-color: #fff;
    transition: height .3s;
}

.chosecard-viewup {
    height: 70%;
}

.chosecard-topview {
    width: 100%;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.chosecard-topview-title {
    font-size: var(--font-te);
    color: var(--color-cc);
    text-indent: 54rpx;
    line-height: 96rpx;
}

.chosecard-topview-addcard {
    width: 50rpx;
    height: 50rpx;
    margin-top: 23rpx;
    margin-right: 54rpx;
    opacity: 1;
    transition: opacity .3s;
}

.chosecard-topview-addcard-hidden {
    opacity: 0;
}

.chosecard-upview-cardlist {
    height: 70%;
}

.chosecard-addcard {
    width: 100%;
}

.chosecard-addcardimg {
    margin-left: 54rpx;
    width: 640rpx;
    height: 360rpx;
}

.chosecard-cardlist-cell {
    height: 360rpx;
    margin: -250rpx 54rpx 5rpx;
    border-radius: 20rpx;
    transition: margin-top .5s;
}

.chosecard-cardlist-firstcell {
    margin-top: 0rpx;
}

.chosecard-cellup {
    margin-top: -361rpx;
}

.chosecard-celldown {
    margin-top: 800rpx;
}

.chosecard-buttomview {
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    height: 122rpx;
    background-color: #fff;
    opacity: 1;
    transition: opacity .3s;
}

.chosecard-buttomview-chosebtn {
    margin-left: 22rpx;
    margin-top: 22rpx;
    font-size: var(--font-tc);
    color: #fff;
    height: 74rpx;
    width: 705rpx;
    background-color: var(--color-cb);
    text-align: center;
    line-height: 74rpx;
    border-radius: 8rpx;
    opacity: 1;
}

.chosecard-buttomview-hidden {
    opacity: 0;
}

.chosecard-selectbuttomview {
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    height: 180rpx;
    display: flex;
    flex-direction: column;
    background-color: #fff;
    transition: bottom .3s;
}

.chosecard-selectbuttomview-hidden {
    bottom: -180rpx;
}

.chosecard-selectbuttomview-topview {
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.chosecard-selectbuttomview-pricemessage {
    width: 440rpx;
    height: 80rpx;
    line-height: 30rpx;
    font-size: var(--font-tf);
    color: var(--color-cd);
    margin-left: 25rpx;
    overflow: hidden;
    flex-wrap: wrap;
    white-space: pre-wrap;
    flex-direction: column;
}

.chosecard-selectbuttomview-pricemessage,.chosecard-selectbuttomview-totalprice {
    display: flex;
    justify-content: center;
}

.chosecard-selectbuttomview-totalprice {
    line-height: 80rpx;
    font-size: var(--font-td);
    margin-right: 25rpx;
    flex-direction: row;
    align-items: center;
}

.chosecard-selectbuttomview-totalprice-title {
    white-space: nowrap;
}

.chosecard-selectbuttomview-totalprice-price {
    color: var(--color-ce);
    margin-right: 5rpx;
    font-size: var(--font-tb);
}

.chosecard-selectbuttomview-btns {
    margin-top: 5rpx;
    width: 100%;
    height: 75rpx;
    display: flex;
    flex-direction: row;
    text-align: center;
    font-size: var(--font-tc);
}

.chosecard-selectbuttomview-gochangebtn {
    margin-left: 25rpx;
    width: 337.5rpx;
    height: 74rpx;
    background-color: #fff;
    line-height: 74rpx;
    border-radius: 8rpx;
    border: 1rpx solid var(--color-cb);
    color: var(--color-cb);
    box-sizing: border-box;
}

.chosecard-selectbuttomview-usecardbtn {
    margin-left: 25rpx;
    width: 337.5rpx;
    height: 74rpx;
    background-color: var(--color-cb);
    line-height: 74rpx;
    border-radius: 8rpx;
    color: #fff;
}

.usecardbtn-big {
    width: 700rpx;
}

.usecardbtn-black {
    background-color: #5f5f60;
}

.lineview {
    width: 100%;
    height: 1rpx;
    background-color: var(--color-ch);
}

.is-hidden {
    display: none;
}

.vis-hidden {
    visibility: hidden;
}

.big-scrollview {
    width: 100%;
    position: absolute;
}