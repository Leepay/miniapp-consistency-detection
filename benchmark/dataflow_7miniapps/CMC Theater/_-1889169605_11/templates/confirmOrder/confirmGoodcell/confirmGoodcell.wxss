.confirmGoodcell {
    padding-bottom: 20rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    padding-left: 32rpx;
    padding-right: 26rpx;
    box-sizing: border-box;
}

.confirmGoodcell-goodimg {
    margin-top: 5rpx;
    background-image: var(--movie-defimage);
    background-size: 100%;
    width: 140rpx;
    height: 140rpx;
}

.confirmGoodcell-itemparent {
    margin-left: 20rpx;
    align-self: flex-start;
    display: flex;
    flex-direction: column;
    flex: 1;
}

.confirmGoodcell-itemname {
    font-size: var(--font-td);
    flex-shrink: 1;
}

.confirmGoodcell-itemdec,.confirmGoodcell-itemname {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.confirmGoodcell-itemdec {
    margin-top: 2rpx;
    max-width: 460rpx;
    font-size: var(--font-te);
    height: 36rpx;
    color: var(--color-cd);
}

.confirmGoodcell-itemprice {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 2rpx;
    justify-content: space-between;
}

.confirmGoodcell-itemprice_margin {
    margin-top: 14rpx;
}

.confirmGoodcell-nowprice {
    display: flex;
    flex-direction: row;
    align-items: baseline;
}

.findfood-foodcell-count {
    padding-top: 1rpx;
    margin-left: 10rpx;
    font-size: var(--font-tf);
    color: var(--color-ce);
}

.confirmGoodcell-nowprice-text {
    font-size: var(--font-tc);
    color: #fe4632;
    font-weight: 500;
}

.confirmGoodcell-oldprice {
    margin-left: 8rpx;
    font-size: var(--font-tf);
    color: var(--color-cd);
    text-decoration: line-through;
}

.confirmGoodcell-line {
    height: var(--line_height);
    background: var(--color-ch);
    margin: 8rpx 32rpx 30rpx;
}

.confirmGoodcell-line-choseGood {
    height: 30rpx;
    background: #fff;
    margin-left: 32rpx;
    margin-right: 32rpx;
}

.confirmGoodcell-choseview {
    width: 176rpx;
    display: flex;
    flex-direction: row-reverse;
    align-items: flex-end;
}

.confirmGoodcell-choseview-decbtn {
    width: 52rpx;
    height: 52rpx;
    justify-self: flex-start;
}

.confirmGoodcell-choseview-showcount {
    flex: 1;
    text-align: center;
    line-height: 52rpx;
}

.confirmGoodcell-choseview-addbtn {
    width: 52rpx;
    height: 52rpx;
}

.confirm_jiajiaogu_parent {
    display: flex;
    flex-direction: column;
}

.confirm_jiajiaogu {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 94rpx;
    padding-bottom: 10rpx;
}

.jiajiaogu_image_border {
    width: 72rpx;
    height: 26rpx;
    line-height: 26rpx;
    vertical-align: middle;
    text-align: center;
    border: 2rpx solid var(--color-ce);
    border-radius: 6rpx;
    color: var(--color-ce);
    font-size: var(--font-tf);
}

.jiajiaogu_bg,.jiajiaogu_go_desc {
    color: var(--color-cd);
    font-size: var(--font-te);
}

.jiajiaogu_go_desc {
    margin-left: 12rpx;
}

.jiajiaogu_jiantou {
    width: 32rpx;
    height: 32rpx;
}

.jiajiaogu_go_selected {
    margin-left: 6rpx;
    color: var(--color-ce);
    font-size: var(--font-te);
}

.jiajiagou_sales_list_item_parent {
    display: flex;
    flex-direction: row;
    margin-left: 80rpx;
    height: 90rpx;
    margin-top: 30rpx;
    align-items: center;
}

.jiajiagou_sales_list_item_image {
    width: 90rpx;
    height: 90rpx;
    margin-right: 20rpx;
}

.jiajiagou_sales_list_item_icon_parent {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.jiajiagou_sales_list_item_icon {
    width: 68rpx;
    height: 26rpx;
}

.jiajiagou_sales_list_item_name_parent {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 90rpx;
}

.jiajiagou_sales_list_item_name {
    width: 400rpx;
    color: var(--color-cc);
    font-size: var(--font-te);
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    margin-left: 6rpx;
}

.jiajiagou_sales_list_item_price {
    color: var(--color-ce);
    font-size: var(--font-tc);
    margin-top: 16rpx;
    font-weight: 500;
}

.jiajiagou_sales_list_item_tehui_msg {
    font-size: var(--font-th);
    color: var(--color-cd);
    margin-left: 8rpx;
}

.tehui_jiajiagou_parent {
    min-height: 50rpx;
}

.confirmGoodcell_name_parent {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.confirmGoodcell_expand {
    color: var(--color-cd);
    font-size: var(--font-te);
    text-decoration: underline;
    margin-left: 6rpx;
    flex-shrink: 0;
}

.confirmGoodcell_options_goods_desc {
    height: 36rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.confirmGoodcell_options_goods_desc,.options_goods_expand {
    width: 490rpx;
    font-size: var(--font-te);
    color: var(--color-cd);
    margin-top: 2rpx;
}

.option_goods_chose {
    width: 166rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    position: relative;
}

.option_goods_num {
    position: absolute;
    right: 0;
    top: -15rpx;
    width: 32rpx;
    height: 32rpx;
    text-align: center;
    line-height: 32rpx;
    font-size: var(--font-th);
    color: #fff;
    border-radius: 50%;
    background: var(--color-ce);
}

.option_goods_text {
    width: 124rpx;
    height: 52rpx;
    text-align: center;
    line-height: 52rpx;
    vertical-align: middle;
    background: var(--color-cb);
    border-radius: 36rpx;
    color: #fff;
    font-size: var(--font-tg);
}

.confirmGoodcell_add_peice_text {
    font-size: var(--font-tf);
    font-weight: 400;
    color: #fe4632;
    margin-left: 4rpx;
}

.confirmGoodcell_promo_desc {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.confirmGoodcell_promo_desc_margin {
    margin-top: 18rpx;
}

.is-hidden {
    display: none;
}