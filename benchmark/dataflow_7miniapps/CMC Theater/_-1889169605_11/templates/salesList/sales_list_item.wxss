.sales_list_item {
    width: 100%;
    height: 200rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.sales_list_item_selected {
    flex: 0 0 44rpx;
    width: 44rpx;
    height: 44rpx;
    margin-left: 30rpx;
    margin-right: 16rpx;
}

.sales_list_item_image {
    width: 140rpx;
    flex: 0 0 140rpx;
    height: 140rpx;
    margin-right: 20rpx;
}

.sales_list_item_info {
    display: flex;
    flex-direction: column;
    width: 466rpx;
}

.sales_list_item_name {
    color: var(--color-cc);
    font-size: var(--font-tc);
}

.sales_list_item_desc,.sales_list_item_name {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.sales_list_item_desc {
    margin-top: 4rpx;
    color: var(--color-cd);
    font-size: var(--font-te);
}

.sales_list_item_price {
    margin-top: 18rpx;
    color: var(--color-ce);
    font-size: var(--font-tc);
    font-weight: 500;
}