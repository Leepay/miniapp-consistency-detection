.newOrder-bg {
    margin: auto;
    width: 600rpx;
}

.newOrder-first {
    width: 100%;
    height: 220rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    border-top-left-radius: 8rpx;
    border-top-right-radius: 8rpx;
}

.newOrder-first-name {
    margin-left: 5rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: var(--font-tc);
    text-align: center;
    width: 90%;
}

.newOrder-first-time {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 15rpx;
    margin-bottom: 15rpx;
}

.newOrder-first .newOrder-first-add {
    font-size: 13px;
    color: #8b8b8b;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 90%;
}

.newOrder-first-time image {
    width: 48rpx;
    height: 48rpx;
    margin-top: 4rpx;
}

.newOrder-first-start {
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    color: #000;
}

.newOrder-second {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
}

.newOrder-second-line {
    width: 100%;
    height: 2rpx;
    background-color: var(--color-cg);
}

.newOrder-second-barview {
    margin-top: 30rpx;
    width: 490rpx;
    height: 102rpx;
}

.newOrder-second-codeview {
    width: 300rpx;
    height: 280rpx;
}

.newOrder-second-title {
    font-size: 13px;
    color: #8b8b8b;
    margin-top: 16rpx;
}

.newOrder-second-ordernum {
    width: 100%;
    font-family: SFProText-Regular;
    font-size: 24px;
    color: #2d2d2d;
    text-align: center;
    font-weight: 400;
}

.newOrder-second-auto-ticket {
    background-image: linear-gradient(270deg,#ffcb6d,#ff8400);
    border-radius: 29px;
    height: 108rpx;
    width: 488rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 28rpx;
}

.newOrder-second-auto-ticket .newOrder-second-auto-ticket-left {
    width: 42rpx;
    height: 40rpx;
    margin-left: 37rpx;
    margin-right: 19rpx;
}

.newOrder-second-auto-ticket .newOrder-second-auto-ticket-middle .newOrder-second-auto-ticket-middle-top {
    font-family: PingFangSC-Semibold;
    font-size: 28rpx;
    color: #fff;
}

.newOrder-second-auto-ticket .newOrder-second-auto-ticket-middle .newOrder-second-auto-ticket-middle-bottom {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #fff;
}

.nil-view {
    flex-grow: 1;
}

.newOrder-second-auto-ticket .newOrder-second-auto-ticket-right {
    width: 32rpx;
    height: 32rpx;
    margin-right: 23rpx;
}

.newOrder-third {
    width: 100%;
    height: 137rpx;
    display: flex;
    background-color: #fff;
    align-items: flex-end;
    justify-content: center;
    border-bottom-right-radius: 8rpx;
    border-bottom-left-radius: 8rpx;
}

.newOrder-third-btn {
    text-align: center;
    width: 50%;
    line-height: 90rpx;
    font-size: var(--font-tc);
    border: 1rpx solid var(--color-ch);
}

.newOrder-third-nonshowbtn {
    border-bottom-left-radius: 8rpx;
    color: var(--color-cc);
}

.newOrder-third-aftershowbtn {
    border-bottom-right-radius: 8rpx;
    color: var(--color-cb);
}

.newOrder-four {
    width: 100%;
    height: 150rpx;
    display: flex;
}

.newOrder-four-closebtn {
    margin: auto;
    width: 70rpx;
    height: 70rpx;
}

.is-hidden {
    display: none;
}