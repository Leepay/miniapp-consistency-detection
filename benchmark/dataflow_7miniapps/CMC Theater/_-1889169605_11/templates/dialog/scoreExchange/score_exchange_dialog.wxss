.pwd_parent,.pwd_screen {
    width: 100%;
    height: 100%;
}

.pwd_screen {
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;
    background-color: #000;
    opacity: 0;
    overflow: hidden;
    color: #fff;
    transition: background-color .3s;
}

.pwd_screen_anim {
    opacity: .2;
}

.pwd_body {
    width: 100%;
    position: fixed;
    flex-direction: column;
    display: flex;
    z-index: 1000;
    height: 1008rpx;
    bottom: -1008rpx;
    transition: bottom .3s;
    background: #fff;
}

.pwd_body_anim {
    bottom: 0;
}

.pwd_body_nopwd {
    width: 100%;
    position: fixed;
    flex-direction: column;
    display: flex;
    z-index: 1000;
    height: 622rpx;
    bottom: -622rpx;
    transition: bottom .3s;
    background: #fff;
}

.pwd_body_anim_nopwd {
    bottom: 0;
}

.pwd_dialog_close {
    height: 100rpx;
    background: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0;
    padding-left: 36rpx;
    padding-right: 16rpx;
}

.image_close {
    width: 32rpx;
    height: 30rpx;
}

.text_confirm_pwd {
    color: var(--color-cb);
    padding: 10rpx 20rpx;
}

.pwd_input {
    width: 610rpx;
    height: 100rpx;
    margin-left: 70rpx;
    margin-right: 70rpx;
    margin-top: 63rpx;
    border: 1px solid var(--color-ci);
    border-radius: 6rpx;
    align-items: center;
}

.pwd_input,.pwd_input_item {
    display: flex;
    flex-direction: row;
}

.pwd_input_content,.pwd_input_item {
    width: 100%;
    height: 100%;
}

.pwd_input_content {
    text-align: center;
    font-weight: 500;
    font-size: 40rpx;
}

.pwd_image {
    width: 20rpx;
    height: 20rpx;
    padding: 40rpx;
}

.pwd_input_line {
    height: 96rpx;
    width: 2rpx;
    background: var(--color-cg);
}

.pwd_nums {
    flex: 1;
    width: 100%;
    margin-top: 65rpx;
    padding: 12rpx;
    height: 432rpx;
    box-sizing: border-box;
    background: rgba(210,213,219,.9);
    display: flex;
    flex-direction: row;
    flex-flow: wrap;
    justify-content: space-between;
    align-content: space-between;
}

.pwd_nums_item {
    width: 234rpx;
    height: 92rpx;
}

.pwd_num_image,.pwd_num_image_delete_parent {
    width: 234rpx;
    height: 92rpx;
    position: absolute;
}

.pwd_num_image_delete_parent {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.pwd_num_image_delete {
    width: 54rpx;
    height: 44rpx;
    margin: auto;
}

.pwd_num_text {
    position: absolute;
    width: 234rpx;
    height: 92rpx;
    line-height: 92rpx;
    text-align: center;
    vertical-align: middle;
}

.dialog_score {
    width: 100%;
    padding-left: 70rpx;
    padding-right: 70rpx;
    box-sizing: border-box;
}

.dialog_score_value_parent {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.dialog_score_text {
    font-size: var(--font-tg);
    color: var(--color-cc);
    margin-top: 47rpx;
}

.dialog_score_value {
    font-size: var(--font-ta);
    color: var(--color-cc);
    line-height: 80rpx;
    margin-bottom: 15rpx;
}

.dialog_score_vip_parent {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-top: 23rpx;
}

.dialog_score_vip_img {
    width: 30rpx;
    height: 30rpx;
    margin-right: 5rpx;
}

.dialog_score_vip_text {
    font-size: var(--font-tg);
    color: var(--color-cc);
}

.dialog_score_ok {
    line-height: 88rpx;
    font-size: var(--font-tc);
    color: #fff;
    text-align: center;
    background: #ff9500;
    border-radius: 6rpx;
    position: absolute;
    z-index: 100;
    left: 32rpx;
    right: 32rpx;
    bottom: 18rpx;
}

.hidden_view {
    display: none;
}