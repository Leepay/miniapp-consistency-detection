.dialog_refund_bg,.dialog_refund_notice_page {
    width: 100%;
    height: 100%;
}

.dialog_refund_bg {
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0;
    transition: opacity .3s;
}

.dialog_refund_bg_anim {
    opacity: .3;
}

.dialog_refund_body {
    position: fixed;
    padding-bottom: 200rpx;
    bottom: 0rpx;
    height: 0rpx;
    width: 100%;
    left: 0;
    background: #fff;
    transition: height .3s;
    display: flex;
    flex-direction: column;
    box-sizing: content-box;
}

.dialog_refund_body_anim {
    height: 676rpx;
}

.dialog_refund_title {
    position: relative;
    width: 100%;
}

.dialog_refund_title_text {
    font-size: var(--font-tc);
    color: var(--color-cc);
    position: absolute;
    width: 100%;
    text-align: center;
    top: 32rpx;
}

.dialog_refund_title_close {
    width: 64rpx;
    height: 64rpx;
    position: absolute;
    right: 16rpx;
    top: 26rpx;
    z-index: 1;
}

.dialog_refund_tab {
    position: relative;
    margin-top: 82rpx;
    flex-direction: row;
}

.dialog_refund_tab,.dialog_refund_tab_item {
    display: flex;
    height: 80rpx;
}

.dialog_refund_tab_item {
    flex: 1;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.dialog_refund_tab_text {
    flex: 1;
    line-height: 76rpx;
    vertical-align: middle;
    font-size: var(--font-tc);
    color: var(--color-cc);
}

.dialog_refund_tab_line {
    width: 200rpx;
    height: 4rpx;
    background: var(--color-cb);
}

.dialog_refund_tab_bottom_line {
    width: 100%;
    left: 0rpx;
    height: 1rpx;
    position: absolute;
    z-index: -1;
    bottom: 1rpx;
    background: var(--color-cg);
}

.dialog_refund_rules,.dialog_refund_rules_sv {
    widows: 100%;
    height: 426rpx;
}

.dialog_refund_rules {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.dialog_refund_rules_no_support {
    display: flex;
    flex-direction: row;
    padding-top: 30rpx;
    box-sizing: border-box;
}

.dialog_refund_rules_image {
    width: 32rpx;
    height: 32rpx;
    margin-top: 2rpx;
    padding-left: 20rpx;
}

.dialog_refund_rules_other {
    width: 100%;
    display: flex;
    flex-direction: row;
    box-sizing: border-box;
    margin-top: 35rpx;
}

.dialog_refund_rules_other_content {
    flex: 1;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.dialog_title_padding {
    padding-left: 12rpx;
    padding-right: 20rpx;
}

.dialog_refund_rules_other_content_info {
    font-size: var(--font-te);
    color: var(--color-cd);
    margin-top: 12rpx;
    white-space: normal;
    word-wrap: break-word;
    word-break: break-all;
}

.dialog_refund_protocol {
    height: 84rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.dialog_refund_protocol_img {
    width: 32rpx;
    height: 32rpx;
    padding: 16rpx;
}

.dialog_refund_rules_title_text {
    font-size: var(--font-td);
    color: var(--color-cc);
}

.dialog_refund_protocol_text {
    font-size: var(--font-te);
    color: var(--color-cc);
}

.cb_text {
    color: var(--color-cb);
}

.cd_text {
    color: var(--color-cd);
}

.progress_item {
    display: flex;
    flex-direction: row;
    height: 100rpx;
}

.progress_left {
    position: relative;
    margin-left: 14rpx;
    width: 46rpx;
}

.v_line_top {
    width: 2rpx;
    height: 30rpx;
    position: absolute;
    top: 0rpx;
    left: 20rpx;
    background: #ebebeb;
}

.progress_img {
    width: 16rpx;
    height: 16rpx;
    position: absolute;
    z-index: 2;
    top: 30rpx;
    left: 14rpx;
    background: #4fcb74;
    border-radius: 8rpx;
}

.v_line_bottom {
    width: 2rpx;
    height: 100%;
    position: absolute;
    bottom: 0rpx;
    top: 36rpx;
    left: 20rpx;
    background: #ebebeb;
}

.progress_right {
    margin-top: 26rpx;
}

.progress_status {
    font-size: var(--font-td);
    display: block;
}

.progress_status,.progress_status_first {
    color: var(--color-cc);
}

.progress_time {
    display: block;
    font-size: var(--font-td);
    color: var(--color-cd);
    margin-top: 12rpx;
}

.flex_hidden {
    display: none;
}

.dialog_ticket_buybtn {
    height: 76rpx;
    margin-left: 25rpx;
    margin-right: 25rpx;
    box-sizing: border-box;
    background-color: var(--color-cb);
    border-radius: 8rpx;
    font-size: var(--font-tc);
    line-height: 76rpx;
    text-align: center;
    color: #fff;
}