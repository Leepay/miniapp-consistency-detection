.certificationBody {
    position: fixed;
    top: 0rpx;
    width: 100%;
    height: 100%;
    z-index: 100;
    background: rgba(0,0,0,.4);
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.certificationBody_bg {
    background: rgba(0,0,0,.4);
    opacity: 1;
    transition: opacity .3s;
}

.certificationContent {
    width: 660rpx;
    height: 730rpx;
    background: #fff;
    border-radius: 16rpx;
    position: relative;
    display: flex;
    flex-direction: column;
}

.certification_title {
    width: 100%;
    text-align: center;
    font-size: var(--font-fb);
    font-weight: 600;
    color: #2d2d2d;
    margin-top: 32rpx;
    line-height: 50rpx;
}

.certification_close {
    position: absolute;
    top: 25rpx;
    right: 26rpx;
    width: 60rpx;
    height: 64rpx;
}

.certification_info,.certification_recorder {
    margin-top: 64rpx;
    text-indent: 60rpx;
    margin-left: 32rpx;
    margin-right: 32rpx;
    line-height: 40rpx;
    font-size: var(--font-td);
    color: var(--color-cc);
}

.certification_text_identity {
    font-size: var(--font-td);
    color: var(--color-cc);
    font-weight: 600;
}

.certification_protocol {
    margin-left: 32rpx;
    margin-right: 32rpx;
    line-height: 40rpx;
    font-size: var(--font-td);
    color: var(--color-cc);
    margin-top: 34rpx;
    text-indent: 60rpx;
}

.certification_protocol_text {
    font-size: var(--font-td);
    color: var(--color-cb);
}

.certification_ok {
    text-align: center;
    line-height: 88rpx;
    color: #fff;
    font-size: var(--font-tb);
    margin: 48rpx 32rpx 32rpx;
    font-weight: 500;
    background: #ff9500;
    border-radius: 10rpx;
}