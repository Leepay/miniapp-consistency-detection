.pwd_parent,.pwd_screen {
    width: 100%;
    height: 100%;
}

.pwd_screen {
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;
    background-color: #000;
    opacity: 0;
    overflow: hidden;
    color: #fff;
    transition: background-color .3s;
}

.pwd_screen_anim {
    opacity: .2;
}

.pwd_body {
    width: 100%;
    position: fixed;
    z-index: 1000;
    height: 0rpx;
    bottom: 0rpx;
    transition: height .3s;
    background: #fff;
}

.pwd_body_anim {
    height: 790rpx;
}

.pwd_dialog_close {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    vertical-align: middle;
    background: #fff;
}

.text_close {
    width: 100%;
    position: absolute;
    margin: 0 auto;
    text-align: center;
}

.image_close {
    width: 32rpx;
    height: 30rpx;
    position: absolute;
    right: 32rpx;
    top: 36rpx;
}

.pwd_input {
    width: 610rpx;
    height: 100rpx;
    margin-left: 70rpx;
    margin-right: 70rpx;
    margin-top: 81rpx;
    border: 1px solid var(--color-ci);
    border-radius: 6rpx;
}

.pwd_input,.pwd_input_item {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.pwd_image {
    width: 20rpx;
    height: 20rpx;
    padding: 40rpx;
}

.pwd_input_line {
    height: 96rpx;
    width: 2rpx;
    background: var(--color-cg);
}

.pwd_nums {
    width: 100%;
    margin-top: 84rpx;
    padding: 12rpx;
    height: 428rpx;
    box-sizing: border-box;
    background: rgba(210,213,219,.9);
    display: flex;
    flex-direction: row;
    flex-flow: wrap;
    justify-content: space-between;
    align-content: space-between;
}

.pwd_nums_item {
    width: 234rpx;
    height: 92rpx;
}

.pwd_num_image,.pwd_num_image_delete_parent {
    width: 234rpx;
    height: 92rpx;
    position: absolute;
}

.pwd_num_image_delete_parent {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.pwd_num_image_delete {
    width: 54rpx;
    height: 44rpx;
    margin: auto;
}

.pwd_num_text {
    position: absolute;
    width: 234rpx;
    height: 92rpx;
    line-height: 92rpx;
    text-align: center;
    vertical-align: middle;
}