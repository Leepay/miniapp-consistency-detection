.mineCodeInput-view {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.mineCodeInput-topview {
    width: 686rpx;
    margin-top: 50rpx;
    justify-content: space-between;
}

.mineCodeInput-topview,.mineCodeInput-view-backbtn {
    display: flex;
    flex-direction: row;
}

.mineCodeInput-view-backbtn {
    width: 100rpx;
    height: 80rpx;
    align-items: center;
}

.mineCodeInput-backbtnImage {
    width: 30rpx;
    height: 30rpx;
}

.mineCodeInput-backbtnTitle {
    height: 30rpx;
    line-height: 30rpx;
    font-size: var(--font-tg);
}

.mineCodeInput-view-logo {
    width: 140rpx;
    height: 140rpx;
}

.mineCodeInput-codeMessage {
    width: 686rpx;
    height: 42rpx;
    line-height: 42rpx;
    margin-top: 28rpx;
    text-align: center;
    color: var(--color-cd);
    font-size: var(--font-tc);
}

.mineCodeInput-getAgainBtn {
    margin-top: 18rpx;
    width: 238rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: var(--font-tg);
    text-align: center;
    color: var(--color-cb);
    border: 1px solid var(--color-cb);
    border-radius: 30rpx;
}

.mineCodeInput-inputsView {
    margin-top: 42rpx;
    width: 500rpx;
    height: 134rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.mineCodeInput-gridView {
    width: 100rpx;
    height: 132rpx;
    border: 1px solid var(--color-ci);
    border-radius: 8rpx;
    line-height: 132rpx;
    text-align: center;
    font-size: var(--font-ta);
}

.mineCode-input {
    width: 0;
}

.is-hidden {
    display: none;
}