.mineCodeLogin-view {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.mineCodeLogin-view-logo {
    margin-top: 50rpx;
    width: 140rpx;
    height: 140rpx;
}

.mineCodeLogin-view-inputs {
    width: 686rpx;
    display: flex;
    flex-direction: column;
}

.mineCodeLogin-phonenum {
    width: 100%;
    height: 94rpx;
    margin-top: 16rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.phonenum-input {
    width: 100%;
    height: 94rpx;
    font-size: var(--font-tb);
}

.mineCodeLogin-clear {
    width: 94rpx;
    height: 94rpx;
    flex-shrink: 0;
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
}

.clear-icon {
    margin-right: 10rpx;
}

.mineCodeLogin-message {
    line-height: 96rpx;
    color: var(--color-cd);
    font-size: var(--font-tg);
}

.mineCodeLogin-sendCodeBtn {
    width: 100%;
    height: 96rpx;
    color: #fff;
    line-height: 96rpx;
    text-align: center;
    font-size: var(--font-tb);
    background-color: var(--color-cb);
    border-radius: 8rpx;
    margin-top: 36rpx;
    opacity: 1;
}

.mineCodeLogin-sendCodeBtn-nouse {
    opacity: .3;
}

.mineCodeLogin-bottomView {
    width: 686rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.user_protocol_parent {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: var(--font-te);
    color: var(--color-ci);
    line-height: 34rpx;
    height: 84rpx;
    padding-top: 6rpx;
}

.user_protocol_parent_wx_login_fixed {
    position: fixed;
    bottom: 46rpx;
    left: 0rpx;
    right: 0rpx;
}

.user_protocol_show {
    color: var(--color-cb);
}

.mineCodeLogin-changeAccountLoginBtn {
    height: 96rpx;
    line-height: 96rpx;
    text-align: right;
    width: 200rpx;
    color: var(--color-cb);
    font-size: var(--font-tc);
}

.mineCodeLogin-line {
    width: 100%;
    height: 2rpx;
    background-color: var(--color-cg);
}

.is-hidden {
    display: none;
}