.mineSafeCode-view {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.mineSafeCode-topview {
    width: 686rpx;
    margin-top: 50rpx;
    justify-content: space-between;
}

.mineSafeCode-topview,.mineSafeCode-view-backbtn {
    display: flex;
    flex-direction: row;
}

.mineSafeCode-view-backbtn {
    width: 100rpx;
    height: 80rpx;
    align-items: center;
}

.mineSafeCode-backbtnImage {
    width: 30rpx;
    height: 30rpx;
}

.mineSafeCode-backbtnTitle {
    height: 30rpx;
    line-height: 30rpx;
    font-size: var(--font-tg);
}

.mineSafeCode-view-logo {
    width: 140rpx;
    height: 140rpx;
}

.mineSafeCode-safeCodeView {
    margin-top: 26rpx;
    width: 292rpx;
    height: 74.5rpx;
    display: flex;
    flex-direction: row;
    border: 1px solid var(--color-cg);
}

.mineSafeCode-safeCodeImage {
    height: 100%;
    width: 198.5rpx;
}

.mineSafeCode-safeCodeTitle {
    height: 100%;
    line-height: 74.5rpx;
    width: 93.5rpx;
    text-align: center;
    color: var(--color-cb);
    font-size: var(--font-th);
}

.mineSafeCode-view-inputs {
    width: 686rpx;
    margin-top: 30rpx;
    display: flex;
    flex-direction: column;
}

.mineSafeCode-safeCodeNum {
    width: 100%;
    height: 94rpx;
    margin-top: 16rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.safeCodeNum-input {
    width: 100%;
    height: 94rpx;
    font-size: var(--font-tb);
}

.mineSafeCode-confirBtn {
    width: 100%;
    height: 96rpx;
    color: #fff;
    line-height: 96rpx;
    text-align: center;
    font-size: var(--font-tb);
    background-color: var(--color-cb);
    border-radius: 8rpx;
    margin-top: 66rpx;
}

.mineSafeCode-line {
    width: 100%;
    height: 2rpx;
    background-color: var(--color-cg);
}

.is-hidden {
    display: none;
}