.cardcell {
    width: 650rpx;
    height: 370rpx;
    background-size: 100%;
    position: relative;
}

.cardcell-bgimage,.cardcell-parent {
    width: 100%;
    height: 100%;
}

.cardcell-parent {
    position: absolute;
    display: flex;
    flex-direction: column;
    margin-left: 38rpx;
}

.card-chongzhiColor {
    color: #7e5714;
}

.card-quanyiColor {
    color: #424757;
}

.card-whiteColor {
    color: #fff;
}

.cardcell-cardname {
    font-size: var(--font-tb);
    height: 50rpx;
    line-height: 50rpx;
    margin-top: 44rpx;
    font-weight: 500;
}

.cardcell-cardname,.cardcell-cinemaname {
    width: 550rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.cardcell-cinemaname {
    margin-top: 8rpx;
}

.cardcell-cinemaname,.cardcell-integral {
    height: 36rpx;
    line-height: 36rpx;
    font-size: var(--font-tg);
}

.cardcell-integral {
    margin-top: 97rpx;
}

.cardcell-outtimedate {
    margin-top: 14rpx;
    height: 36rpx;
    line-height: 36rpx;
    font-size: var(--font-tg);
}

.cardcell-balance {
    position: absolute;
    bottom: 45rpx;
    right: 72rpx;
    height: 70rpx;
    align-items: left;
    display: flex;
    flex-direction: row;
}

.cardcell-balance-title {
    margin-top: 27rpx;
    text-align: right;
    height: 30rpx;
    font-size: var(--font-te);
}

.cardcell-balance-price {
    margin-left: 10rpx;
    margin-right: 10rpx;
    line-height: 60rpx;
    text-align: left;
    font-size: var(--font-ta);
}

.cardcell-showBadView {
    transform: rotate(-20deg);
    top: 23rpx;
    right: 36rpx;
    display: flex;
}

.cardcell-showBadStatus,.cardcell-showBadView {
    position: absolute;
    width: 184rpx;
    height: 124rpx;
}

.cardcell-baddesc {
    margin: auto;
    font-size: var(--font-te);
    color: var(--color-cd);
}

.is-hidden {
    display: none;
}