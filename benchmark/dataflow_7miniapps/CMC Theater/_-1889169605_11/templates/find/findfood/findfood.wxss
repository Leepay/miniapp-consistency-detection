.findfood-view {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.findfood-view-cell {
    width: 220rpx;
    height: 100%;
    margin-left: 22.5rpx;
}

.findfood-cell-imageview {
    width: 100%;
    height: 220rpx;
    background-image: var(--shop-defimage);
    background-size: 100%;
}

.findfood-cell-image {
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
}

.findfood-cell-nameview {
    margin-top: 16rpx;
    height: 40rpx;
    overflow: hidden;
    font-size: var(--font-tg);
    display: flex;
    flex-direction: row;
}

.findfood-cell-huiview {
    flex-shrink: 0;
    margin-top: 5rpx;
    min-width: 50rpx;
    max-width: 70rpx;
    height: 30rpx;
}

.findfood-cell-name {
    margin-left: 4rpx;
    height: 40rpx;
    line-height: 40rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.findfood-cell-price {
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    color: var(--color-ce);
    font-size: var(--font-tc);
    font-weight: 500;
    margin-top: 4rpx;
    display: flex;
}

.findfood-cell-count {
    margin-left: 24rpx;
    font-size: var(--font-tf);
    color: var(--color-ce);
}

.confirmGoodcell_add_peice_text {
    font-size: var(--font-tf);
    font-weight: 400;
    color: #fe4632;
    margin-left: 4rpx;
    margin-top: 2rpx;
}

.findfood-cell-addbtn {
    width: 75rpx;
    margin-left: 145rpx;
}

.findfood-cell-addbtn,.findfood-cell-optionaddbtn {
    height: 75rpx;
    margin-top: 145rpx;
    display: flex;
    position: absolute;
}

.findfood-cell-optionaddbtn {
    width: 150rpx;
    margin-left: 70rpx;
}

.findfood-cell-addbtnimg {
    width: 48rpx;
    height: 48rpx;
    margin: auto;
}

.is-hidden {
    display: none;
}