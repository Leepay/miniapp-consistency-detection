.supper-picker {
    display: flex;
    flex-direction: row;
}

.findPicker-view {
    height: 430rpx;
    transition: width .3s;
    background-color: var(--color-cf);
}

.width0 {
    width: 0;
}

.width20 {
    width: 20%;
}

.width25 {
    width: 25%;
}

.width40 {
    width: 40%;
}

.width50 {
    width: 50%;
}

.width60 {
    width: 60%;
}

.width100 {
    width: 100%;
}

.findPicker-column {
    line-height: 60rpx;
    text-align: center;
    height: 100%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.color-gray {
    color: var(--color-cd);
}

.align-left {
    text-align: left;
}

.align-right {
    text-align: right;
}