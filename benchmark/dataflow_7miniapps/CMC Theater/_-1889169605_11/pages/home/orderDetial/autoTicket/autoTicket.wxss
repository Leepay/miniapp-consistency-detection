page {
    background: #fff;
}

.auto-ticket-top {
    background: #fff7e0;
    height: 66rpx;
    width: 100%;
    text-align: center;
    margin-bottom: 89rpx;
}

.auto-ticket-top-text {
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: var(--color-cb);
    line-height: 66rpx;
}

.advert-swiper {
    height: 920rpx;
}

.advert-swiper-item {
    margin-right: 16rpx;
}

.auto-ticket-swiper-content {
    margin-right: 10rpx;
    margin-left: 16rpx;
    display: flex;
    position: relative;
    flex-direction: column;
    align-items: center;
    background: #fff;
    height: 812rpx;
    box-shadow: 0 0 32rpx rgba(0,0,0,.2);
    border-radius: 12rpx;
}

.auto-ticket-title {
    background: #ffac3d;
    border-top-left-radius: 12rpx;
    border-top-right-radius: 12rpx;
    width: 100%;
    height: 126rpx;
    text-align: center;
}

.auto-ticket-qrcodeview {
    margin-top: 70rpx;
    display: flex;
    flex-direction: column;
    align-content: center;
}

.auto-ticket-qrcode {
    width: 480rpx;
    height: 480rpx;
    margin: auto;
}

.nil-view {
    flex-grow: 1;
}

.auto-ticket-text {
    font-family: PingFangSC-Semibold;
    font-size: 18px;
    color: #fff;
    line-height: 126rpx;
}

.auto-ticket-tips {
    height: 71rpx;
    width: 100%;
    text-align: center;
    border: 1px solid #f1f1f1;
}

.auto-ticket-tips-text {
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #8b8b8b;
    line-height: 71rpx;
}