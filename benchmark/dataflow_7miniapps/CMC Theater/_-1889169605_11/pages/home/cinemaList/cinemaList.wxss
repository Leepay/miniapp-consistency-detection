page {
    height: 100%;
    background-color: var(--color-cg);
}

.cinema-changecity,page {
    width: 100%;
}

.cinema_changecity_parent {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 104rpx;
    background-color: #fff;
}

.cinema-changecity-currentcity {
    flex: 1;
    height: 104rpx;
    line-height: 104rpx;
    text-indent: 53rpx;
    font-size: var(--font-tc);
}

.cinema_changecity_jiantou_icon {
    margin-right: var(--ml_sanshi);
    width: 16rpx;
    height: 28rpx;
}

.cinema-changecity-line {
    width: 100%;
    height: 30rpx;
    background-color: var(--color-cg);
    border: 1rpx solid var(--color-ch);
}

.cinema-cell {
    height: 144rpx;
    width: 100%;
    white-space: nowrap;
    background-color: #fff;
}

.cinema-cell-name-view {
    padding-top: 20rpx;
    margin-left: 53rpx;
    height: 53rpx;
    overflow: hidden;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.cinema-cell-name {
    max-width: 640rpx;
    line-height: 53rpx;
    font-size: var(--font-tc);
    overflow: hidden;
    text-overflow: ellipsis;
}

.cinema-cell-hui {
    border-radius: 4rpx;
    width: 28rpx;
    height: 28rpx;
    line-height: 25rpx;
    padding-top: 3rpx;
    text-align: center;
    margin-left: 10rpx;
    color: #fff;
    font-size: var(--font-tf);
    background-color: var(--color-cb);
}

.cinema-cell-address-view {
    margin-left: 53rpx;
    width: 680rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 46rpx;
}

.cinema-cell-address {
    width: 580rpx;
    font-size: var(--font-te);
}

.cinema-cell-address,.cinema-cell-distance {
    height: 46rpx;
    line-height: 46rpx;
    color: var(--color-cd);
    overflow: hidden;
    text-overflow: ellipsis;
}

.cinema-cell-distance {
    width: 100rpx;
    text-align: right;
    font-size: var(--font-tf);
}

.cinema-cell-line {
    margin-left: 53rpx;
    margin-top: 25rpx;
    width: 700rpx;
    height: 1rpx;
    background-color: var(--color-ch);
}

.location-address {
    background-color: var(--color-ch);
    border-radius: 8rpx;
    position: fixed;
    height: 50rpx;
    margin-left: 20rpx;
    width: 710rpx;
    bottom: 10rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.location-address-image {
    width: 25rpx;
    height: 25rpx;
    margin-left: 15rpx;
}

.location-address-showlable {
    margin-left: 15rpx;
    color: var(--color-cd);
    padding-top: 3rpx;
    font-size: var(--font-te);
    width: 600rpx;
    height: 50rpx;
    line-height: 50rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}

.location-address-refimage {
    width: 25rpx;
    height: 29rpx;
    margin-left: 15rpx;
}

.open_card_parent {
    height: 74rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    background: #fff7e0;
}

.open_card_text {
    color: var(--color-cb);
    font-size: var(--font-td);
}

.open_card_image {
    margin-left: 36rpx;
    margin-right: 10rpx;
    width: 32rpx;
    height: 32rpx;
}

.is-hidden {
    display: none;
}