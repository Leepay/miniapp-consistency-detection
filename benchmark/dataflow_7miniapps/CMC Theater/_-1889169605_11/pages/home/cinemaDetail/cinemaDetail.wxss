page {
    background-color: #fff;
}

.detail-topview {
    width: 100%;
    height: 106rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.detail-topview-cinemaname {
    width: 614rpx;
    height: 100%;
    line-height: 106rpx;
    text-indent: 32rpx;
    font-size: var(--font-tb);
}

.detail-topview-line {
    width: 2rpx;
    height: 36rpx;
    background-color: var(--color-ci);
}

.detail-topview-callphone {
    width: 134rpx;
    height: 100%;
    display: flex;
}

.detail-topview-callphone-image {
    margin: auto;
    width: 48rpx;
    height: 48rpx;
}

.detail-baseinfo {
    width: 100%;
    overflow: hidden;
}

.detail-baseinfo-view {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: left;
}

.detail-baseinfo-image {
    width: 30rpx;
    height: 30rpx;
    margin: 30rpx;
}

.detail-baseinfo-desc {
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    width: 80%;
    display: flex;
    align-self: center;
    flex-direction: column;
    justify-content: left;
}

.detail-baseinfo-desc-text {
    font-size: var(--font-te);
    color: var(--color-cd);
    overflow: hidden;
    text-overflow: ellipsis;
}

.detail-baseinfo-arrowimage {
    width: 20rpx;
    height: 20rpx;
    margin-left: 35rpx;
    align-self: center;
}

.detail-twogroup {
    width: 100%;
}

.detail-feature,.detail-feature-view {
    width: 100%;
    min-height: 80rpx;
}

.detail-feature-view {
    display: inline-flex;
    flex-direction: row;
    align-items: left;
}

.detail-feature-name {
    white-space: nowrap;
    height: 26rpx;
    line-height: 26rpx;
    margin-left: 30rpx;
    margin-top: 23rpx;
    text-align: center;
    font-size: var(--font-tf);
    color: var(--color-cb);
    border: 1rpx solid var(--color-cb);
    border-radius: 4rpx;
    padding: 0rpx 4rpx;
}

.detail-feature-desc {
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 28rpx;
    margin-left: 20rpx;
    margin-top: 23rpx;
    margin-bottom: 23rpx;
    font-size: var(--font-te);
    color: var(--color-cd);
}

.detail-notice,.detail-threegroup {
    width: 100%;
}

.detail-notice-desc {
    margin: 20rpx 30rpx;
    overflow: hidden;
    font-size: var(--font-te);
    color: var(--color-cd);
}

.detail-fourgroup {
    width: 100%;
}

.detail-photoscroll {
    width: 750rpx;
    padding-bottom: 30rpx;
}

.detail-photoscroll-bg {
    height: 156rpx;
    padding-left: 13rpx;
    padding-right: 34rpx;
    display: inline-flex;
    flex-direction: row;
}

.detail-photocell {
    margin-left: 21rpx;
    width: 233rpx;
    height: 156rpx;
}

.detail-photocell-image {
    width: 233rpx;
    height: 156rpx;
    background-size: 100%;
    background-image: var(--shop-defimage);
}

.detail-graygap {
    width: 100%;
    height: 24rpx;
    margin-right: 1rpx;
    background-color: var(--color-cg);
    border: 1rpx solid var(--color-ch);
}

.detail-line {
    width: 720rpx;
    margin-left: 30rpx;
    height: 2rpx;
    background-color: var(--color-ch);
}

.detail-title {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: var(--font-tc);
    text-indent: 30rpx;
}

.goMovieBtn,.goMovieBtnHolder {
    width: 100%;
    height: 116rpx;
}

.goMovieBtn {
    line-height: 116rpx;
    text-align: center;
    font-size: var(--font-tb);
    color: #fff;
    background-color: var(--color-cb);
    position: fixed;
    bottom: 0;
}

.is-hidden {
    display: none;
}