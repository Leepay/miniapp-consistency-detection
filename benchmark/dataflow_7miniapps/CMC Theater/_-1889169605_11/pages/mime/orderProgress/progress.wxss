.root {
    width: 100%;
    background: var(--color-cg);
}

.order_info,.root {
    display: flex;
    flex-direction: column;
}

.order_info {
    background: #fff;
    padding: 16rpx 32rpx 32rpx;
    box-sizing: border-box;
}

.order_info_item {
    margin-top: 16rpx;
}

.text {
    color: var(--color-cd);
}

.text,.value {
    font-size: var(--font-td);
}

.value {
    color: var(--color-cc);
}

.order_progress {
    background: #fff;
}

.progress_group {
    flex-direction: column;
}

.progress_group,.progress_item {
    display: flex;
}

.progress_item {
    flex-direction: row;
    box-sizing: border-box;
    min-height: 80rpx;
    position: relative;
}

.progress_left {
    position: relative;
    margin-left: 14rpx;
    width: 58rpx;
}

.v_line_top {
    width: 2rpx;
    height: 45rpx;
    position: absolute;
    top: 0rpx;
    left: 28rpx;
    background: #ebebeb;
}

.line_transparent {
    background: transparent;
}

.progress_img {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    z-index: 2;
    top: 36rpx;
    left: 14rpx;
}

.v_line_bottom {
    width: 2rpx;
    position: absolute;
    bottom: 0rpx;
    top: 40rpx;
    left: 28rpx;
    background: #ebebeb;
}

.progress_right {
    margin-top: 32rpx;
}

.progress_status {
    font-size: var(--font-td);
    color: var(--color-cd);
    display: block;
}

.progress_status_first {
    color: var(--color-cc);
}

.progress_time {
    display: block;
    font-size: var(--font-td);
    color: var(--color-cd);
    margin-top: 12rpx;
}

.progress_group_item_title {
    padding-left: 32rpx;
    font-size: var(--font-tc);
    color: var(--color-cc);
    height: 106rpx;
    line-height: 106rpx;
    vertical-align: middle;
}

.progress_group_zhanwei {
    height: 16rpx;
    background: var(--color-cg);
}

.cb_text {
    color: var(--color-cb);
}