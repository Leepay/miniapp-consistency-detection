.fillW {
    width: 100%;
    background: var(--color-cg);
    height: 100%;
}

.person_top {
    height: 522rpx;
    -webkit-box-orient: vertical;
    flex-direction: column;
    background-size: 100%,100%;
    background-image: var(--percent-head-bg);
    display: flex;
    -webkit-box-direction: normal;
    -webkit-box-align: center;
}

.person_item,.person_top {
    width: 100%;
    align-items: center;
}

.person_item {
    height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.person_item_text {
    flex: 1;
    text-align: left;
    color: var(--color-cc);
    font-size: var(--font-td);
    line-height: 100rpx;
    vertical-align: middle;
    height: 100rpx;
}

.person_circleImg {
    width: 162rpx;
    height: 162rpx;
    margin-top: 146rpx;
    border: 0 solid transparent;
    border-radius: 50%;
    background: transparent;
}

.person_item_message {
    font-size: var(--font-tf);
    color: var(--color-ce);
}

.person_item_left_icon {
    width: 48rpx;
    height: 48rpx;
    margin-right: var(--ml_sanshi);
}

.person_item_jiantou_icon {
    margin-right: var(--ml_sanshi);
    width: 16rpx;
    height: 28rpx;
}

.is-hidden {
    display: none;
}