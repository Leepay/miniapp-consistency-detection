page {
    height: 100%;
    background: red;
}

.move {
    display: flex;
    flex-direction: row;
    justify-content: center;
    background: #000;
}

.move_item {
    width: 200rpx;
    height: 100rpx;
    background: #ff0;
}

.movable_area {
    height: 100px;
    width: 200%;
    background: #ff0;
    margin-top: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.movable_view {
    height: 50px;
    width: 50px;
    background: #00f;
}

.day {
    text-align: center;
    vertical-align: middle;
    width: 40rpx;
    height: 150rpx;
    line-height: 75rpx;
    font-size: 20px;
    background: red;
}

.sv {
    white-space: nowrap;
    overflow: scroll;
    background: #fff;
    height: 180rpx;
}

.sv_item_parent {
    display: inline-block;
    background: #000;
    padding: 10rpx;
    vertical-align: top;
}

.sv_item,.sv_item_parent {
    flex-direction: row;
    height: 150rpx;
}

.sv_item {
    background: #ff0;
}

.sv_item,.time_info {
    display: flex;
}

.time_info {
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: green;
    padding-left: 10rpx;
    padding-right: 10rpx;
    border-radius: 4rpx;
    border: 1rpx solid var(--color-cb);
}