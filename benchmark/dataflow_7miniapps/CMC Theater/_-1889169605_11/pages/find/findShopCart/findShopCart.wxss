page {
    overflow: hidden;
    height: 100%;
    background-color: var(--color-cg);
}

.findshopcart-view {
    width: 100%;
    height: 100%;
}

.shopcart-list-nogoods {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.nogoods-image {
    width: 80rpx;
    height: 80rpx;
}

.nogoods-title {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    margin-top: 20rpx;
    color: var(--color-cd);
    text-align: center;
    font-size: var(--font-td);
}

.shopcart-cell {
    width: 100%;
    background-color: #fff;
}

.shopcart-cellview {
    width: 100%;
    display: flex;
    flex-direction: row;
}

.shopcart-cell-choseimageview {
    width: 86rpx;
    margin-top: 30rpx;
    height: 140rpx;
    display: flex;
}

.shopcart-cell-choseimage {
    margin: auto;
    width: 40rpx;
    height: 40rpx;
}

.shopcart-cell-goodimage {
    margin-top: 30rpx;
    width: 140rpx;
    height: 140rpx;
    background-image: var(--shop-defimage);
    background-size: 100%;
}

.shopcart-cell-namepriceview {
    margin-left: 20rpx;
    margin-top: 30rpx;
    width: 466rpx;
}

.shopcart-cell-goodname {
    width: 100%;
    height: 42rpx;
    line-height: 42rpx;
    font-size: var(--font-td);
}

.shopcart-cell-gooddes,.shopcart-cell-goodname {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.shopcart-cell-gooddes {
    color: var(--color-cd);
    font-size: var(--font-te);
    height: 34rpx;
    line-height: 34rpx;
}

.shopcart-cell-huiview {
    width: 50rpx;
    height: 30rpx;
}

.shopcart-cell-huimessage {
    font-size: var(--font-te);
    color: var(--color-cd);
}

.shopcart-cell-priceview {
    width: 100%;
    justify-content: space-between;
    align-items: center;
}

.shopcart-cell-price-view,.shopcart-cell-priceview {
    height: 80rpx;
    display: flex;
    flex-direction: row;
}

.shopcart-cell-price-view {
    justify-content: center;
}

.shopcart-cell-price {
    font-size: var(--font-td);
    font-weight: 500;
    color: var(--color-ce);
    line-height: 80rpx;
}

.shopcart-cell-oldprice {
    line-height: 80rpx;
    margin-top: 3rpx;
    margin-left: 6rpx;
    font-size: var(--font-tf);
    color: var(--color-cd);
    text-decoration: line-through;
}

.shopcart-cell-chosegoods {
    height: 100%;
    width: 160rpx;
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
}

.shopcart-chosegoods-addbtn,.shopcart-chosegoods-delbtn {
    width: 50rpx;
    height: 50rpx;
}

.shopcart-chosegoods-countlable {
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: var(--font-td);
    text-align: center;
}

.findshopcart-cell-addmoreview {
    width: 100%;
    margin-left: 146rpx;
}

.findshopcart-cell-addmoretop {
    height: 70rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.findshopcart-cell-addmoreimage {
    width: 70rpx;
    height: 30rpx;
}

.findshopcart-cell-addmoremessage {
    margin-left: 20rpx;
    color: var(--color-cd);
}

.findshopcart-cell-addmorebtn,.findshopcart-cell-addmoremessage {
    margin-top: 2rpx;
    height: 30rpx;
    line-height: 30rpx;
    font-size: var(--font-te);
}

.findshopcart-cell-addmorebtn {
    margin-left: 10rpx;
    color: var(--color-ce);
}

.findshopcart-cell-addmorearrow {
    width: 30rpx;
    height: 30rpx;
}

.findshopcart-cell-moregoods {
    width: 100%;
}

.findshopcart-moregoods-cell {
    width: 100%;
    height: 106rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.moregoods-cell-goodimage {
    width: 90rpx;
    height: 90rpx;
    flex-shrink: 0;
    background-image: var(--shop-defimage);
    background-size: 100%;
}

.moregoods-cell-prentview {
    margin-left: 16rpx;
    margin-right: 32rpx;
    width: 480rpx;
    height: 90rpx;
}

.moregoods-cell-nameview {
    width: 100%;
    height: 34rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.moregoods-cell-cellmoreimage {
    width: 70rpx;
    height: 30rpx;
    flex-shrink: 0;
}

.moregoods-cell-name {
    margin-left: 20rpx;
    font-size: var(--font-te);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.moregoods-cell-price {
    margin-top: 16rpx;
    height: 42rpx;
    line-height: 42rpx;
    font-size: var(--font-tc);
    color: var(--color-ce);
}

.findshopcart-buttomview {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 90rpx;
    flex-wrap: wrap;
    justify-content: space-between;
}

.findshopcart-buttomview,.findshopcart-buttomview-priceview {
    display: flex;
    flex-direction: row;
}

.findshopcart-buttomview-priceview {
    background-color: #fff;
    width: 480rpx;
    height: 100%;
}

.findshopcart-buttomview-pricetitle {
    height: 100%;
    padding-top: 3rpx;
    margin-left: 20rpx;
    line-height: 90rpx;
    font-size: var(--font-tc);
}

.findshopcart-buttomview-price {
    margin-left: 10rpx;
    height: 100%;
    line-height: 90rpx;
    font-size: var(--font-tb);
    font-weight: 500;
    color: var(--color-ce);
}

.findshopcart-buttomview-buyview {
    width: 264rpx;
    height: 100%;
    background-color: var(--color-cb);
    color: #fff;
    font-size: var(--font-tc);
    font-weight: 500;
    line-height: 90rpx;
    text-align: center;
}

.findshopcart-buttomview-buyview-cannotuse {
    background-color: #8b8b8b;
}

.longline {
    height: 1rpx;
}

.lineview,.longline {
    width: 100%;
    background-color: var(--color-cg);
}

.lineview {
    margin-top: 20rpx;
    height: 4rpx;
}

.findshopcart-cell-lineview {
    margin-top: 5rpx;
    margin-bottom: 20rpx;
    width: 100%;
    height: 1rpx;
    background-color: var(--color-cg);
}

.is-hidden {
    display: none;
}