page {
    height: 100%;
    background-color: #fff;
}

.findshop-scroll-list {
    width: 100%;
    height: 100%;
}

.findshop-list-nogoods {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.nogoods-image {
    width: 80rpx;
    height: 80rpx;
}

.nogoods-title {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    margin-top: 20rpx;
    color: var(--color-cd);
    text-align: center;
    font-size: var(--font-td);
}

.findshop-scroll-listcell {
    width: 100%;
}

.findshop-listcell-view {
    padding-top: 22rpx;
    padding-bottom: 22rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
}

.findshop-listcell-image {
    margin-left: 22rpx;
    width: 185rpx;
    height: 185rpx;
    background-image: var(--shop-defimage);
    background-size: 100%;
}

.findshop-listcell-prentview {
    margin-left: 22rpx;
    width: 475rpx;
}

.findshop-listcell-name {
    height: 60rpx;
    line-height: 60rpx;
    font-size: var(--font-tc);
}

.findshop-listcell-des,.findshop-listcell-name {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.findshop-listcell-des {
    height: 66rpx;
    line-height: 66rpx;
    width: 100%;
    font-size: var(--font-te);
    color: var(--color-cd);
}

.findshop-listcell-promo-cell {
    margin-top: 5rpx;
    display: flex;
}

.findshop-listcell-promo-tuijian {
    width: 30rpx;
    height: 30rpx;
    margin-right: 12rpx;
}

.findshop-listcell-huiview {
    width: 52rpx;
    height: 30rpx;
}

.findshop-listcell-price-view {
    margin-top: 10rpx;
    justify-content: space-between;
    height: 45rpx;
}

.findshop-listcell-price-view,.findshop-listcell-priceview {
    display: flex;
    flex-direction: row;
}

.findshop-listcell-price {
    line-height: 45rpx;
    font-size: var(--font-td);
    font-weight: 500;
    color: var(--color-ce);
}

.findshop-listcell-oldprice {
    margin-top: 3rpx;
    margin-left: 5rpx;
    line-height: 45rpx;
    font-size: var(--font-te);
    color: var(--color-cd);
    text-decoration: line-through;
}

.findshop-hotgoods-title {
    line-height: 45rpx;
    margin-left: 24rpx;
    font-size: var(--font-tf);
    color: var(--color-ce);
}

.findshop-buttom-title {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    font-size: var(--font-te);
    color: var(--color-cd);
    text-align: center;
}

.lineview {
    margin-right: 22rpx;
    margin-left: 22rpx;
    height: 2rpx;
    background-color: var(--color-ch);
}

.is-hidden {
    display: none;
}