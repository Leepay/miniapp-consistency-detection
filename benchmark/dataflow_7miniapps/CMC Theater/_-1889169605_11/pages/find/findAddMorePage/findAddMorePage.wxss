page {
    background-color: #fff;
}

.addmore-page,.addmore-page-scroll,page {
    height: 100%;
}

.addmore-pagecell {
    width: 100%;
    height: 200rpx;
    display: flex;
    flex-direction: column;
}

.addmore-pagecell-prentview {
    height: 200rpx;
}

.addmore-pagecell-choseimageview,.addmore-pagecell-prentview {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.addmore-pagecell-choseimageview {
    width: 88rpx;
    height: 140rpx;
    flex-shrink: 0;
}

.addmore-pagecell-choseimage {
    width: 40rpx;
    height: 40rpx;
    margin-left: 32rpx;
}

.addmore-pagecell-goodimage {
    width: 140rpx;
    height: 140rpx;
    background-image: var(--shop-defimage);
    background-size: 100%;
    flex-shrink: 0;
}

.addmore-pagecell-rightview {
    width: 500rpx;
    height: 140rpx;
    margin-left: 20rpx;
    margin-right: 42rpx;
}

.addmore-pagecell-name {
    height: 42rpx;
    line-height: 42rpx;
    font-size: var(--font-tc);
}

.addmore-pagecell-des,.addmore-pagecell-name {
    width: 100%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.addmore-pagecell-des {
    height: 34rpx;
    line-height: 34rpx;
    font-size: var(--font-te);
    color: var(--color-cd);
}

.addmore-pagecell-price {
    margin-top: 18rpx;
    height: 42rpx;
    line-height: 42rpx;
    font-size: var(--font-tc);
    color: var(--color-ce);
}

.addmore-pagecell-line {
    margin-left: 88rpx;
    width: 662rpx;
    height: 2rpx;
    background-color: var(--color-cg);
}

.addmore-page-confirbtn {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    color: #fff;
    text-align: center;
    font-size: var(--font-tc);
    font-weight: 500;
    background-color: var(--color-cb);
}