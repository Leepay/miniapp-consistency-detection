.score {
    width: 100%;
    display: flex;
    flex-direction: column;
    background: #fff;
}

.group {
    height: 50rpx;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding-right: 32rpx;
}

.child,.group {
    display: flex;
    padding-left: 32rpx;
}

.child,.child_item_parent {
    height: 140rpx;
    flex-direction: column;
}

.child_item_parent {
    justify-content: center;
    padding-right: 32rpx;
}

.child_item,.child_item_parent {
    display: flex;
}

.child_item {
    width: 100%;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.tran_time {
    font-size: var(--font-te);
    color: var(--color-cd);
}

.tran_type {
    font-size: var(--font-td);
    color: var(--color-cc);
}

.tran_status {
    font-size: var(--font-te);
    color: var(--color-cc);
}

.tran_value {
    font-size: var(--font-td);
    color: var(--color-cc);
    font-weight: 500;
}

.tran_value_consume {
    color: var(--color-cd);
}