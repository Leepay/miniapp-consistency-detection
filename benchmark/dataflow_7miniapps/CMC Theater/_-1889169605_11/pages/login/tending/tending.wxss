page {
    background-color: #fff;
}

.tending-view,page {
    width: 100%;
    height: 100%;
}

.tending-mainview,.tending-view {
    display: flex;
}

.tending-mainview {
    margin: auto;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.tending-imageview {
    width: 354rpx;
    height: 260rpx;
}

.tending-title {
    margin-top: 10rpx;
    font-size: 42rpx;
    font-weight: 500;
}

.tending-subtitle {
    margin-top: 15rpx;
    font-size: 28rpx;
}

.tending-message {
    margin-top: 15rpx;
    width: 312rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    font-size: 32rpx;
    background-color: var(--color-cg);
    border-radius: 9rpx;
    font-weight: 500;
}