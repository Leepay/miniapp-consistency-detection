page {
    height: 100%;
    display: flex;
}

.entry-view {
    width: 100%;
    margin: 80rpx auto auto;
    justify-content: space-around;
    align-items: center;
}

.entry-item,.entry-view {
    display: flex;
    flex-direction: column;
}

.entry-item {
    width: 580rpx;
    height: 280rpx;
    background-color: #fff;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 19rpx 2rpx #e8e8e8;
    flex-wrap: wrap;
}

.entry-item-blue {
    color: #597ddf;
}

.entry-item-orange {
    color: #ffb23e;
}

.entry-item-red {
    color: #ff724d;
}

.entry-item-image {
    width: 180rpx;
    height: 180rpx;
    margin-top: 50rpx;
    margin-left: 68rpx;
}

.entry-item-title {
    width: 280rpx;
    margin-left: 27rpx;
    margin-top: 80rpx;
    height: 66rpx;
    line-height: 66rpx;
    font-size: 48rpx;
    font-weight: 500;
}

.entry-item-desc {
    width: 280rpx;
    margin-top: 10rpx;
    margin-left: 27rpx;
    height: 42rpx;
    line-height: 42rpx;
    font-size: var(--font-tc);
}

.is-hidden {
    display: none;
}