.tag {
    position: relative;
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
}

.tag:last-child {
    margin: 0;
}

.tag-left-image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 8rpx;
}

.tag-left-text {
    padding: 0 12rpx;
    height: 36rpx;
    line-height: 36rpx;
    border-radius: 18rpx;
    background-color: #000;
    font-size: 22rpx;
    background: rgba(0,0,0,0.5);
    text-align: center;
}

.tag-right-icon {
    position: absolute;
    right: 0;
    width: 32rpx;
    height: 22rpx;
}

.tag-form {
    position: absolute;
    width: 100%;
    height: 100%;
}

.tag-form button {
    background: none;
    padding: 0;
    margin: 0;
    border-radius: 0;
    width: 100%;
    height: 100%;
}