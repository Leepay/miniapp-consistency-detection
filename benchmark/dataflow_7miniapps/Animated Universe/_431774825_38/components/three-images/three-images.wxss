.three-images {
    padding-left: 24rpx;
    background: #13131f;
}

.three-images-images {
    display: flex;
    flex-wrap: wrap;
}

.three-images-item {
    position: relative;
    margin-right: 22rpx;
    margin-bottom: 22rpx;
    width: 220rpx;
    height: 220rpx;
}

.three-images-bigImg {
    width: 220rpx;
    height: 220rpx;
    border-radius: 6rpx;
}

.three-images-text {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.three-images-text image {
    margin-right: 4rpx;
    width: 30rpx;
    height: 30rpx;
}

.three-images-text text {
    padding: 0 6rpx;
    background: rgba(255,255,255,0.5);
    border-radius: 20rpx;
    font-size: 24rpx;
}