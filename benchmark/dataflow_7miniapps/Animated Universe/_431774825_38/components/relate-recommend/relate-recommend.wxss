.relate-recommend {
    margin-top: 50rpx;
}

.relate-recommend-title {
    position: relative;
    height: 56rpx;
}

.relate-recommend-title image {
    position: absolute;
    height: 30rpx;
    width: 30rpx;
    left: 24rpx;
    top: 16rpx;
}

.relate-recommend-title text {
    position: absolute;
    height: 56rpx;
    left: 64rpx;
    line-height: 56rpx;
    font-size: 40rpx;
}

.relate-recommend-images {
    margin-top: 40rpx;
}

.relate-recommend-item {
    position: relative;
    float: left;
    margin: 0 0 20rpx 22rpx;
    width: 220rpx;
    height: 220rpx;
    background: none;
    padding: 0;
    border-radius: 0;
}

.relate-recommend-bigImg {
    width: 220rpx;
    height: 220rpx;
    border-radius: 12rpx;
}

.relate-recommend-text {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.relate-recommend-text image {
    margin-right: 4rpx;
    width: 30rpx;
    height: 30rpx;
}

.relate-recommend-text text {
    padding: 0 6rpx;
    background: rgba(0,0,0,0.5);
    border-radius: 20rpx;
    font-size: 28rpx;
    height: 36rpx;
    line-height: 36rpx;
    color: white;
}