.story-many-image {
    background: #2a2d3f;
    color: #fff;
}

.story-many-image-top {
    position: relative;
    height: 200rpx;
}

.story-many-preview {
    position: absolute;
    top: 30rpx;
    left: 24rpx;
    right: 24rpx;
    height: 140rpx;
    text-align: center;
}

.story-many-preview .one-image {
    position: absolute;
    width: 230rpx;
    height: 140rpx;
    border-radius: 12rpx;
}

.story-many-preview .one-image:nth-child(1) {
    left: 0;
}

.story-many-preview .one-image:nth-child(2) {
    position: relative;
}

.story-many-preview .one-image:nth-child(3) {
    right: 0;
}

.story-many-preview tag {
    position: absolute;
    left: 10rpx;
    top: 2rpx;
}

.story-many-content {
    padding: 0 24rpx;
    font-size: 36rpx;
    line-height: 54rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.story-many-source {
    padding: 34rpx 24rpx 38rpx 24rpx;
    font-size: 24rpx;
    line-height: 24rpx;
    color: #888;
}