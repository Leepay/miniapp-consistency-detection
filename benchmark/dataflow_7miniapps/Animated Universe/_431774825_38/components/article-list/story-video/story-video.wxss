.story-video {
    background: #2a2d3f;
}

.story-video-top {
    position: relative;
    height: 316rpx;
}

.story-video-title {
    position: absolute;
    left: 24rpx;
    top: 30rpx;
}

.story-video-source {
    position: absolute;
    bottom: 20rpx;
    right: 20rpx;
    line-height: 24rpx;
    font-size: 24rpx;
    color: rgba(255,255,255,0.4);
}

.story-video-top video-time {
    position: absolute;
    right: 34rpx;
    top: 40rpx;
}

.story-video-top video-volume {
    position: absolute;
    right: 490rpx;
    bottom: 30rpx;
}

.story-video-top video,.story-top-image {
    position: absolute;
    top: 30rpx;
    right: 24rpx;
    width: 460rpx;
    height: 260rpx;
    border-radius: 12rpx;
}