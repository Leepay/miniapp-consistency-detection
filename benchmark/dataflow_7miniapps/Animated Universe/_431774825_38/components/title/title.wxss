image {
    margin: 0;
}

.title {
    position: relative;
    display: flex;
    align-items: center;
}

.lf-img {
    width: 8rpx;
    height: 28rpx;
}

.title-text,.title-text-ip {
    margin-left: 18rpx;
    font-size: 40rpx;
    line-height: 40rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.title-text {
    flex-grow: 1;
}

.rt-text {
    font-size: 24rpx;
    margin-right: 6rpx;
}

.rt-img {
    width: 10rpx;
    height: 14rpx;
}

.title-button {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: none;
    border-radius: 0;
    margin: 0;
    padding: 0;
}