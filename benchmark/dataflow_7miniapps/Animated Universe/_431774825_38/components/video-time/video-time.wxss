.video-time {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 106rpx;
    height: 40rpx;
    line-height: 40rpx;
    border-radius: 20rpx;
    font-size: 22rpx;
    background: rgba(0,0,0,0.5);
}

.video-time image {
    width: 10rpx;
    margin-right: 6rpx;
}

.video-time-md {
    width: 140rpx;
    background: linear-gradient(to right,#513582,#6d349d);
}

.video-time-noTime {
    width: 40rpx;
    height: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(0,0,0,0.5);
    border-radius: 50%;
}

.video-time-noTime image {
    width: 100%;
    height: 100%;
}