.subscribe-button {
    margin: 0;
    padding: 0;
    width: 108rpx;
    height: 58rpx;
    border-radius: 8rpx;
}

.subscribe-button text {
    float: left;
    line-height: 58rpx;
    font-size: 24rpx;
    color: #fff;
}

.subscribe-button image,.subscribe-button-no image {
    float: left;
    margin: 0 12rpx 0 12rpx;
    width: 18rpx;
    height: 100%;
}

.subscribe-button-has {
    background: #272935;
}

.subscribe-button-no {
    background: linear-gradient(to right,#d73674,#6834a0);
}