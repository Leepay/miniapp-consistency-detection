<view class="image-pop" hidden="{{isHidden}}">
    <image mode="aspectFit" src="{{preList[curIndex]}}"></image>
    <view class="image-pop-layer">
        <view>{{curIndex+1}}/{{preList.length}}</view>
    </view>
    <view class="image-pop-content">
        <image src="/images/send_save_image.png"></image>
        <button bindtap="closeTip" class="image-pop-button" data-index="0">朕知道了</button>
        <view bindtap="closeTip" class="image-pop-text1" data-index="1">完全了解,不用提醒</view>
        <view class="image-pop-text2">关注“动图宇宙”公众号</view>
        <view class="image-pop-text2">获取每日动图</view>
    </view>
</view>
