.image-pop {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: #000;
}

.image-pop image {
    width: 100%;
    height: 100%;
}

.image-pop-layer,.image-pop-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.image-pop-layer {
    background: #000;
    opacity: 0.6;
    z-index: 10;
}

.image-pop-layer view {
    font-size: 28rpx;
}

.image-pop-content {
    z-index: 100;
    color: #fff;
}

.image-pop view {
    text-align: center;
}

.image-pop-content image {
    display: block;
    margin: 286rpx auto 182rpx;
    width: 648rpx;
    height: 206rpx;
}

.image-pop-button {
    margin: 0 auto 42rpx;
    width: 260rpx;
    height: 96rpx;
    line-height: 96rpx;
    border-radius: 48rpx;
    background: linear-gradient(to right,#BF367E,#6834A0);
    font-size: 28rpx;
    color: #fff;
}

.image-pop-text1,.image-pop-text2 {
    line-height: 40rpx;
    font-size: 28rpx;
}

.image-pop-text1 {
    margin: 0 auto 94rpx;
    text-decoration: underline;
}