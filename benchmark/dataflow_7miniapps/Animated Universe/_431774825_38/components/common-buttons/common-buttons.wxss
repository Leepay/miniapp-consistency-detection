.common-buttons {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0;
    width: 138rpx;
    height: 60rpx;
    font-size: 24rpx;
    background: #fff;
    border-radius: 30rpx 0 0 30rpx;
    box-shadow: 0 -2rpx 4rpx 2rpx rgba(0,0,0,0.1);
