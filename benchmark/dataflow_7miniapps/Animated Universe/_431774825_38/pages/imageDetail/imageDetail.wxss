.image-detail-top {
    background: #2a2d3f;
    padding-bottom: 40rpx;
}

.image-detail-swiper {
    margin: 0 116rpx;
    height: 640rpx;
}

.image-detail-swiper swiper-item {
    display: flex;
}

.image-detail-desc {
    display: flex;
    align-items: center;
    margin: 32rpx 28rpx 28rpx 36rpx;
    line-height: 54rpx;
    font-size: 32rpx;
}

.image-detail-desc view:first-child {
    flex: 1;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    word-break: break-all;
}

.image-detail-middle {
    width: 598rpx;
    height: 640rpx;
}

.image-detail-order {
    display: flex;
    margin: 28rpx 0 0 140rpx;
    font-size: 24rpx;
    line-height: 42rpx;
    height: 42rpx;
}

.image-detail-order form {
    width: 150rpx;
}

.image-detail-order form:first-child {
    margin-right: 60rpx;
}

.image-detail-order form:last-child {
    margin-left: 60rpx;
}

.image-detail-left,.image-detail-right {
    width: 30rpx;
    height: 100%;
}

.image-detail-left {
    margin-right: 20rpx;
}

.image-detail-right {
    margin-left: 20rpx;
}

.image-detail-funs {
    display: flex;
    margin-top: 30rpx;
}

.image-detail-funs form {
    flex: 1;
}

.image-detail-funs button {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: none;
    border-radius: 0;
    padding: 0;
    margin: 0;
    color: white;
}

.image-detail-funs image {
    width: 80rpx;
    height: 80rpx;
}

.image-detail-funs text {
    margin-top: 24rpx;
    font-size: 28rpx;
    line-height: 40rpx;
}

.image-detail-relate-recommend {
    height: 858rpx;
    display: block;
}

.change-img-button {
    display: flex;
    background: none;
    padding: 0;
    margin: 0;
    width: 150rpx;
    border-radius: 0;
    font-size: 30rpx;
    line-height: 42rpx;
    height: 42rpx;
    color: #fff;
}

.change-img-button view {
    width: 100rpx;
}

.image-detail-goto-index {
    position: fixed;
    bottom: 140rpx;
    right: 0;
}