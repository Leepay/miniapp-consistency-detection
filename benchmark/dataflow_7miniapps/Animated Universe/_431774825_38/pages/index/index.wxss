page {
    height: 100%;
    background: #13131f;
}

.index-go-wiki-button {
    padding: 30rpx 24rpx;
    background: #2a2d3f;
}

.story-big-tag {
    position: absolute;
    left: 34rpx;
    top: 38rpx;
}

.index-subject-content {
    position: relative;
}

.index-story {
    overflow-x: hidden;
    margin-bottom: 60rpx;
}

.block .index-story:last-child {
    margin-bottom: 0;
}

.index-title {
    margin: 70rpx 24rpx 40rpx;
}

.index-msg {
    position: relative;
    padding: 0 36rpx 0 28rpx;
    background: #2A2D3F;
}

.index-msg-android {
    padding: 0 36rpx 0 52rpx;
}

.index-msg-main {
    position: absolute;
    top: 18rpx;
    left: 28rpx;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding: 0 16rpx;
    width: 686rpx;
    height: 40rpx;
    font-size: 28rpx;
    border-radius: 24rpx;
}

.index-msg-android .index-msg-main {
    left: 52rpx;
    padding: 0 18rpx;
    width: 662rpx;
}

.index-msg-left {
    display: flex;
    align-items: center;
    width: 626rpx;
    height: 40rpx;
}

.index-msg-android .index-msg-left {
    width: 598rpx;
}

.index-msg-menu {
    margin: 0 4rpx;
    width: 54rpx;
    height: 28rpx;
}

.index-msg-delete {
    width: 28rpx;
    height: 28rpx;
}

.index-msg-bg {
    width: 686rpx;
    height: 70rpx;
}

.index-msg-android .index-msg-bg {
    width: 662rpx;
}