.my {
    height: 100%;
    background: #13131f;
}

.my-userInfo {
    display: flex;
    padding: 30rpx 24rpx 24rpx 40rpx;
    height: 160rpx;
    background: #2a2d3f;
}

.my-userInfo image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
}

.my-userInfo view {
    margin-right: 42rpx;
    width: 484rpx;
}

.my-userInfo view text:first-child {
    display: block;
    padding-bottom: 20rpx;
    width: 484rpx;
    line-height: 60rpx;
    font-size: 60rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.my-userInfo view text:last-child {
    display: block;
}

.my-features {
    display: flex;
    background: #2a2d3f;
}

.my-features button {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 36rpx 0 22rpx;
    width: 50%;
    background: transparent;
    color: #fff;
}

.my-features button::after {
    border: none;
}

.my-features image {
    margin-bottom: 26rpx;
    width: 40rpx;
    height: 40rpx;
}

.my-features image:last-child {
    margin-bottom: 20rpx;
}

.my-features button text {
    line-height: 40rpx;
    font-size: 28rpx;
}

.my-no-product {
    margin: 196rpx auto 0;
}

.my-no-product view {
    line-height: 40rpx;
    font-size: 28rpx;
    color: #787878;
    text-align: center;
}

.my-no-product button {
    display: block;
    margin: 30rpx auto 0;
    padding: 0;
    width: 360rpx;
    color: #fff;
    background: linear-gradient(to right,#d73674,#6834a0);
    border-radius: 38rpx;
    font-size: 32rpx;
}

.my-activity {
    display: flex;
    height: 88rpx;
    background: #2a2d3f;
}

.my-ip-icon {
    width: 88rpx;
    height: 88rpx;
}

.my-activity-mid {
    position: relative;
    margin-left: 14rpx;
    width: 436rpx;
}

.my-activity-mid image {
    position: absolute;
    width: 348rpx;
    height: 88rpx;
    z-index: 1;
}

.my-activity-mid text {
    position: absolute;
    width: 436rpx;
    line-height: 88rpx;
    font-size: 24rpx;
    z-index: 1;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}

.my-activity button {
    margin-left: 24rpx;
    width: 190rpx;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 24rpx;
    color: #fff;
    background: linear-gradient(to right,#D73674,#6834A0);
    border-radius: 0;
}