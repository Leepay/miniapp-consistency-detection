.my-products {
    background: #13131f;
}

.my-products-title {
    position: relative;
    display: flex;
    align-items: center;
    margin: 40rpx 24rpx 30rpx;
}

.my-products-icon {
    width: 8rpx;
    height: 28rpx;
}

.my-products-left {
    flex-grow: 1;
    margin-left: 18rpx;
    font-size: 40rpx;
    line-height: 40rpx;
}

.my-products-delete {
    font-size: 28rpx;
}

.my-products-cancel {
    margin-left: 50rpx;
    line-height: 40rpx;
    font-size: 28rpx;
}

.my-products-delete-icon {
    width: 36rpx;
    height: 40rpx;
}

.delete-gray {
    color: #979797;
}

.delete-red {
    color: #f5376c;
}

.my-products-imgs {
    display: flex;
    flex-wrap: wrap;
    padding-left: 24rpx;
}

.my-products-item {
    position: relative;
    margin-right: 22rpx;
    margin-bottom: 22rpx;
    width: 220rpx;
    height: 220rpx;
}

.my-products-image {
    width: 220rpx;
    height: 220rpx;
    border-radius: 6rpx;
}

.my-products-imgs-icon {
    position: absolute;
    top: 12rpx;
    right: 12rpx;
    width: 44rpx;
    height: 44rpx;
}