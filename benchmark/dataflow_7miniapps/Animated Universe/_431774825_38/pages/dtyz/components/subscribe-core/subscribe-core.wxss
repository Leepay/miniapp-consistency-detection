.subscribe-core {
    position: relative;
}

.subscribe-core-main-button {
    padding: 0;
    margin: 0;
    height: 190rpx;
    border-radius: 0;
    background: none;
}

.subscribe-core-main-button>image {
    margin-bottom: -10rpx;
    width: 342rpx;
    height: 190rpx;
}

.subscribe-core-button {
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
    margin-top: 20rpx;
    height: 58rpx;
    font-size: 28rpx;
}

.subscribe-core-button subscribe-button {
    margin-left: 12rpx;
}

.subscribe-core-text {
    position: absolute;
    top: 0;
    right: 4rpx;
    display: flex;
    align-items: center;
    width: 186rpx;
    height: 190rpx;
    pointer-events: none;
}

.subscribe-core-text view {
    line-height: 42rpx;
    font-size: 28rpx;
    word-break: break-all;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}