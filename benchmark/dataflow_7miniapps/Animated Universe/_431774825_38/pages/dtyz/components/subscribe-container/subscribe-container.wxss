.subscribe-container {
    position: relative;
    padding: 40rpx 24rpx 0;
    background: #2A2D3F;
}

.subscribe-container-swiperHeight {
    box-sizing: border-box;
    margin-top: 30rpx;
    height: 648rpx;
    padding-bottom: 70rpx;
}

.subscribe-container-swiperLow {
    margin-top: 30rpx;
    height: 340rpx;
}

.subscribe-container swiper-item {
    display: flex;
    flex-wrap: wrap;
}

.subscribe-container swiper-item subscribe-core:nth-child(1),.subscribe-container swiper-item subscribe-core:nth-child(3) {
    margin-right: 10rpx;
}

.subscribe-container swiper-item subscribe-core:nth-child(1),.subscribe-container swiper-item subscribe-core:nth-child(2) {
    margin-bottom: 40rpx;
}

.subscribe-container-item {
    display: inline-block;
}

.subscribe-container-dots {
    display: flex;
    justify-content: center;
    position: absolute;
    width: 702rpx;
    bottom: 30rpx;
}

.subscribe-container-dot {
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    margin: 0 10rpx;
    background-color: #3B3F5A;
}

.subscribe-container-active {
    background: linear-gradient(to right,#D73674,#6834A0);
}