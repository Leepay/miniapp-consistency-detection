page {
    height: 100%;
    position: relative;
    background-color: #191919;
}

.banner-img {
    width: 100%;
    height: 360rpx;
    display: inline-block;
    overflow: hidden;
    z-index: -1;
    position: absolute;
    top: 0;
    left: 0;
}

.banner {
    height: 360rpx;
    width: 100%;
    position: relative;
    display: flex;
    justify-content: center;
}

.center-layout {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-content: center;
    flex-wrap: nowrap;
    text-align: center;
    height: 370rpx;
    top: 360rpx;
    position: absolute;
}

.had-share-num-out-view {
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 84rpx;
    align-content: center;
    padding: 0 20rpx 0 20rpx;
    background: -webkit-gradient(linear,left top,right bottom,from(#ea0b86),to(#93f));
    margin-top: 30rpx;
    margin-bottom: 40rpx;
}

.deadline-view {
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 84rpx;
    align-content: center;
    padding: 0 60rpx 0 60rpx;
}

.refresh-btn {
    position: relative;
    height: 84rpx;
    width: 264rpx;
    background: -webkit-gradient(linear,left top,right bottom,from(#ea0b86),to(#93f));
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-top: 60rpx;
}

.refresh-btn-text {
    font-size: 14px;
    color: #fff;
    line-height: 88rpx;
}

.share-box {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    width: 100%;
}

.share-box .share-button {
    background: -webkit-gradient(linear,left top,right bottom,from(#ea0b86),to(#93f));
    color: #fff;
    opacity: 0;
}

.share-box .share-info {
    font-size: 14px;
    color: #fff;
    margin-top: 5px;
}

.agreement-button {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 26px;
    line-height: 26px;
    text-align: center;
    color: #444;
    font-size: 10px;
    text-decoration: underline;
}

.join-total {
    font-size: 15px;
    margin-top: 10px;
}

.share-total {
    font-size: 15px;
    margin-bottom: 5px;
}

.share-total .share-number {
    font-size: 24px;
    margin: 0 5px;
    color: red;
}

.share-number-box {
    margin-top: 5px;
}

.share-image-box {
    margin-right: 5px;
    display: inline-block;
}

.share-number-img {
    width: 50rpx;
    height: 68rpx;
    margin-left: 5px;
}

.share-warning {
    font-size: 12px;
}

.share-btn {
    width: 145px;
    height: 70px;
}

.form-box {
    width: 145px;
    height: 70px;
    position: absolute;
    top: 30px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 100000;
}

.activity-images {
    position: relative;
}