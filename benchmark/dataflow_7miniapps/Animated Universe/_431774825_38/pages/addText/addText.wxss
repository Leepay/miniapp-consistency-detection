page {
    height: 100%;
    position: relative;
    background-color: #191919;
}

movable-area {
    background: rgba(0,0,0,0);
}

input {
    padding-left: 4rpx;
    background: #fff;
    font-size: 32rpx;
    color: #000;
}

canvas {
    background-image: '../../images/moments.png';
    background-color: rgba(0,0,0,0);
}

.backgroundView {
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: #191919;
    z-index: -1;
    position: absolute;
}

.contentView {
    width: 100%;
    padding: 0;
    background-color: #191919;
    display: block;
    overflow-y: hidden;
    margin-bottom: 80px;
}

.editingContent {
    position: relative;
    padding-bottom: 48rpx;
    width: 100%;
    height: 460rpx;
    display: flex;
    justify-content: center;
    background-color: #2A2D3F;
}

.editImage {
    display: block;
    width: 100%;
    height: 460rpx;
}

.fontArea {
    width: 100%;
    display: flex;
    margin-top: 40rpx;
    height: 68rpx;
    align-items: center;
    justify-content: center;
}

.leftArea {
    flex: 0 0 34%;
    align-items: center;
    display: flex;
}

.rightArea {
    flex: 0 0 61%;
    height: 100%;
    display: flex;
    align-items: flex-start;
    align-content: flex-start;
    justify-content: space-between;
}

.placeholderArea {
    flex: 0 0 5%;
    background: rgba(0,0,0,0);
    height: 100%;
}

.vRedLine {
    width: 6rpx;
    height: 22rpx;
    margin-left: 24rpx;
    background: #F5376C;
    vertical-align: center;
}

.leftText {
    margin-left: 10rpx;
    font-size: 32rpx;
    color: rgba(255,255,255,1);
}

.fontSizeBoxWraper {
    box-sizing: border-box;
    padding: 2rpx;
    width: 136rpx;
    height: 68rpx;
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.fontSizeBox {
    width: 100%;
    height: 100%;
    background: rgba(39,41,53,1);
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    font-size: 32rpx;
}

.bgColorBoxWraper {
    box-sizing: border-box;
    padding: 2rpx;
    width: 136rpx;
    height: 68rpx;
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.bgColorBox {
    width: 100%;
    height: 100%;
    background: rgba(39,41,53,1);
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
}

.bgColorImage {
    width: 100%;
    height: 100%;
    border-radius: 12rpx;
}

.backgroundArea {
    width: 100%;
    display: flex;
    margin-top: 60rpx;
    height: 68rpx;
    align-items: center;
    justify-content: center;
}

.fontColorArea {
    width: 100%;
    display: flex;
    margin-top: 60rpx;
    height: 176rpx;
    align-items: center;
    justify-content: center;
}

.fontColorRightArea {
    flex: 0 0 61%;
    height: 100%;
    display: flex;
    flex-wrap: wrap;
    align-content: space-between;
    justify-content: space-between;
}

.fontColorBoxWrapper {
    box-sizing: border-box;
    padding: 2rpx;
    width: 80rpx;
    height: 80rpx;
    background: rgba(39,41,53,1);
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.fontColorBox {
    width: 100%;
    height: 100%;
    background: rgba(39,41,53,1);
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 38rpx;
}

.addText-compound {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 90rpx;
    width: 560rpx;
    border-radius: 46rpx;
    margin-top: 84rpx;
    margin-left: 96rpx;
    background: -webkit-gradient(linear,left top,right bottom,from(#D73674),to(#6834A0));
    color: white;
    font-size: 32rpx;
}

.fontColorBox {
    font-weight: bold;
}

.fontColorBoxWrapper:nth-child(1) .fontColorBox {
    color: #fff;
}

.fontColorBoxWrapper:nth-child(2) .fontColorBox {
    color: #000;
}

.fontColorBoxWrapper:nth-child(3) .fontColorBox {
    color: #E82640;
}

.fontColorBoxWrapper:nth-child(4) .fontColorBox {
    color: #FFE536;
}

.fontColorBoxWrapper:nth-child(5) .fontColorBox {
    color: #A8F3FE;
}

.fontColorBoxWrapper:nth-child(6) .fontColorBox {
    color: #FADC05;
}

.fontColorBoxWrapper:nth-child(7) .fontColorBox {
    color: #fff;
}

.fontColorBoxWrapper:nth-child(8) .fontColorBox {
    color: #000;
}

.fontColorBoxWrapper:nth-child(9) .fontColorBox {
    color: #51CDFB;
}

.fontColorBoxWrapper:nth-child(10) .fontColorBox {
    color: #FFA0DE;
}

.add-text-mova {
    position: absolute;
    left: 0;
    top: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 460rpx;
}

.add-text-label {
    box-sizing: border-box;
    text-align: center;
}

.UserAgreementView {
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 999;
    background-color: rgba(0,0,0,0.5);
    position: fixed;
}

.UserAgreementViewBorder {
    top: 10%;
    bottom: 10%;
    width: 70%;
    left: 10%;
    background: #fff;
    position: fixed;
    padding: 5%;
    border-radius: 5px;
}

.UserAgreementScrollView {
    top: 10%;
    bottom: 18%;
    width: 70%;
    left: 10%;
    background: #fff;
    position: fixed;
    padding: 5%;
    border-bottom: 1px solid #e5e5e5;
    border-radius: 5px;
}

.AgreeButton {
    position: fixed;
    bottom: 12%;
    left: 10%;
    width: 80%;
}

.UserAgreementScrollView-text1 {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
    margin-bottom: 16rpx;
    color: #000;
}

.UserAgreementScrollView-text2 {
    color: #888;
    font-size: 30rpx;
}

.AgreeButton text {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
    color: #02bb00;
}

.addText-clear {
    position: absolute;
    top: 0;
    right: 0;
    margin-top: -18rpx;
    margin-right: -18rpx;
    width: 40rpx;
    height: 40rpx;
    z-index: 100;
}

.addText-change-photo {
    background: #2A2D3F;
    overflow: hidden;
}

.addText-change-photo button {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 24rpx;
    width: 400rpx;
    height: 68rpx;
    line-height: 68rpx;
    background: #5A5D72;
    color: #fff;
    font-size: 28rpx;
}

.addText-change-photo image {
    margin-right: 18rpx;
    width: 32rpx;
    height: 32rpx;
}

.addText-nosend-images {
    padding: 22rpx 176rpx 10rpx;
    background: #2A2D3F;
}

.addText-authorise {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 400rpx;
    height: 400rpx;
    background: #5A5D72;
    border-radius: 12rpx;
}

.addText-authorise image {
    margin-bottom: 26rpx;
    width: 140rpx;
    height: 126rpx;
}

.addText-authorise view {
    line-height: 44rpx;
    font-size: 32rpx;
    color: #fff;
}