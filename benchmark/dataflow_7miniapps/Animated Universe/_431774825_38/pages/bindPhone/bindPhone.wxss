.bind-phone {
    background: #13131F;
}

.bind-phone-tip {
    line-height: 82rpx;
    background: #E64340;
    font-size: 28rpx;
    text-align: center;
}

.bind-phone-banner {
    width: 100%;
    height: 284rpx;
}

.bind-phone-text,.bind-code-text {
    margin: 38rpx 0 38rpx 58rpx;
    line-height: 40rpx;
    font-size: 28rpx;
}

.bind-code-text {
    margin-top: 42rpx;
}

.bind-phone input {
    margin-left: 58rpx;
    width: 400rpx;
    height: 34rpx;
    line-height: 34rpx;
    min-height: 34rpx;
    font-size: 24rpx;
}

.bind-phone-line {
    margin: 24rpx 0 0 56rpx;
    width: 640rpx;
    height: 4rpx;
    background: #474B63;
}

.bind-code-view {
    position: relative;
}

.bind-code-btn {
    position: absolute;
    top: -96rpx;
    right: 50rpx;
    width: 190rpx;
    height: 72rpx;
    line-height: 72rpx;
    border-radius: 36rpx;
    background: #474B63;
    font-size: 24rpx;
    color: #fff;
}

.bind-phone-confirm {
    margin: 110rpx 0 0 46rpx;
    width: 660rpx;
    height: 96rpx;
    line-height: 90rpx;
    background: #474B63;
    border-radius: 46rpx;
    color: #fff;
    font-size: 32rpx;
}

.bind-phone-holder {
    color: #787880;
}

.bind-linear {
    background: linear-gradient(to right,#D73674,#6834A0);
}