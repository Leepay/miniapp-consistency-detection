.stream-images-top {
    position: relative;
    margin: 112rpx 28rpx 36rpx;
}

.stream-images-top image,.stream-images-top video {
    width: 696rpx;
    height: 360rpx;
    border-radius: 20rpx;
}

.stream-images-top-desc {
    position: absolute;
    left: 0;
    bottom: 0;
    right: -2rpx;
    padding: 6rpx 32rpx 4rpx;
    height: 90rpx;
    background: #171922;
    opacity: .7;
    border-radius: 0 0 20rpx 20rpx;
    color: #fff;
    font-size: 28rpx;
}

.stream-desc-layer view {
    display: flex;
    align-items: center;
    display: inline-block;
}

.stream-desc-layer image {
    margin-left: 4rpx;
    width: 20rpx;
    height: 14rpx;
}

.stream-images {
    display: flex;
    margin: 96rpx 24rpx 40rpx;
}

.stream-images-ip {
    margin-top: 0;
}

.stream-images>view {
    flex: 1;
}

.stream-images-left {
    margin-right: 10rpx;
}

.stream-images image {
    margin-bottom: -10rpx;
    width: 100%;
    border-radius: 20rpx;
}

.noMore {
    text-align: center;
}

.stream-images-item {
    margin-top: 16rpx;
}

.stream-images-item1 {
    background: #272935;
    border-radius: 12rpx;
    padding-bottom: 18rpx;
}

.stream-images-text {
    margin: 16rpx 20rpx 0;
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.stream-images-footer {
    padding-bottom: 214rpx;
}

.stream-pop {
    position: fixed;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
}

.stream-layer {
    position: fixed;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    opacity: 0.5068;
    background: #000;
}

.stream-pop-main {
    position: absolute;
    top: 296rpx;
    left: 82rpx;
    width: 588rpx;
}

.stream-pop-main image {
    position: absolute;
    top: 0;
    left: 0;
    width: 588rpx;
    height: 180rpx;
    z-index: 10;
}

.stream-pop-content {
    position: absolute;
    top: 180rpx;
    z-index: 20;
    background: #2a2d3f;
    border-radius: 0 0 16rpx 16rpx;
}

.stream-pop-content view {
    margin: 0 48rpx;
    font-size: 24rpx;
    line-height: 32rpx;
}

.stream-pop-content button {
    margin: 40rpx 164rpx;
    width: 260rpx;
    height: 64rpx;
    line-height: 64rpx;
    border-radius: 16rpx;
    font-size: 28rpx;
    color: #fff;
    background: linear-gradient(to right,#D73674,#6834A0);
}