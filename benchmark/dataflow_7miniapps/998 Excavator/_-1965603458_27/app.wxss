.btn-confirm {
    width: 50%!important;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

.live_help {
    padding: 0px;
    margin: 0px;
    background: none;
    position: fixed;
    bottom: 10px;
    right: 5px;
    width: 60px;
    height: 60px;
}

.live_help:after {
    content: "";
    border: none;
}

.live_help image {
    width: 100%;
    height: 100%;
}

.clearfix::after,.clearfix::before {
    content: ".";
    clear: both;
    overflow: hidden;
    font-size: 0;
    height: 0;
}

.getPhone-dialog {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,.3);
    overflow: hidden;
    z-index: 9000;
}

.getPhone-Modall {
    width: 470rpx;
    height: 220rpx;
    position: fixed;
    top: 30%;
    left: 50%;
    transform: translateX(-50%);
    z-index: 9999;
    background: #fff;
    border-radius: 10rpx;
    padding: 50rpx;
}

.getPhone-title {
    font-size: 36rpx;
    color: #000;
    font-weight: 600;
}

.getPhone-footer button {
    margin-top: 30rpx;
    float: right;
    background: #fff;
    line-height: 50rpx;
}

.getPhone-content {
    font-size: 32rpx;
    color: #666;
    margin-top: 36rpx;
}

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 590rpx;
    height: 340rpx;
    position: fixed;
    top: 30%;
    left: 50%;
    z-index: 9999;
    transform: translateX(-50%);
    background: #fff;
    border-radius: 15rpx;
}

.modal-title {
    padding: 15rpx 15rpx 15rpx 50rpx;
    font-size: 36rpx;
    text-align: center;
    background: #f8f8f8;
    line-height: 52rpx;
    border-top-left-radius: 15rpx;
    border-top-right-radius: 15rpx;
}

.modal-content {
    padding: 36rpx 20rpx;
    font-size: 28rpx;
    color: #666;
    text-align: center;
}

.modal-content span {
    color: #56C9B7;
}

.modal-footer {
    display: flex;
    height: 86rpx;
}

.modal-footer button {
    width: 38%;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    font-size: 30rpx;
    border-radius: 10rpx;
}

button::after {
    border: none;
}

.btn-cancel {
    background: #f8f8f8;
}

.btn-confirm {
    background: #48C23D;
    color: #fff;
}