@import "../../__wuBaseWxss__/10.wxss";

@import "../equipment/equipment.wxss";

@import "../myissue/myissue.wxss";

.clearfix::after,.clearfix::before {
    content: ".";
    clear: both;
    overflow: hidden;
    font-size: 0;
    height: 0;
}

.weui-tab__panel {
    background: #fff;
}

.weui-navbar__item {
    background: #fff;
}

.kanjia_list {
    margin-top: 20rpx;
    padding: 15rpx 20rpx 20rpx 20rpx;
    overflow: hidden;
    background: #fff;
    border-bottom: 1px solid #ccc;
}

.kanjia_msg {
    padding-bottom: 20rpx;
    overflow: hidden;
}

.kanjia_msg>view {
    float: left;
}

.shebei_content {
    font-size: 34rpx;
    width: 65%;
    padding-left: 20rpx;
}

.shebei_content>view:nth-child(2) {
    color: #888;
    font-size: 28rpx;
    margin-top: 20rpx;
}

.shebei_pic {
    width: 32%;
    height: 168rpx;
}

.shebei_pic>image {
    width: 100%;
    height: 100%;
}

.jiage>view {
    float: left;
    width: 50%;
    font-size: 30rpx;
    color: #888;
}

.jiage text {
    font-size: 36rpx;
    color: #888;
}

.jiage>view:nth-child(1)>text {
    color: red;
}

.jiage {
    padding: 15rpx 0;
    border-top: 1px solid #ccc;
}

.tishi {
    font-size: 30rpx;
    color: #b2b2b2;
}

.device_price {
    color: #888;
    font-size: 30rpx;
    text-align: center;
    margin-top: 40rpx;
}

.weui-loadmore {
    margin: 40rpx auto 0 auto;
}

.comment_list .comment:last-child {
    border-bottom: none!important;
}

.comment_review>view {
    float: left;
    font-size: 30rpx;
    line-height: 60rpx;
}

.comment {
    height: 140rpx;
}

.comment_review>view:nth-child(2) {
    float: right;
    margin-right: 150rpx;
    width: 170rpx;
    height: 60rpx;
    background: #3392ff;
    color: #fff;
    line-height: 60rpx;
    font-size: 28rpx;
    border-radius: 10rpx;
    text-align: center;
}