<view class="page__bd">
    <view class="weui-panel weui-panel_access">
        <view class="weui-panel__hd">常见问题</view>
        <view class="weui-panel__bd">
            <view class="weui-media-box weui-media-box_text" wx:for="{{question}}">
                <view class="weui-media-box__title weui-media-box__title_in-text">{{item.title}}</view>
                <view class="weui-media-box__desc">{{item.content}}</view>
            </view>
        </view>
        <button bindtap="openchat" class="weui-panel__ft" openType="contact">
            <view class="weui-cell weui-cell_access weui-cell_link">
                <view class="weui-cell__bd">若还不能解决您的问题，可以直接联系客服。</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </view>
        </button>
    </view>
</view>
