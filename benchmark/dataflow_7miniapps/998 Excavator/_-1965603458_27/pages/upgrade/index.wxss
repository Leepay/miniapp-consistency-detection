@import "../../__wuBaseWxss__/10.wxss";

.page {
    background: #F8F8F8;
}

.upgrade {
    border-bottom: 1px solid #ddd;
    border-top: 1px solid #ddd;
    height: 40px;
}

.level {
    float: right;
    width: 25%;
    text-align: center;
    border-left: 1px solid #ccc;
    margin-left: -1px;
    font-size: 12px;
    height: 40px;
    line-height: 40px;
    color: #333;
    position: relative;
}

.active {
    background: #3392ff;
    color: #fff;
}

.activecontent {
    padding: 10px;
    font-size: 14px;
    background: #fff;
    color: #666;
}

.activecontent view {
    margin-bottom: 3px;
}

.price {
    border-top: 1px solid #ddd;
    background: #ddd;
    border-bottom: 1px solid #ddd;
    padding: 10px;
    font-size: 16px;
}

.price text {
    color: #ff3300;
    font-weight: bold;
}

.desc {
    font-size: 12px;
    color: #999;
    background: #fff;
    padding: 0px 15px 20px 15px;
}

.checkbox {
    text-align: center;
    font-size: 12px;
    color: #666;
}

.upgrade image {
    width: 30px;
    height: 30px;
    border-radius: 20px;
    border: 1px solid #3392ff;
    position: absolute;
    bottom: 35px;
    left: 50%;
    margin-left: -15px;
}