@import "../../__wuBaseWxss__/10.wxss";

@import "../upgrade/index.wxss";

.title {
    padding: 25rpx;
    border-bottom: 1px solid #ccc;
    margin: 0 25rpx 0 25rpx;
}

.recharge_title {
    font-size: 30rpx;
    color: #888;
    padding-left: 10rpx;
    border-left: 4px solid #1aad19;
    font-weight: normal;
    line-height: 16px;
}

.one>view>view:nth-child(1) {
    text-align: center;
    font-size: 34rpx;
    margin-top: 15rpx;
}

.one>view>view:nth-child(2) {
    text-align: center;
    font-size: 26rpx;
}

.options {
    padding: 0 25rpx;
    overflow: auto;
}

.options>view {
    float: left;
    width: 30%;
    height: 130rpx;
    border: 1px solid #1aad19;
    margin: 10rpx 1.2%;
    border-radius: 10rpx;
    color: #1aad19;
}

.clause {
    margin-top: 50rpx;
}

.desc {
    padding: 0px 25rpx 20rpx 25rpx;
}

.hint {
    text-align: center;
    font-size: 30rpx;
}

.clause {
    margin-top: 20rpx;
}

.desc {
    font-size: 30rpx;
    color: #888;
}