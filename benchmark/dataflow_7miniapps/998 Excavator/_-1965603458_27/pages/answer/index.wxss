page {
    background: url('http://images.998jx.com/youxi/askbg.jpg') center top;
    background-size: 100% 100%;
}

.center {
    text-align: center;
}

.title {
    font-weight: bold;
    margin-top: 30px;
    margin-bottom: 10px;
}

.desc {
    font-size: 15px;
    color: #000;
    margin-top: 5px;
    font-weight: bold;
}

.desc text {
    color: #f60;
}

.img {
    height: 40vh;
    margin: 5vh 10px 15px 10px;
    border-radius: 10px;
}

.img image {
    width: 100%;
    height: 100%;
}

.radio-group {
    padding: 10px;
    margin: 10px 20px;
    background: #fff;
}

.radio-group label {
    display: block;
    padding: 10px 0px;
    font-size: 14px;
    border-bottom: 1px solid #eee;
}

.radio-group label:last-child {
    border: none;
}

.submit {
    margin: 20px;
}

.boxnotes {
    position: relative;
}

.boxnotes image {
    position: absolute;
    top: -100px;
    right: 10px;
    width: 80px;
    height: 80px;
}

.answer {
    padding: 15px;
}

.answer .item {
    display: inline-block;
    width: 50%;
}

.answer .abtn {
    text-align: center;
    height: 40px;
    line-height: 40px;
    margin: 10px;
    background: url('http://images.998jx.com/youxi/game_bt.png');
    background-size: 100% 100%;
}

.pop {
    width: 100%;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 100;
    background: url('http://images.998jx.com/youxi/askbg.jpg') center top #fff;
    background-size: 100% 100%;
}

.pop_success {
    background: url('http://images.998jx.com/youxi/success_bg.jpg') center top #fff;
    background-size: 100% 100%;
}

.pop .btn view,.pop .btn button {
    display: block;
    margin: 10px 20%;
    text-align: center;
    background: url('http://images.998jx.com/youxi/game_bt.png');
    background-size: 100% 100%;
    border-radius: none;
    border: none;
    height: 40px;
    line-height: 40px;
}

.pop .btn view:first-child,.pop .btn button:first-child {
    color: #ff6600;
}

.btnlevel {
    text-align: center;
}

.pop .btnlevel button {
    display: inline-block;
    margin: 10px;
    padding-left: 30px;
    padding-right: 30px;
}

.thanks {
    text-align: center;
    margin: 10px;
}

.thanks text {
    color: #f60;
}

.faildbox {
    height: 50vh;
    margin-top: 18vh;
    padding-top: 1px;
    background: url('http://images.998jx.com/youxi/fail_boxbg.png') center top;
    background-size: 100% 100%;
}

.errotitle {
    margin-top: 150rpx;
    font-size: 22px;
}

.errotitle text {
    color: #630;
}

.rightanswer {
    text-align: center;
}

.faildboxdesc {
    font-size: 12px;
}

.faildboxdesc text {
    color: #f60;
}

.level {
    width: 80%;
    margin: 0px auto;
    padding: 5px;
    margin-top: 10vh;
    text-align: center;
}

.levelimg {
    text-align: center;
}

.levelimg image {
    width: 200px;
    animation: fade 1s infinite;
    animation-delay: 2s;
}

.end {
    height: 160px;
}

@-webkit-keyframes fade {
    from {
        -webkit-transform: scale(1);
    }

    50% {
        -webkit-transform: scale(0.95);
    }

    to {
        -webkit-transform: scale(1);
    }
}

@keyframes fade {
    from {
        -webkit-transform: scale(1);
    }

    50% {
        -webkit-transform: scale(0.95);
    }

    to {
        -webkit-transform: scale(1);
    }
}

.winbox {
    position: fixed;
    top: 26vh;
    left: 0;
    right: 0%;
    text-align: center;
}

.winbox image {
    width: 160px;
    height: 160px;
    margin: 0px auto;
}

.success,.choujiang {
    text-align: center;
}

.success image {
    width: 200px;
    height: 200px;
    margin: 0px auto;
}

.choujiang image {
    width: 100%;
    margin: 0px auto;
}

.winbox .close {
    animation: zoomInDown 1s linear forwards;
    animation-delay: 1s;
    position: absolute;
    top: -500px;
    left: 50%;
    margin-left: -80px;
}

@-webkit-keyframes zoomInDown {
    from {
        -webkit-transform: scale(1);
        top: -300px;
    }

    50% {
        -webkit-transform: scale(0.8);
        top: -10px;
    }

    60% {
        -webkit-transform: scale(1);
        top: 0px;
    }

    80% {
        -webkit-transform: scale(0.8);
        top: -10px;
    }

    to {
        -webkit-transform: scale(1);
        top: 0px;
    }
}

@keyframes zoomInDown {
    from {
        -webkit-transform: scale(1);
        top: -300px;
    }

    50% {
        -webkit-transform: scale(0.8);
        top: -10px;
    }

    60% {
        -webkit-transform: scale(1);
        top: 0px;
    }

    80% {
        -webkit-transform: scale(0.8);
        top: -10px;
    }

    to {
        -webkit-transform: scale(1);
        top: 0px;
    }
}

.toplevel {
    font-weight: bold;
    color: #f60;
    font-size: 18px;
    margin-bottom: 10px;
}

.popregister {
    width: 100%;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 100;
    background: rgba(000,000,000,0.6);
}

.popregister button {
    margin: 30vh 20% 0px 20%;
}

.process {
    border: 1px solid #865d21;
    background: linear-gradient(#c8b57e,#dacba0 50%,#c8b57e);
    padding: 1px;
    height: 10px;
    border-radius: 10px;
    position: absolute;
    left: 15%;
    right: 15%;
    top: 50px;
}

.process view {
    border-radius: 10px;
    border: 1px solid #006600;
    height: 8px;
    width: 50%;
    background: linear-gradient(#009900,#33cc00 50%,#009900);
}

.processtext {
    position: absolute;
    left: 15%;
    right: 15%;
    top: 60px;
}

.processtext text {
    display: inline-block;
    width: 18%;
    font-size: 12px;
    color: #865d21;
}

.processtext text:nth-child(6) {
    text-align: right;
    position: absolute;
    right: 0%;
    top: 3px;
}