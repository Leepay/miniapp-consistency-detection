@import "../../__wuBaseWxss__/10.wxss";

.weui-uploader__file {
    width: 30%;
    margin-right: 3.33%;
    position: relative;
}

textarea[placeholder] {
    position: relative;
    z-index: 0;
}

.weui-uploader__file .edit {
    position: absolute;
    right: 3px;
    top: 3px;
    width: 25px;
    height: 25px;
}

.weui-uploader__img {
    width: 100%;
    height: 100px;
    border: 1px solid #ccc;
}

.textarea {
    height: 120rpx;
    width: 100%;
    font-size: 14px;
    color: #666;
}

.more {
    font-size: 12px;
    text-align: center;
    padding: 10px;
    color: #ccc;
}

.more image {
    width: 12px;
    height: 12px;
    vertical-align: middle;
    margin-right: 5px;
}

textarea {
    z-index: 1px;
}

.hide {
    display: none;
}

.model {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100vh;
    z-index: 10000;
    background: rgba(000,000,000,0.7);
}

.modelcontent {
    background: #fff;
    margin: 10%;
    border-radius: 5px;
    position: relative;
}

.modelcontent .modelhead {
    background: #f8f8f8;
    padding: 10px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    text-align: center;
}

.modelcontent .modellist,.modelcontent .modellisty {
    padding: 0 10px;
    max-height: 320px;
    width: auto;
    padding-bottom: 10px;
}

.modelcontent .modellist view {
    font-size: 14px;
    border-bottom: 1px solid #ddd;
    padding: 10px 0px;
    width: 49%;
    float: left;
    text-align: center;
}

.modelcontent .modellisty view {
    font-size: 14px;
    border-bottom: 1px solid #ddd;
    padding: 10px 0px;
    width: 33%;
    float: left;
    text-align: center;
}

.notes {
    background: #ccc;
    font-size: 14px;
    color: #fff;
    padding: 10px;
}

.ts {
    color: #FF6600;
    z-index: 0;
    position: relative;
}

.openmap {
    width: 20px;
    height: 20px;
    margin-left: 15px;
}

.center {
    text-align: center;
}

.getmobile {
    border-radius: 0;
    background: none;
}

.getmobile:after {
    content: "";
    border: none;
}

.add_pic {
    font-size: 23rpx;
    color: #666;
    margin-top: 56px;
    text-align: center;
}