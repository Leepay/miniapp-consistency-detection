.dialog-model {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 100;
}

.dialog-tip {
    position: absolute;
    z-index: 101;
    width: 624rpx;
    min-height: 118rpx;
    line-height: 1.5;
    background: #000;
    box-shadow: 0 0rpx 48rpx 0 hsla(0,0%,73.7%,.5);
    font-size: 24rpx;
    font-weight: 400;
    color: #fff;
    border-radius: 15rpx;
    padding: 20rpx;
    box-sizing: border-box;
}

.dialog-tip-arrow {
    content: "";
    position: absolute;
    top: -25rpx;
    left: 132rpx;
    width: 0;
    height: 0;
    border: 15rpx solid transparent;
    border-bottom-color: #000;
}