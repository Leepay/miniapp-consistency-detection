.create {
    position: fixed;
    z-index: 100;
    overflow: hidden;
}

.create,.create .bg {
    top: 0;
    width: 100%;
    height: 100%;
}

.create .bg {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0,0,0,.75);
    z-index: 99;
}

.create .transparent {
    background: transparent;
}

.blank {
    width: 100%;
}

.fillincardInfo {
    position: relative;
    height: 100%;
    background: #fff;
    width: 100%;
    z-index: 999;
    left: 0;
    box-shadow: 0 -6rpx 30rpx 0 rgba(14,39,77,.3);
    border-radius: 32rpx 32rpx 0 0;
}

.fillincardInfo .submission {
    display: flex;
    justify-content: space-between;
    margin: 0 20rpx;
}

.fillincardInfo .submission text {
    font-size: 36rpx;
    font-weight: 700;
    display: block;
    padding-top: 30rpx;
}

.fillincardInfo .submission button {
    padding: 0 30rpx;
    height: 56rpx;
    line-height: 56rpx;
    border-radius: 28rpx;
    font-size: 28rpx;
    margin-top: 20rpx;
    color: #fff;
    font-weight: 700;
    background: linear-gradient(135deg,#438fff,#256de6);
}

.perfectInfor {
    background: #fff;
    border-radius: 8rpx;
}

.perfectInfor text {
    font-size: 28rpx;
    font-weight: 400;
    color: #333;
}

.perfectInfor .item {
    display: flex;
    margin-left: 20rpx;
    margin-top: 20rpx;
    box-sizing: border-box;
    padding: 0 20rpx;
    width: 710rpx;
    height: 82rpx;
    line-height: 82rpx;
    background: #fff;
    border-radius: 8rpx;
    border: 1px solid #e3e3e3;
}

.perfectInfor .fill {
    width: 12rpx;
    height: 12rpx;
    display: block;
    color: #e91e63;
    margin: 5rpx 16rpx 0 10rpx;
}

.perfectInfor input {
    font-size: 28rpx;
    margin-top: 21rpx;
    width: 83%;
}

.bottom-positon {
    transform: translateY(100%);
}

.chooseCard {
    position: relative;
    height: 100%;
    background: #fff;
    width: 100%;
    z-index: 999;
    left: 0;
    overflow: hidden;
    box-shadow: 0 -6rpx 30rpx 0 rgba(14,39,77,.3);
    border-radius: 30rpx 30rpx 0 0;
}

.chooseCard .submission {
    display: flex;
    justify-content: space-between;
    margin: 0 20rpx;
    padding-bottom: 20rpx;
}

.chooseCard .submission text {
    font-size: 36rpx;
    font-weight: 700;
    display: block;
    padding-top: 30rpx;
}

.chooseCard .submission button {
    width: 172rpx;
    height: 56rpx;
    line-height: 56rpx;
    background: linear-gradient(135deg,#438fff,#256de6);
    border-radius: 28rpx;
    font-size: 28rpx;
    margin-top: 20rpx;
    color: #fff;
    font-weight: 700;
}

.chooseCard .submission .noJoin {
    background: #e3e3e3;
}

.myCard {
    width: 100%;
    box-sizing: border-box;
    padding: 10rpx 0 36rpx;
    height: 100%;
}

.new_prefs {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    height: 202rpx;
    background: #fff;
    margin: 30rpx auto;
    width: 710rpx;
    border-radius: 16rpx;
    border: 2rpx dashed #999;
}

.new_prefs image {
    width: 34rpx;
    height: 34rpx;
    margin-right: 10rpx;
}

.new_prefs .title {
    color: #999;
}

.card_prefs {
    width: 710rpx;
    margin: 10rpx auto 20rpx;
    background: #fff;
    box-shadow: 0 0 14rpx 0 hsla(0,0%,73.7%,.5);
    border-radius: 16rpx;
    overflow: hidden;
    position: relative;
}

.myCard .card_prefs:last-child {
    margin-bottom: 100rpx;
}

.card_prefs .flex {
    position: relative;
}

.card_prefs .flex,.card_prefs .flex .item {
    flex: auto;
    display: flex;
    border-radius: 16rpx;
}

.card_prefs .flex .item {
    padding: 20rpx;
    background: #fff;
}

.card_prefs .flex .item .userpic {
    width: 270rpx;
    height: 162rpx;
}

.card_prefs .flex .right {
    display: flex;
    flex: auto;
    flex-direction: column;
    height: 162rpx;
    margin-left: 20rpx;
}

.card_prefs .flex .right .name {
    display: flex;
    font-size: 36rpx;
    font-weight: 700;
    color: #333;
}

.card_prefs .flex .right .name .n {
    max-width: 200rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.card_prefs .flex .right .company {
    margin: auto 0;
    font-size: 28rpx;
    font-weight: 400;
    color: #666;
}

.more-then {
    max-width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.card_prefs .flex .right .job {
    display: flex;
    font-size: 24rpx;
}

.card_prefs .flex .right .j {
    padding: 0 18rpx;
    background: #f7f7f7;
    color: #666;
    border-radius: 6rpx;
}

.card_prefs .flex .selected {
    position: absolute;
    width: 34rpx;
    height: 34rpx;
    right: 20rpx;
    top: 20rpx;
}

.card_prefs .flex-tip {
    margin: auto 18rpx;
    padding: 4rpx 20rpx;
    font-size: 24rpx;
    color: #f2a72c;
    width: 168rpx;
    height: 34rpx;
    line-height: 34rpx;
    font-weight: 700;
    background: rgba(242,167,44,.1);
    border-radius: 4rpx;
}

.redInput {
    color: #e91e63;
}