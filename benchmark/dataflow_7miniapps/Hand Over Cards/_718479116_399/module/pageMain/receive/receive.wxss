.receiveCon {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.75);
    z-index: 150;
    font-weight: 700;
}

.receive {
    width: 640rpx;
    height: 336rpx;
    background: #fff;
    border-radius: 24rpx;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    margin: auto;
}

.receiveText {
    padding: 64rpx 48rpx;
    border-bottom: 1px solid rgba(0,0,0,.1);
    color: #353535;
    line-height: 48rpx;
    text-align: center;
}

.btnCon,.receiveText {
    font-size: 17px;
    font-family: PingFangSC-Medium,PingFang SC;
}

.btnCon {
    line-height: 24px;
    letter-spacing: 1px;
}

.btnCon view {
    width: 50%;
    display: inline-block;
    text-align: center;
    line-height: 110rpx;
    box-sizing: border-box;
}

.leftBtn {
    border-right: 1px solid rgba(0,0,0,.1);
    color: #000;
}

.rightBtn {
    color: #2979ff;
}