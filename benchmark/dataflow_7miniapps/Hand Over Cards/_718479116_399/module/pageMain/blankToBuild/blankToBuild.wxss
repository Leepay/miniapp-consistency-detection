.blank {
    width: 100%;
    height: 100%;
}

.blank-top {
    box-sizing: border-box;
    height: 306rpx;
    background: url("https://img-1255379270.file.myqcloud.com/img/cardMain/blank-build.png") no-repeat;
    background-size: 100% 100%;
}

.blank-con {
    padding: 0 56rpx;
}

.blank-tit {
    margin: 80rpx auto 30rpx;
    text-align: center;
    font-size: 48rpx;
    font-weight: 600;
    color: #333;
    line-height: 54rpx;
}

.baseCon-item {
    width: 610rpx;
    height: 40rpx;
    background: #fff;
    border-radius: 4px;
    border: 1px solid #ededed;
    margin-top: 20rpx;
    padding: 20rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #333;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.nameCon {
    margin-right: 42rpx;
}

.input {
    flex: 1;
    margin-top: 4rpx;
}

.complete {
    width: 28rpx;
    height: 28rpx;
}

.submitBuild {
    width: 342rpx;
    height: 92rpx;
    margin: 70rpx auto 0rpx;
    background: linear-gradient(128deg,#438fff,#256de6);
    box-shadow: 6px 6px 10px 0 rgba(41,46,59,.17);
    border-radius: 24px;
    text-align: center;
    line-height: 92rpx;
    font-size: 16px;
    font-weight: 500;
    color: #fff;
    text-shadow: 6px 6px 10px rgba(41,46,59,.17);
}