.new-signboard {
    position: relative;
    width: 750rpx;
    overflow: hidden;
}

.new-signboard .img {
    width: 750rpx;
}

.sign-con {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    background-color: rgba(0,0,0,.7);
    color: #fff;
    flex-direction: column;
}

.sign-con,.sign-con .one {
    display: flex;
}

.sign-con .one {
    padding: 20rpx 30rpx 0 20rpx;
    justify-content: flex-start;
    align-items: center;
    position: relative;
}

.sign-con .ptop72 {
    padding-top: 72rpx;
}

.sign-con .one .day {
    min-width: 70rpx;
    font-size: 70rpx;
    line-height: 70rpx;
    font-weight: 700;
}

.sign-con .one .m-w {
    min-width: 112rpx;
    margin: auto 0 auto 20rpx;
    font-size: 24rpx;
    line-height: 28rpx;
    font-weight: 700;
}

.sign-con .one .btn {
    margin: auto 0 auto auto;
    min-width: 132rpx;
    height: 50rpx;
    line-height: 51rpx;
    text-align: center;
    background: #fff;
    border-radius: 47rpx;
    font-size: 28rpx;
    font-weight: 700;
    color: #2979ff;
    opacity: 1;
}

.sign-con .one .sign-txt {
    position: absolute;
    right: 10rpx;
    min-width: 220rpx;
    height: 50rpx;
    font-size: 28rpx;
    font-weight: 700;
    color: #fff;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
}

.sign-con .one .sign-txt image {
    height: 30rpx;
    width: 30rpx;
    margin-left: 4rpx;
}

.sign-con .two {
    padding: 0 30rpx;
    margin-top: 20rpx;
    font-size: 38rpx;
    font-weight: 700;
    color: #fff;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-bottom: auto;
}

.msg .t {
    padding: auto 20rpx;
    font-size: 26rpx;
    font-weight: 400;
    color: #fff;
    line-height: 36rpx;
}

.msg .t-1 {
    margin: 4rpx auto 0;
}

.msg .t-2 {
    margin: 4rpx auto auto;
}

.signBtn {
    width: 156rpx;
    line-height: 56rpx;
    background: #fff;
    border-radius: 24px;
    margin: 0 auto 10rpx;
    text-align: center;
    font-weight: 600;
    color: #2979ff;
}

.signText {
    text-align: center;
    height: 48rpx;
    font-size: 28rpx;
    line-height: 48rpx;
}