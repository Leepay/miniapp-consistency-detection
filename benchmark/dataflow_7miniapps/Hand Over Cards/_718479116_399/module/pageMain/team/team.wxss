.short-con {
    width: 100%;
    margin-top: 20rpx;
    margin-bottom: 30rpx;
}

.join-team {
    margin: 0 auto;
    position: relative;
    text-align: center;
    width: 355rpx;
    padding: 20rpx 0;
    font-size: 28rpx;
    color: #2979ff;
    font-weight: 700;
}

.join-team .dotted {
    position: absolute;
    right: 94rpx;
    top: 22rpx;
    width: 12rpx;
    height: 12rpx;
    background: #f43530;
    border-radius: 50%;
}

.my-team {
    margin: 0 auto;
    width: 710rpx;
    padding: 0;
    position: relative;
    text-align: center;
    font-size: 28rpx;
    font-weight: 700;
    color: #999;
    display: flex;
    background-color: #fff;
    border-radius: 6rpx;
    justify-content: center;
}

.my-team .img {
    align-self: center;
    width: 28rpx;
    height: 25rpx;
    margin-right: 8rpx;
}

.s-con-add {
    position: relative;
    height: 90rpx;
    font-size: 28rpx;
    line-height: 90rpx;
    box-shadow: 0rpx 0rpx 10rpx 0rpx rgba(10,23,100,.1);
    border-radius: 6rpx;
    margin: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.s-con-add .addIcon {
    width: 30rpx;
    height: 30rpx;
}

.s-con-add .changTeam {
    margin-left: 4rpx;
    position: relative;
}

.s-con-add .changTeam text {
    font-weight: 700;
    color: #3f51b5;
    font-size: 28rpx;
}

.s-con-add .changTeam image {
    position: absolute;
    right: -60rpx;
    top: 14rpx;
    width: 60rpx;
    height: 28rpx;
}

.s-con image {
    width: 12rpx;
    height: 20rpx;
    position: absolute;
    right: 20rpx;
    top: 34rpx;
    display: inline-block;
}

.guidance {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 66;
    background: rgba(0,0,0,.75);
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.introduce {
    position: absolute;
    margin-top: -220rpx;
    text-align: center;
}

.introduce .title {
    font-size: 28rpx;
    font-weight: 700;
    color: #fff;
}

.introduce .gesture {
    width: 60rpx;
    height: 60rpx;
    margin-top: 20rpx;
}

.s-con {
    position: relative;
    height: 90rpx;
    font-size: 28rpx;
    line-height: 90rpx;
    box-shadow: 0rpx 0rpx 10rpx 0rpx rgba(10,23,100,.1);
    border-radius: 6rpx;
    margin: 20rpx;
    display: flex;
    z-index: 110;
    background: #fff;
}

.s-con text {
    width: 86%;
    font-weight: 400;
    padding: 0 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: left;
}

.my-team .t {
    align-self: center;
    color: #2979ff;
}