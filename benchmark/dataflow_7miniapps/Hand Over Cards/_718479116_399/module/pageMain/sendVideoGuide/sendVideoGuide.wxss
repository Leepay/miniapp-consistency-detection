.guide-ss {
    position: fixed;
    top: 99999rpx;
    left: 99999rpx;
    z-index: -1;
    width: 100%;
    height: 100%;
    display: flex;
    background: rgba(0,0,0,.75);
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.guide-ss .guide-s {
    padding-top: 150rpx;
    border-radius: 8rpx;
    color: #fff;
}

.t-top {
    display: flex;
    justify-content: center;
    font-size: 36rpx;
    height: 50rpx;
    padding: 10rpx 0 20rpx;
    margin: 0 auto;
}

.t-top .t-img {
    width: 42rpx;
    height: 40rpx;
}

.t-top .t-txt {
    font-weight: 700;
    margin-left: 6rpx;
}

.guide-s .m-t {
    margin: 20rpx auto;
    width: 438rpx;
    font-size: 30rpx;
    font-weight: 400;
    color: #000;
}

.guide-s .m {
    position: relative;
    margin: 0 auto;
}

.guide-s .m,.guide-s .m-v {
    width: 576rpx;
    height: 1024rpx;
}

.guide-ss .has-learn {
    padding: 20rpx 0 26rpx;
    text-align: center;
}

.has-learn .close-img {
    width: 40rpx;
    height: 40rpx;
}

.has-learn .learn-btn {
    width: 246rpx;
    height: 72rpx;
    line-height: 68rpx;
    border-radius: 40rpx;
    border: 1px solid #fff;
    margin: auto;
    color: #fff;
    font-weight: 500;
    font-size: 32rpx;
    background-color: transparent;
}

.btnTopConBg {
    width: 100%;
    height: 790rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 10;
}

.guideImgCon {
    width: 100%;
    height: 100%;
    text-align: center;
}

.guideImg {
    width: 620rpx;
    height: 930rpx;
}

.btnCon {
    position: absolute;
    left: 0rpx;
    bottom: 0rpx;
    width: 100%;
    height: 350rpx;
    z-index: 10;
}

.m {
    position: relative;
}

.v-cover {
    height: 140rpx;
}

.v-cover,.v-line-con {
    position: absolute;
    bottom: 0;
    width: 100%;
}

.v-line-con {
    padding: 20rpx 0;
    background-color: rgba(0,0,0,.4);
}

.v-line {
    width: 413rpx;
    padding: 1rpx;
}

.v-circle,.v-line {
    margin-left: 20rpx;
    background-color: #fff;
}

.v-circle {
    position: absolute;
    top: 14rpx;
    width: 14rpx;
    height: 14rpx;
    border-radius: 100%;
}

.v-voice {
    margin-left: 280rpx;
}

.v-image,.v-voice {
    height: 60rpx;
    width: 60rpx;
    margin-top: 20rpx;
}

.v-image {
    margin-left: 20rpx;
}

.v-time {
    position: absolute;
    top: 50rpx;
    font-weight: 700;
    width: 100%;
    color: #333;
    text-align: center;
    font-size: 28rpx;
    animation: fideIn .5s ease-in forwards;
}

@-webkit-keyframes fideIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes fideIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}