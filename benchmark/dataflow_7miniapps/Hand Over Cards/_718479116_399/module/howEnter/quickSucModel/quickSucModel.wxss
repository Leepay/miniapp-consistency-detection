.new-guideCon {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 100;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.7);
}

.new-guideCon,.new-guideCon .con {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.new-guideCon .con {
    margin: auto;
    position: relative;
    overflow: hidden;
    text-align: center;
    width: 646rpx;
    background: #fff;
    border-radius: 20rpx;
}

.new-guideCon .con .icon {
    margin: 50rpx auto 15rpx;
    width: 100rpx;
    height: 100rpx;
}

.new-guideCon .back-cicle {
    position: absolute;
    z-index: 2;
    left: 0;
    top: 0;
    left: -177rpx;
    top: -290rpx;
    width: 1000rpx;
    height: 750rpx;
    background: #f5f8ff;
    border-radius: 50%;
}

.new-guideCon .pre {
    position: absolute;
    z-index: 3;
    left: 0;
    top: 0;
    padding: 30rpx;
    width: 20rpx;
    height: 20rpx;
}

.new-guideCon .con .wall {
    position: relative;
    z-index: 3;
    margin: 0 auto 14rpx;
    width: 120rpx;
    height: 120rpx;
}

.new-guideCon .infor {
    position: relative;
    z-index: 3;
    margin: 0 auto;
    font-size: 36rpx;
    font-weight: 700;
    color: #333;
}

.new-guideCon .close {
    position: absolute;
    top: 0;
    right: 0;
    padding: 30rpx;
    width: 24rpx;
    height: 24rpx;
    z-index: 2;
}

.new-guideCon .tip {
    font-size: 32rpx;
    font-weight: 400;
    color: #333;
    margin: 40rpx 60rpx 0;
}

.new-guideCon .tip view {
    height: 50rpx;
    line-height: 50rpx;
}

.ellipseisX {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.new-guideCon .btn-con {
    display: flex;
    flex-direction: row;
    border-top: 1px solid #e5e5e5;
    margin-top: 76rpx;
}

.new-guideCon .btn-1 {
    position: relative;
    width: 50%;
    height: 98rpx;
    font-size: 36rpx;
    color: #999;
    line-height: 98rpx;
    background-color: transparent;
    text-align: center;
}

.new-guideCon .btn-1::before {
    content: "";
    position: absolute;
    right: 0;
    height: 100%;
    width: 1px;
    background-color: #e5e5e5;
}

.new-guideCon .btn-2 {
    width: 50%;
    height: 98rpx;
    font-size: 36rpx;
    font-weight: 500;
    color: #3f51b5;
    line-height: 98rpx;
    background-color: transparent;
    text-align: center;
}

.new-guideCon .closeShare {
    margin: 0 auto auto;
    width: 80rpx;
    height: 80rpx;
    text-align: center;
}

.new-guideCon .closeShare image {
    width: 44rpx;
    height: 44rpx;
}

.shareerInfo {
    position: relative;
    z-index: 3;
    margin: 60rpx auto 40rpx;
    border-radius: 8rpx;
}

.shareerInfo .img {
    width: 552rpx;
    height: 331rpx;
    box-shadow: 6rpx 6rpx 20rpx 0 rgba(41,46,59,.17);
    border-radius: 16rpx;
}

.shareerNo {
    font-size: 36rpx;
    font-weight: 700;
    color: #333;
}

.shareerNo .cc {
    position: relative;
    width: 104rpx;
    margin: auto;
}

.shareerNo .cc .img {
    margin: auto;
    width: 104rpx;
    height: 104rpx;
    box-shadow: 0 0 4rpx 0 rgba(0,0,0,.3);
    border-radius: 8rpx;
}

.shareerNo .cc .online {
    position: absolute;
    bottom: -2rpx;
    left: 22rpx;
    width: 60rpx;
    height: 28rpx;
    background: #67c23a;
    border-radius: 14rpx;
    font-size: 20rpx;
    font-weight: 700;
    line-height: 28rpx;
    color: #fff;
}

.shareerNo .nikename {
    margin: 10rpx auto 0;
    font-weight: 700;
    font-size: 32rpx;
    color: #333;
    max-width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.shareer-t {
    display: flex;
    margin: 20rpx auto 0;
    padding-left: 34rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #333;
    justify-content: center;
}

.shareer-t .dotted {
    margin-top: auto;
}

.back-home {
    padding-bottom: 80rpx;
}