.new-guideCon {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 20;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: rgba(0,0,0,.7);
}

.new-guideCon .con {
    position: relative;
    margin: auto;
    width: 590rpx;
    text-align: center;
    min-height: 516rpx;
    background: #fff;
    opacity: .93;
    box-shadow: 0 9px 8px 0 rgba(0,0,0,.5);
    border-radius: 8px;
}

.new-guideCon .infor {
    margin: 0 auto;
    font-size: 36rpx;
    font-weight: 500;
    color: #333;
}

.new-guideCon .infor-cs {
    margin: 50rpx auto 0rpx;
}

.bg-cs-con {
    margin: 20rpx auto;
}

.bg-cs,.bg-cs-con {
    width: 466rpx;
    height: 234rpx;
}

.immediatelyLook {
    margin: 50rpx auto 90rpx;
    width: 360rpx;
    height: 80rpx;
    background: linear-gradient(135deg,#4457c3,#2e40a5);
    border-radius: 40rpx;
    font-size: 16px;
    font-family: PingFangSC-Medium,PingFang SC;
    font-weight: 500;
    color: #fff;
    line-height: 80rpx;
}

.new-guideCon .tip {
    font-size: 32rpx;
    font-weight: 400;
    color: #333;
    margin: 40rpx 60rpx 0;
}

.new-guideCon .tip view {
    height: 50rpx;
    line-height: 50rpx;
}

.ellipseisX {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.new-guideCon .btn-con {
    display: flex;
    flex-direction: row;
    border-top: 1px solid #e5e5e5;
    margin-top: 76rpx;
}

.new-guideCon .btn-1 {
    position: relative;
    width: 50%;
    height: 98rpx;
    font-size: 36rpx;
    color: #999;
    line-height: 98rpx;
    background-color: transparent;
    text-align: center;
}

.new-guideCon .btn-1::before {
    content: "";
    position: absolute;
    right: 0;
    height: 100%;
    width: 1px;
    background-color: #e5e5e5;
}

.new-guideCon .btn-2 {
    width: 50%;
    height: 98rpx;
    font-size: 36rpx;
    font-weight: 500;
    color: #3f51b5;
    line-height: 98rpx;
    background-color: transparent;
    text-align: center;
}

.new-guideCon .closeShare {
    margin: 0 auto auto;
    width: 80rpx;
    height: 80rpx;
    text-align: center;
}

.new-guideCon .closeShare image {
    width: 44rpx;
    height: 44rpx;
}

.shareerInfo {
    margin: 28rpx auto 52rpx;
    width: 508rpx;
    padding-top: 14rpx;
    height: 228rpx;
    background: #eef1fe;
    border-radius: 8rpx;
}

.shareerNo {
    height: 64rpx;
    font-size: 40rpx;
    font-family: PingFangSC-Medium,PingFang SC;
    font-weight: 500;
    color: #3f51b5;
    line-height: 64rpx;
}

.shareToGroup {
    margin: 0 auto 60rpx;
    width: 360rpx;
    height: 80rpx;
    background: linear-gradient(135deg,#4457c3,#2e40a5);
    border-radius: 40rpx;
    color: #fff;
}

.closeShareBtn {
    position: absolute;
    bottom: 145rpx;
    left: 0;
    right: 0;
    margin: auto;
    width: 44rpx;
    height: 44rpx;
}

.closeShareBtn-cs {
    bottom: 120rpx;
}