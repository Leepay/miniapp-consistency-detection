.cardList-con,page {
    height: 100%;
    width: 100%;
}

.cardList-con {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 101;
}

.con-bg {
    position: absolute;
    background-color: rgba(0,0,0,.75);
}

.con-bg,.con-scroll {
    height: 100%;
    width: 100%;
}

.con-scroll {
    position: relative;
    top: 100%;
    background-color: #fff;
    color: #333;
    overflow: hidden;
    border-radius: 16rpx 16rpx 0 0;
}

.scroll {
    height: 90%;
}

.title {
    height: 50rpx;
    font-size: 36rpx;
    font-weight: 700;
    line-height: 50rpx;
    padding: 30rpx;
    position: relative;
}

.title image {
    position: absolute;
    right: 30rpx;
    height: 38rpx;
    width: 38rpx;
}

.card-item {
    position: relative;
    width: 690rpx;
    height: 202rpx;
    border-radius: 6rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 15rpx auto 30rpx;
}

.card-item .item-heng,.card-item .item-shu {
    width: 270rpx;
    height: 162rpx;
    background: #d8d8d8;
    border: 1px solid #ebebeb;
    margin-left: 16rpx;
    margin-right: 16rpx;
    overflow: hidden;
}

.card-item .item-shu image {
    width: 270rpx;
    height: 450rpx;
}

.item-con .con-company .c,.item-con .con-job,.item-con .name {
    max-width: 350rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.con-name {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.con-name .name {
    height: 56rpx;
    font-size: 40rpx;
    line-height: 56rpx;
    font-weight: 700;
    max-width: 240rpx;
}

.con-company {
    display: flex;
    height: 40rpx;
    font-size: 28rpx;
    color: #666;
    line-height: 40rpx;
    margin-top: 16rpx;
    max-width: 350rpx;
}

.con-company .isCertified {
    margin: auto 0;
    width: 26rpx;
    height: 21rpx;
}

.con-company .c {
    margin: auto 0;
}

.con-job {
    display: inline-block;
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #666;
    padding: 6rpx 18rpx;
    background-color: #f3f0f0;
    max-width: 310rpx;
    background: #f7f7f7;
}

.con-job,.item-select {
    height: 34rpx;
    line-height: 34rpx;
    border-radius: 6rpx;
}

.item-select {
    padding: 0rpx 10rpx;
    background: #e91e63;
    color: #fff;
    font-size: 22rpx;
    margin-left: 20rpx;
}

.active {
    box-shadow: 0rpx 0rpx 14rpx 0rpx rgba(61,64,81,.44);
}

.notActive {
    box-shadow: 0rpx 0rpx 14rpx 0rpx hsla(0,0%,73.7%,.5);
}

.bottom {
    height: 40rpx;
}

.bottom,.bottom-disabled {
    font-size: 28rpx;
    color: #3f51b5;
    line-height: 40rpx;
    text-align: center;
}

.bottom-disabled {
    height: 94rpx;
    opacity: .2;
    padding-bottom: 50rpx;
}

@-webkit-keyframes to-up {
    0% {
        top: 100%;
    }

    100% {
        top: 15%;
    }
}

@keyframes to-up {
    0% {
        top: 100%;
    }

    100% {
        top: 15%;
    }
}

.toUpAnimation {
    animation: to-up .15s ease-in forwards;
}

@-webkit-keyframes to-down {
    0% {
        top: 15%;
    }

    100% {
        top: 100%;
    }
}

@keyframes to-down {
    0% {
        top: 15%;
    }

    100% {
        top: 100%;
    }
}

.toDownAnimation {
    animation: to-down .25s ease-out forwards;
}