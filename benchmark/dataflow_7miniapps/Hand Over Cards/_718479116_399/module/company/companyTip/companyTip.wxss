.d-panel {
    position: fixed;
    z-index: 121;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.75);
}

.d-panel,.d-panel .d-container {
    display: flex;
    flex-direction: column;
}

.d-panel .d-container {
    position: relative;
    box-sizing: border-box;
    padding: 0 60rpx;
    margin: auto;
    width: 646rpx;
    min-height: 536rpx;
    background: #fff;
    border-radius: 20rpx;
    text-align: center;
}

.d-panel .close {
    position: absolute;
    right: 0;
    top: 0;
    padding: 20rpx;
    width: 24rpx;
    height: 24rpx;
}

.d-panel .clock {
    margin: 60rpx auto 20rpx;
    width: 64rpx;
    height: 64rpx;
}

.d-panel .d-container .t {
    font-size: 36rpx;
    font-weight: 700;
    color: #333;
    margin: 0 auto;
}

.d-panel .d-container .i {
    margin-top: 20rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #999;
    line-height: 40rpx;
}

.d-panel .d-container .btn {
    margin: 70rpx auto;
    font-size: 32rpx;
    font-weight: 700;
    color: #fff;
    width: 342rpx;
    height: 92rpx;
    line-height: 92rpx;
    background: linear-gradient(128deg,#438fff,#256de6);
    box-shadow: 12rpx 12rpx 20rpx 0 rgba(41,46,59,.17);
    border-radius: 47rpx;
}

.webcard-invite {
    display: flex;
    justify-content: center;
    padding: 30rpx 0 10rpx;
    text-align: center;
}

.webcard-invite .txt {
    margin: auto 0;
    font-size: 28rpx;
    font-weight: 400;
    color: #333;
    line-height: 40rpx;
}

.webcard-invite .add-new {
    width: 156rpx;
    margin-left: 32rpx;
}

.webcard-invite .add-new,.webcard-invite .setting-btn {
    font-weight: 400;
    height: auto;
    color: #333;
    border: 1px solid #333;
}

.webcard-invite .setting-btn {
    width: 175rpx;
    margin-left: 15rpx;
}