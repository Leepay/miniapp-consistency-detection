.card {
    margin: auto;
    width: 630rpx;
    height: 762rpx;
    background: #fff;
    border-radius: 20rpx;
    position: relative;
    overflow: hidden;
}

.card .card-image .card-box {
    position: relative;
    width: 630rpx;
    height: 378rpx;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    border-bottom: 1px solid #f7f7f7;
}

.card .card-image {
    width: 630rpx;
    height: 378rpx;
    border-top-left-radius: 12rpx;
    border-top-right-radius: 12rpx;
}

.card .card-image-design {
    background: #f7f7f7;
}

.card .card-message {
    display: flex;
    position: relative;
    flex-direction: row;
    align-items: center;
    margin-top: 40rpx;
}

.card .message-detail {
    position: absolute;
    left: 0;
    top: 450rpx;
    width: 100%;
    height: calc(100% - 450rpx);
    display: flex;
    flex-direction: column;
}

.card .message-detail .item {
    text-align: center;
    display: flex;
    justify-content: center;
    margin-bottom: 10rpx;
}

.card .message-detail .item .name {
    margin: auto 0;
    font-size: 28rpx;
    font-weight: 400;
    color: #333;
}

.card .message-detail .item .icon {
    margin: auto 8rpx;
    width: 30rpx;
    height: 30rpx;
}

.card .card-logo {
    position: absolute;
    left: -9999rpx;
    top: -9999rpx;
    line-height: 80rpx;
    background-color: #000;
    font-size: 18rpx;
    color: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    z-index: 1;
}

.card .card-logo,.card .card-logo .img {
    width: 100rpx;
    height: 100rpx;
}

.card .white {
    background: #fff;
}

.card .card-message .card-avar {
    margin-left: 20rpx;
    margin-right: 20rpx;
    width: 110rpx;
    height: 110rpx;
    background: #f7f7f7;
    border-radius: 12rpx;
}

.card .card-message .card-detail {
    height: 110rpx;
    margin: auto 0;
    display: flex;
    flex-direction: column;
}

.card .card-message .card-name {
    margin: auto 0;
    width: 61rpx;
    height: 25rpx;
    background: #f7f7f7;
}

.card .card-message .card-job {
    width: 122rpx;
    height: 25rpx;
    background: #f7f7f7;
    margin: 4rpx 0 auto;
}

.card .card-message .card-company {
    width: 292rpx;
    height: 25rpx;
    background: #f7f7f7;
    margin: 8rpx 0 auto;
}

.card .more-tip {
    margin: 38rpx auto 0;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.card .more-tip .m-1 {
    margin-bottom: 10rpx;
    width: 161rpx;
    height: 25rpx;
    background: #f7f7f7;
}

.card .more-tip .m-2,.card .more-tip .m-3 {
    margin-bottom: 10rpx;
    width: 100%;
    height: 25rpx;
    background: #f7f7f7;
}