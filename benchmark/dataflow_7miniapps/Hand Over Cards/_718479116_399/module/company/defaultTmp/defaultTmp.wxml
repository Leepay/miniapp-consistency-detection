<view class="card">
    <view class="card-box">
        <image class="card-image" src="{{imgUrl}}"></image>
    </view>
    <view class="card-message">
        <view class="card-avar"></view>
        <view class="card-detail">
            <view class="card-name"></view>
            <view class="card-job"></view>
            <view class="card-company m_viewEllipsis"></view>
        </view>
    </view>
    <view class="more-tip">
        <view class="m-1"></view>
        <view class="m-2"></view>
        <view class="m-3"></view>
    </view>
    <view class="more-tip">
        <view class="m-1"></view>
        <view class="m-2"></view>
    </view>
    <view class="message-detail">
        <view class="item">
            <view class="name">企业名称</view>
            <view class="icon">
                <mini-icon color="#09BB07" icon="success" miniClass="icon" wx:if="{{tempData.entName}}"></mini-icon>
                <mini-icon color="#FA5151" icon="fail" miniClass="icon" wx:else></mini-icon>
            </view>
        </view>
        <view class="item">
            <view class="name">公司地址</view>
            <view class="icon">
                <mini-icon color="#09BB07" icon="success" miniClass="icon" wx:if="{{tempData.entAddr}}"></mini-icon>
                <mini-icon color="#FA5151" icon="fail" miniClass="icon" wx:else></mini-icon>
            </view>
        </view>
        <view class="item">
            <view class="name">业务简介</view>
            <view class="icon">
                <mini-icon color="#09BB07" icon="success" miniClass="icon" wx:if="{{tempData.intro}}"></mini-icon>
                <mini-icon color="#FA5151" icon="fail" miniClass="icon" wx:else></mini-icon>
            </view>
        </view>
        <view class="item">
            <view class="name">图片视频</view>
            <view class="icon">
                <mini-icon color="#09BB07" icon="success" miniClass="icon" wx:if="{{tempData.video&&tempData.video.length||tempData.desc&&tempData.desc.length}}"></mini-icon>
                <mini-icon color="#FA5151" icon="fail" miniClass="icon" wx:else></mini-icon>
            </view>
        </view>
    </view>
</view>
