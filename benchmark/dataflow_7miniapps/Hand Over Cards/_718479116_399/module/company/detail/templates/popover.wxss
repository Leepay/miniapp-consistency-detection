.d-panel {
    position: fixed;
    z-index: 121;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.75);
}

.d-panel,.d-panel .d-container {
    display: flex;
    flex-direction: column;
}

.d-panel .d-container {
    position: relative;
    box-sizing: border-box;
    padding: 0 10rpx;
    margin: auto;
    width: 646rpx;
    min-height: 536rpx;
    background: #fff;
    border-radius: 20rpx;
    text-align: center;
}

.d-panel .close {
    position: absolute;
    right: 0;
    top: 0;
    padding: 20rpx;
    width: 24rpx;
    height: 24rpx;
}

.d-panel .clock {
    margin: 60rpx auto 20rpx;
    width: 64rpx;
    height: 64rpx;
}

.d-panel .d-container .t {
    font-size: 36rpx;
    font-weight: 700;
    color: #333;
    margin: 0 auto;
}

.d-panel .d-container .i,.d-panel .d-container .i2 {
    margin-top: 20rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #666;
    line-height: 40rpx;
}

.d-panel .d-container .i2 {
    line-height: 44rpx;
}

.d-panel .d-container .s {
    display: block;
    width: 500rpx;
    height: 300rpx;
    margin: 20rpx auto 0;
}

.d-panel .d-content {
    font-size: 28rpx;
    color: #666;
    line-height: 40rpx;
    margin-top: 40rpx;
    text-align: left;
    padding-left: 60rpx;
}

.d-panel .d-content view {
    max-width: 520rpx;
}

.d-panel .d-content .ct text {
    margin-left: 20rpx;
    background: #f7b51c;
    border-radius: 4rpx;
    color: #fff;
    padding: 6rpx 8rpx;
    font-weight: 700;
    font-size: 24rpx;
}

.d-panel .d-content .ci,.d-panel .d-content .ci2 {
    margin-top: 20rpx;
}

.d-panel .d-content .ci {
    line-height: 44rpx;
}

.d-panel .d-content-n {
    font-size: 28rpx;
    color: #666;
    line-height: 40rpx;
    margin-top: 40rpx;
    text-align: left;
    padding-left: 60rpx;
}

.d-panel .d-content-n .ct text {
    margin-left: 20rpx;
    background: #09bb07;
    border-radius: 4rpx;
    color: #fff;
    padding: 6rpx 8rpx;
    font-weight: 700;
    font-size: 24rpx;
}

.d-panel .d-content-n .ci {
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.d-panel .d-content-n .ci text {
    margin-left: 10rpx;
}

.d-panel .d-content-n2 {
    font-size: 28rpx;
    color: #666;
    line-height: 40rpx;
    margin-top: 40rpx;
    text-align: left;
    padding-left: 60rpx;
}

.d-panel .d-content-n2 .ct text {
    margin-left: 20rpx;
    background: #fa5151;
    border-radius: 4rpx;
    color: #fff;
    padding: 6rpx 8rpx;
    font-weight: 700;
    font-size: 24rpx;
}

.d-panel .d-content-n2 .ci {
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.d-panel .d-content-n2 .ci text {
    margin-left: 10rpx;
    text-decoration: line-through;
}

.d-panel .d-container .btn {
    margin: 70rpx auto 80rpx;
    font-size: 32rpx;
    font-weight: 700;
    color: #fff;
    width: 342rpx;
    height: 92rpx;
    line-height: 92rpx;
    background: linear-gradient(128deg,#438fff,#256de6);
    box-shadow: 12rpx 12rpx 20rpx 0 rgba(41,46,59,.17);
    border-radius: 47rpx;
}

.d-panel .d-container .t2 {
    margin-top: -60rpx;
    margin-bottom: 20rpx;
    height: 40rpx;
    font-size: 24rpx;
    color: #999;
    line-height: 40rpx;
    font-weight: 400;
}