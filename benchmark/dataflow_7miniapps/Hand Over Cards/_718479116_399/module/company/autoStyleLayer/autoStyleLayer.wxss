.layer-con {
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.75);
    left: 0;
    top: 0;
    z-index: 3;
}

.content {
    width: 646rpx;
    height: 646rpx;
    background: #fff;
    border-radius: 20rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -323rpx;
    margin-top: -323rpx;
    text-align: center;
}

.content-title {
    height: 60rpx;
    font-size: 44rpx;
    font-weight: 700;
    color: #2979ff;
    line-height: 60rpx;
    padding-top: 60rpx;
    padding-bottom: 48rpx;
}

.content-tip {
    font-size: 28rpx;
    font-weight: 700;
    color: #333;
    line-height: 40rpx;
}

.tip2 {
    margin-top: 40rpx;
}

.tip4 {
    margin-top: 90rpx;
    height: 36rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #999;
    line-height: 36rpx;
}

.content-button {
    width: 342rpx;
    height: 92rpx;
    line-height: 92rpx;
    background: linear-gradient(127deg,#438fff,#256de6);
    box-shadow: 12rpx 12rpx 20rpx 0rpx rgba(41,46,59,.17);
    border-radius: 47rpx;
    margin: 20rpx auto;
    font-size: 32rpx;
    font-weight: 700;
    color: #fff;
}