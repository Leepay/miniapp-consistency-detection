.service-expire {
    position: relative;
    z-index: 1;
    box-sizing: border-box;
    margin: 20rpx auto 0;
    padding: 20rpx;
    width: 670rpx;
    height: 286rpx;
    background: linear-gradient(315deg,#1e232f,#252e45);
    border-radius: 12rpx;
}

.service-expire .close {
    position: absolute;
    right: 0;
    top: 0;
    z-index: 3;
    padding: 20rpx;
    width: 25rpx;
    height: 25rpx;
}

.service-expire .bg {
    position: absolute;
    z-index: 1;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    width: 670rpx;
    height: 286rpx;
}

.service-expire .contianer {
    position: relative;
    z-index: 2;
}

.service-expire .name {
    font-size: 24rpx;
    text-align: left;
    max-width: 500rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    color: #fff;
    opacity: .8;
    line-height: 32rpx;
}

.service-expire .residueDate {
    text-align: center;
    margin-top: 24rpx;
    font-size: 36rpx;
    font-weight: 500;
    color: #fad7ab;
    line-height: 44rpx;
}

.service-expire .tip {
    text-align: center;
    margin-top: 10rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #fad7ab;
    line-height: 32rpx;
    opacity: .8;
}

.service-expire .btn {
    position: relative;
    margin: 30rpx auto 0;
    text-align: center;
    font-size: 32rpx;
    font-weight: 700;
    font-size: 24rpx;
    color: #4e3b19;
    padding: 10rpx 0;
    width: 166rpx;
    background: linear-gradient(311deg,#e3b98c,#fad7ab);
    border-radius: 200rpx;
}