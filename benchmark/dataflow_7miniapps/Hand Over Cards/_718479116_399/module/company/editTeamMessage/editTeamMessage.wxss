.modal {
    position: fixed;
    z-index: 120;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.modal,.modal .modal-back {
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
}

.modal .modal-back {
    position: absolute;
    z-index: -1;
    background-color: rgba(0,0,0,.75);
}

.modal .modal-content {
    width: 560rpx;
    background: #fff;
    border-radius: 24rpx;
    margin-top: -60rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
}

.modal .modal-content-title {
    text-align: center;
    font-size: 34rpx;
    font-weight: 700;
    color: #000;
    line-height: 48rpx;
    padding: 64rpx 30rpx 0;
}

.modal .modal-content-content {
    font-size: 34rpx;
    line-height: 48rpx;
    padding: 32rpx 34rpx 0;
}

.modal .modal-content-content input {
    width: 458rpx;
    padding: 0 16rpx;
    height: 64rpx;
    border-radius: 6rpx;
    border: 1px solid #dcdfe6;
}

.modal .modal-content-button {
    margin-top: 60rpx;
    border-top: 1px solid #dbdee3;
    height: 110rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
}

.modal .modal-content-button .button-cancel {
    color: #000;
    border-right: 1px solid #dbdee3;
}

.modal .modal-content-button .button-cancel,.modal .modal-content-button .button-confirm {
    width: 320rpx;
    height: 110rpx;
    line-height: 110rpx;
    font-size: 34rpx;
    font-weight: 700;
    background-color: transparent;
}

.modal .modal-content-button .button-confirm {
    color: #2979ff;
}

.button-disabled {
    opacity: .4;
}

.modal-content-tip {
    height: 34rpx;
    font-size: 24rpx;
    color: #ff3b2f;
    line-height: 34rpx;
    margin-top: 6rpx;
}