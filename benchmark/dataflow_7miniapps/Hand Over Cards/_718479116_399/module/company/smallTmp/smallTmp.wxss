.card {
    margin: auto;
    width: 586rpx;
    height: 480rpx;
    background: #fff;
    position: relative;
    overflow: hidden;
}

.card .card-image .card-box {
    position: relative;
    width: 586rpx;
    height: 378rpx;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    border-bottom: 1px solid #f7f7f7;
}

.card .card-box,.card .card-image {
    width: 586rpx;
    height: 354rpx;
}

.card .card-image {
    border-top-left-radius: 12rpx;
    border-top-right-radius: 12rpx;
}

.card .card-image-design {
    background: #f7f7f7;
}

.card .card-message {
    margin-top: 24rpx;
}

.card .card-logo,.card .card-message {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.card .card-logo {
    position: absolute;
    left: -9999rpx;
    top: -9999rpx;
    line-height: 80rpx;
    background-color: #000;
    font-size: 18rpx;
    color: #fff;
    justify-content: center;
    z-index: 1;
}

.card .card-logo,.card .card-logo .img {
    width: 100rpx;
    height: 100rpx;
}

.card .white {
    background: #fff;
}

.card .card-message .card-avar {
    margin-left: 20rpx;
    margin-right: 20rpx;
    width: 95rpx;
    height: 95rpx;
    background: #f7f7f7;
    border-radius: 12rpx;
}

.card .card-message .card-detail {
    height: 95rpx;
    margin: auto 0;
    display: flex;
    flex-direction: column;
}

.card .card-message .card-name {
    margin: auto 0;
    width: 61rpx;
    height: 25rpx;
    background: #f7f7f7;
}

.card .card-message .card-job {
    width: 122rpx;
    height: 25rpx;
    background: #f7f7f7;
    margin: 4rpx 0 auto;
}

.card .card-message .card-company {
    width: 292rpx;
    height: 25rpx;
    background: #f7f7f7;
    margin: 8rpx 0 auto;
}

.card .more-tip {
    margin: 38rpx auto 0;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.card .more-tip .m-1 {
    margin-bottom: 10rpx;
    width: 161rpx;
    height: 25rpx;
    background: #f7f7f7;
}

.card .more-tip .m-2,.card .more-tip .m-3 {
    margin-bottom: 10rpx;
    width: 100%;
    height: 25rpx;
    background: #f7f7f7;
}