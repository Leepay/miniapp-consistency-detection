<view class="noConnections">
    <view class="noConnectionsCon">
        <image src="/images/cardsFolder/noConnections.png"></image>
    </view>
    <view class="noConnectionsTip">名片夹空空如也</view>
    <view bindtap="_build" class="noConnectionsOp" wx:if="{{!haveCard}}">
        <text>邀请微信好友与我换名片</text>
        <mini-icon color="#2979FF" icon="arrow-right" miniStyle="height:28rpx;width:28rpx;"></mini-icon>
    </view>
