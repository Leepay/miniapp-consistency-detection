.inputEmailConBc {
    z-index: 2;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.75);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.inputEmailCon {
    margin-top: -60rpx;
    width: 640rpx;
    background: #fff;
    border-radius: 24rpx;
    position: relative;
}

.inputTitle {
    font-size: 34rpx;
    line-height: 58rpx;
    font-weight: 700;
    padding-top: 64rpx;
}

.inputTip,.inputTitle {
    color: #000;
    text-align: center;
}

.inputTip {
    font-size: 28rpx;
    line-height: 36rpx;
    margin-top: 10rpx;
}

.emailInput {
    margin: 32rpx 40rpx 64rpx;
    height: 82rpx;
    border-radius: 8rpx;
    border: 2rpx solid #ededed;
    padding-left: 16rpx;
    text-align: left;
    font-size: 28rpx;
}

.email-placeholder {
    color: #cacaca;
}

.email-placeholder-red {
    color: #ff3b2f;
}

.eFormatWrongTip {
    font-size: 24rpx;
    color: #f33632;
    line-height: 34rpx;
    margin-bottom: 6rpx;
    text-align: left;
    margin-left: 34rpx;
    position: absolute;
    margin-top: -60rpx;
}

.emailButton {
    display: flex;
    flex-direction: row;
    align-items: center;
    border-top: 1px solid #ededed;
}

.emailButton button {
    height: 110rpx;
    line-height: 110rpx;
    background-color: transparent;
    width: 320rpx;
    font-size: 32rpx;
    font-weight: 700;
}

.emailButton .button-right {
    color: #2979ff;
    border-left: 1px solid #ededed;
}