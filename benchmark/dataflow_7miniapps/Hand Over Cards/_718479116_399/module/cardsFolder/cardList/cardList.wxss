.listViewer .itemDay {
    position: relative;
    display: block;
    padding: 80rpx 20rpx 0rpx;
}

.listViewer .itemTime {
    font-size: 24rpx;
    color: #999;
    height: 40rpx;
    line-height: 40rpx;
}

.listViewer .itemCardInfoCon {
    align-items: center;
    margin: 4rpx 0;
}

.listViewer .itemCard,.listViewer .itemCardInfoCon {
    display: flex;
    flex-direction: row;
}

.listViewer .itemCard {
    justify-content: space-between;
    padding: 20rpx 0;
}

.listViewer .itemCardInfo {
    margin-top: 10rpx;
    max-width: 530rpx;
}

.listViewer .itemCardName {
    height: 42rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 36rpx;
    color: #333;
    line-height: 42rpx;
}

.listViewer .inGroupChange {
    padding: 0 12rpx;
    background: #f39800;
    border-radius: 4rpx;
    font-size: 24rpx;
    color: #fff;
    height: 34rpx;
    line-height: 34rpx;
    margin-left: 20rpx;
    font-weight: 400;
}

.listViewer .itemCardCompany {
    font-size: 28rpx;
    color: #666;
    line-height: 32rpx;
    margin-top: 12rpx;
}

.listViewer .itemCardInfoCon .paperAva,.listViewer .itemCardInfoCon image {
    width: 100rpx;
    height: 100rpx;
    box-shadow: 0 0 4rpx 0 rgba(0,0,0,.5);
    border-radius: 12rpx;
    margin: 0rpx 20rpx 0rpx 0rpx;
}

.listViewer .itemCardInfoCon .paperAva {
    text-align: center;
    line-height: 102rpx;
    background: #fce7c7;
    color: #dd9621;
    font-size: 46rpx;
    font-weight: 500;
}

.cardViewer .itemDay {
    position: relative;
    display: block;
    padding: 80rpx 20rpx 0rpx;
}

.cardViewer .itemTime {
    font-size: 24rpx;
    color: #999;
    height: 40rpx;
    line-height: 40rpx;
}

.cardViewer .itemCard {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 710rpx;
    height: 324rpx;
    background: #fff;
    box-shadow: 0rpx 0rpx 20rpx 0rpx hsla(0,0%,83.1%,.49);
    border-radius: 12rpx;
    overflow: hidden;
    margin: 20rpx 0 40rpx;
}

.cardViewer .itemCard-left {
    width: 540rpx;
    height: 324rpx;
    min-width: 540rpx;
}

.cardViewer .itemCard-left image {
    width: 540rpx;
    height: 324rpx;
    display: block;
    margin: 0 auto;
}

.cardViewer .itemCard-right {
    width: 170rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.cardViewer .itemCard-right .right-ava {
    width: 84rpx;
    height: 84rpx;
    border-radius: 100%;
    box-shadow: 0rpx 0rpx 4rpx 0rpx #cacaca;
    background: #fce7c7;
    color: #dd9621;
    text-align: center;
    line-height: 84rpx;
}

.cardViewer .itemCard-right .right-name {
    font-size: 28rpx;
    line-height: 40rpx;
    max-width: 160rpx;
    margin-top: 10rpx;
}

.viewEllipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.addBold {
    font-weight: 700;
}