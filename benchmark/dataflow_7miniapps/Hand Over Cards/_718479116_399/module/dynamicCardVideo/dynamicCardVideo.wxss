.dynamicCard {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 20;
    background: #000;
}

.dynamicCard .dynamicCard-container {
    height: 100%;
    width: 100%;
    overflow: hidden;
}

.dynamicCard video {
    position: relative;
    width: 100%;
    height: 100%;
    display: block;
}

.dynamicCard .videoPackup {
    position: fixed;
    bottom: 60rpx;
    left: 50%;
    margin-left: -93rpx;
    width: 186rpx;
    color: #fff;
    border-radius: 40rpx;
    background-color: rgba(0,0,0,.74);
    padding: 18rpx 0;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.dynamicCard .videoPackup image {
    width: 34rpx;
    height: 34rpx;
}

.dynamicCard .videoPackup text {
    margin-left: 6rpx;
}

.dynamicCard .videoPackup-save {
    position: fixed;
    bottom: 0;
    width: 100%;
    padding: 56rpx 0 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    background: linear-gradient(180deg,hsla(0,0%,100%,0),hsla(0,0%,100%,.73));
}

.dynamicCard .videoPackup-save-left {
    margin-left: 20rpx;
}

.dynamicCard .videoPackup-save-left image {
    width: 70rpx;
    height: 70rpx;
    border-radius: 100%;
    margin-right: 10rpx;
}

.dynamicCard .videoPackup-avatar {
    height: 70rpx;
    font-size: 28rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.dynamicCard .videoPackup-save .saveTip {
    margin-top: 10rpx;
    line-height: 44rpx;
    font-size: 32rpx;
}

.dynamicCard .videoPackup-save button {
    width: 196rpx;
    height: 70rpx;
    line-height: 70rpx;
    font-weight: 700;
    border-radius: 40rpx;
    font-size: 32rpx;
    background: #3f51b5;
    color: #fff;
    margin-right: 20rpx;
}

@-webkit-keyframes loading-in {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(1turn);
    }
}

@keyframes loading-in {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(1turn);
    }
}

.dynamicCard .videoLoading {
    position: fixed;
    top: 50%;
    left: 50%;
    margin-top: -20rpx;
    margin-left: -20rpx;
    display: inline-block;
    border: 4rpx solid rgba(0,0,0,.1);
    border-left-color: #fff;
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
    animation: loading-in .8s linear infinite;
}

.dynamicLayOut {
    animation: lay-out 1s linear forwards;
}

@-webkit-keyframes lay-out {
    0% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}

@keyframes lay-out {
    0% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}

.dynamicIn {
    opacity: 1;
}