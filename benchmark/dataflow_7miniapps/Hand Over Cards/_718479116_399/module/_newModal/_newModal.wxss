.modal {
    position: fixed;
    z-index: 102;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.modal,.modal .modal-back {
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
}

.modal .modal-back {
    position: absolute;
    z-index: -1;
    background-color: rgba(0,0,0,.75);
}

.modal .modal-content {
    width: 640rpx;
    background: #fff;
    border-radius: 24rpx;
    margin-top: -60rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
}

.modal .modal-content-content {
    text-align: center;
    font-size: 34rpx;
    color: #353535;
    line-height: 48rpx;
    padding: 80rpx 48rpx 0;
    font-weight: 700;
}

.modal .modal-content-button {
    margin-top: 32rpx;
    border-top: 1px solid #e5e5e5;
    height: 110rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
}

.modal .modal-content-button .button-main {
    font-size: 34rpx;
    width: 100%;
    height: 110rpx;
    line-height: 110rpx;
    background-color: transparent;
    font-weight: 700;
    color: #2979ff;
}