.group {
    padding: 10rpx 0;
}

.groupItem {
    margin: 0 auto 34rpx;
    width: 710rpx;
    height: 172rpx;
    background: #fff;
    border-radius: 12rpx;
    position: relative;
}

.noRecordsCon {
    margin: 168rpx auto 0rpx;
    text-align: center;
}

.noRecordsCon .noRecords {
    width: 226rpx;
    height: 192rpx;
}

.noRecordsCon .noRecordsText {
    font-size: 24rpx;
    font-family: PingFangSC-Regular,PingFang SC;
    font-weight: 400;
    color: #666;
    line-height: 34rpx;
}

.itemCard {
    width: 100%;
    height: 174rpx;
    flex-direction: row;
    justify-content: space-between;
    position: relative;
    background: #fff;
    border-radius: 12rpx;
    box-shadow: 0 0 8rpx 0 hsla(0,0%,83.1%,.6);
}

.cardInfoCon,.itemCard {
    display: flex;
    -webkit-flex-direction: row;
    align-items: center;
}

.cardInfoCon {
    flex-direction: row;
    justify-content: flex-start;
    flex: 1 0 auto;
}

.avatar {
    width: 100rpx;
    height: 100rpx;
    box-shadow: 0 0 4rpx 0 rgba(0,0,0,.5);
    border-radius: 12rpx;
    margin: 0 20rpx;
}

.cardTextInfo {
    flex: 1 0 auto;
    margin-right: 20rpx;
}

.groupName {
    font-weight: 700;
    height: 48rpx;
    font-size: 34rpx;
    font-family: PingFangSC-Medium,PingFang SC;
    color: #333;
    line-height: 48rpx;
}

.wallInfoCon {
    align-items: center;
    margin-top: 20rpx;
}

.wallInfoCon,.wallInfoLeft {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.wallInfoLeft {
    align-items: top;
}

.cardNumImg {
    margin: auto 10rpx auto 0;
    width: 28rpx;
    height: 28rpx;
}

.addtime,.totalNum {
    font-size: 28rpx;
    font-family: PingFangSC-Regular,PingFang SC;
    font-weight: 400;
    color: #999;
    line-height: 40rpx;
}

.addtime {
    align-self: flex-end;
}

.cardName {
    font-size: 36rpx;
    font-weight: 500;
    line-height: 42rpx;
    margin: 0rpx 0rpx 10rpx;
}

.cardName,.company {
    color: #333;
    max-width: 400rpx;
}

.company {
    font-size: 28rpx;
    font-weight: 400;
    line-height: 32rpx;
}

.cardList-back {
    position: absolute;
    top: 0;
    left: 0;
    overflow: hidden;
    height: 174rpx;
    width: 100%;
}

.cardList-back .cardList-back-delete {
    background-color: #ff3b2f;
    width: 112rpx;
    height: 174rpx;
    margin-right: 2rpx;
    line-height: 174rpx;
    text-align: center;
    float: right;
    color: #fff;
    box-shadow: 0rpx 0rpx 6rpx 0rpx hsla(0,0%,73.7%,.5);
    border-radius: 12rpx;
}