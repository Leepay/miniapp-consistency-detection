.add-panel {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 20;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.7);
}

.add-panel,.add-panel .add-con {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.add-panel .add-con {
    margin: 118rpx auto 0;
    position: relative;
    text-align: center;
    width: 646rpx;
    min-height: 562rpx;
    background: linear-gradient(225deg,#efe7d0,#fff);
    box-shadow: 0 -36rpx 0 0 rgba(41,46,59,.37);
    border-radius: 20rpx;
}

.add-con .top-box {
    top: -161rpx;
    display: flex;
    flex-direction: column;
}

.add-con .top-box,.add-con .top-box .img {
    position: absolute;
    left: 0;
    width: 660rpx;
    height: 262rpx;
}

.add-con .top-box .img {
    top: 0;
}

.add-con .top-box .t-txt {
    position: relative;
    margin: auto;
    display: flex;
    justify-content: flex-start;
}

.add-con .top-box .t-txt .t-1 {
    font-size: 96rpx;
    font-weight: 700;
    color: #fad7ab;
    letter-spacing: 1rpx;
}

.add-con .top-box .t-txt .t-2 {
    font-size: 160rpx;
    font-weight: 700;
    color: #fad7ab;
    letter-spacing: 3rpx;
}

.add-box .box-list,.add-box .box-txt {
    font-size: 36rpx;
    font-weight: 700;
    color: #4e3b19;
}

.add-box .box-txt {
    margin-top: 30rpx;
}

.new-list {
    position: relative;
    max-width: 500rpx;
    margin: 26rpx auto 40rpx;
    display: flex;
    justify-content: center;
}

.new-list .card-item {
    margin: auto 20rpx;
}

.add-more::after {
    position: absolute;
    right: -30rpx;
    top: 20rpx;
    content: "â€¦";
}

.new-list .img {
    display: inline-block;
    overflow: hidden;
    background-color: #333;
    width: 100rpx;
    height: 100rpx;
    box-shadow: 0 0 4rpx 0 rgba(0,0,0,.5);
    border-radius: 12rpx;
    border: 2rpx solid #fad7ab;
}

.new-list .txt {
    font-size: 28rpx;
    font-weight: 400;
    color: #4e3b19;
    max-width: 112rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.add-box .btn {
    margin: 0 auto;
    width: 342rpx;
    height: 92rpx;
    line-height: 92rpx;
    background: linear-gradient(311deg,#e3b98c,#fad7ab);
    box-shadow: 12rpx 12rpx 20rpx 0 rgba(41,46,59,.17);
    border-radius: 47rpx;
    font-size: 32rpx;
    font-weight: 700;
    color: #4e3b19;
}