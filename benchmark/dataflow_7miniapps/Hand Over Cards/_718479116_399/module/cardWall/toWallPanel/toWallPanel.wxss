.bottom-tip {
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 180rpx;
    background: linear-gradient(314deg,#266fe7,#428eff);
    box-shadow: 0 -6rpx 30rpx 0 rgba(14,39,77,.16);
    border-radius: 30rpx 30rpx 0 0;
}

.bottom-tip .txt {
    margin: 20rpx auto 10rpx;
    text-align: center;
    font-size: 24rpx;
    font-weight: 400;
    color: #fff;
}

.bottom-tip .btn {
    margin: 0 auto;
    text-align: center;
    width: 302rpx;
    height: 92rpx;
    line-height: 92rpx;
    background: #fff;
    color: #2979ff;
    box-shadow: 12rpx 12rpx 20rpx 0 rgba(41,46,59,.17);
    border-radius: 47rpx;
    font-size: 32rpx;
    font-weight: 700;
}

.bottomButtonDetail {
    padding-bottom: 50rpx;
}