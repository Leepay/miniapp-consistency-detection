.new-guideCon {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 20;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.7);
}

.new-guideCon,.new-guideCon .con {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.new-guideCon .con {
    margin: auto;
    position: relative;
    overflow: hidden;
    text-align: center;
    width: 646rpx;
    min-height: 656rpx;
    background: #fff;
    border-radius: 20rpx;
}

.new-guideCon .back-cicle {
    position: absolute;
    z-index: 2;
    left: 0;
    top: 0;
    left: -177rpx;
    top: -490rpx;
    width: 1000rpx;
    height: 750rpx;
    background: #f5f8ff;
    border-radius: 50%;
}

.new-guideCon .con .close {
    position: absolute;
    z-index: 3;
    right: 0;
    top: 0;
    padding: 30rpx;
    width: 20rpx;
    height: 20rpx;
}

.new-guideCon .con .wall {
    position: relative;
    z-index: 3;
    margin: 0 auto 14rpx;
    width: 120rpx;
    height: 120rpx;
}

.new-guideCon .infor {
    position: relative;
    z-index: 3;
    margin: 0 auto;
    font-size: 28rpx;
    font-weight: 700;
    color: #333;
}

.new-guideCon .tip {
    font-size: 32rpx;
    font-weight: 400;
    color: #333;
    margin: 40rpx 60rpx 0;
}

.new-guideCon .tip view {
    height: 50rpx;
    line-height: 50rpx;
}

.ellipseisX {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.new-guideCon .btn-con {
    display: flex;
    flex-direction: row;
    border-top: 1px solid #e5e5e5;
    margin-top: 76rpx;
}

.new-guideCon .btn-1 {
    position: relative;
    width: 50%;
    height: 98rpx;
    font-size: 36rpx;
    color: #999;
    line-height: 98rpx;
    background-color: transparent;
    text-align: center;
}

.new-guideCon .btn-1::before {
    content: "";
    position: absolute;
    right: 0;
    height: 100%;
    width: 1px;
    background-color: #e5e5e5;
}

.new-guideCon .btn-2 {
    width: 50%;
    height: 98rpx;
    font-size: 36rpx;
    font-weight: 500;
    color: #3f51b5;
    line-height: 98rpx;
    background-color: transparent;
    text-align: center;
}

.new-guideCon .closeShare {
    margin: 0 auto auto;
    width: 80rpx;
    height: 80rpx;
    text-align: center;
}

.new-guideCon .closeShare image {
    width: 44rpx;
    height: 44rpx;
}

.shareerInfo {
    margin: 88rpx auto 52rpx;
    width: 508rpx;
    border-radius: 8rpx;
}

.shareerNo {
    display: flex;
    justify-content: center;
    height: 64rpx;
    font-size: 36rpx;
    font-weight: 700;
    color: #333;
}

.shareerNo .n {
    max-width: 400rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.shareToGroup {
    margin: 0 auto 60rpx;
    width: 342rpx;
    height: 92rpx;
    line-height: 92rpx;
    font-size: 32rpx;
    font-weight: 700;
    background: linear-gradient(128deg,#438fff,#256de6);
    box-shadow: 12rpx 12rpx 20rpx 0 rgba(41,46,59,.17);
    border-radius: 47rpx;
    color: #fff;
}