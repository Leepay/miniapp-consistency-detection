.group-con {
    width: 100%;
    text-align: left;
}

.group-con .group-name {
    padding: 30rpx 20rpx 40rpx;
    background: #fff;
}

.group-con .group-name .groupTip {
    display: flex;
    font-size: 48rpx;
    font-weight: 700;
    color: #333;
    line-height: 54rpx;
}

.groupTip .shareToGroup {
    margin-left: auto;
    padding: 0 20rpx;
    height: 52rpx;
    line-height: 52rpx;
    border-radius: 47rpx;
    border: 2rpx solid #2979ff;
    font-size: 24rpx;
    text-align: center;
    font-weight: 700;
    color: #2979ff;
}

.group-con .group-name .groupTip-1 {
    margin-top: 22rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #999;
    line-height: 34rpx;
}