@-webkit-keyframes to-up {
    0% {
        top: 100%;
    }

    100% {
        top: 15%;
    }
}

@keyframes to-up {
    0% {
        top: 100%;
    }

    100% {
        top: 15%;
    }
}

.toUpAnimation {
    animation: to-up .3s linear forwards;
    top: 100%;
    height: 85%;
}

@-webkit-keyframes to-down {
    0% {
        top: 25%;
    }

    100% {
        top: 100%;
    }
}

@keyframes to-down {
    0% {
        top: 25%;
    }

    100% {
        top: 100%;
    }
}

.toDownAnimation {
    animation: to-down .3s linear forwards;
    top: 25%;
    height: 75%;
}

.toDownAnimation-new {
    animation: to-down-new .3s linear forwards;
    top: 35%;
    height: 75%;
}

@-webkit-keyframes to-down-new {
    0% {
        top: 35%;
    }

    100% {
        top: 100%;
    }
}

@keyframes to-down-new {
    0% {
        top: 35%;
    }

    100% {
        top: 100%;
    }
}

.bottomButton {
    width: 93%;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 10;
    height: 80rpx;
    padding: 20rpx 3.5%;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.bottomButton .buttonPrimaryBig {
    width: 100%;
    color: #fff;
    background: linear-gradient(314deg,#2e40a5,#4457a3);
}

.guideCon,.quickBuildView,.writeIntroCon {
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: 13;
}

.confirm,.writeIntroCon {
    background-color: #fff;
    border-radius: 15px 15px 0 0;
}

.confirm {
    width: 100%;
    height: 1112rpx;
    padding: 30rpx 20rpx;
    box-sizing: border-box;
    text-align: center;
}

.confirm .mycardCon {
    display: flex;
    justify-content: space-between;
    height: 66rpx;
    line-height: 66rpx;
}

.confirm .mycardCon .name {
    font-size: 32rpx;
    font-weight: 700;
    color: #333;
}

.confirm .userpicHeng {
    width: 100%;
    height: 426rpx;
    margin: 30rpx 0 24rpx;
}

.confirm .userpicHeng,.confirm .userpicShu {
    box-shadow: 0 0 14rpx 0 #d4d4d4;
    border-radius: 16rpx;
}

.confirm .userpicShu {
    width: 300rpx;
    height: 500rpx;
    overflow: hidden;
    margin: 30rpx auto 24rpx;
}

.confirm .userpicShu .shu-image {
    width: 100%;
    height: 100%;
}

.confirm .btnCon {
    display: flex;
    flex-direction: row;
    letter-spacing: -.09px;
    text-align: center;
    font-size: 32rpx;
    font-weight: 400;
    color: #333;
}

.confirm .confirm-btn {
    margin-top: 60rpx;
}

.confirm .confirm-btn .btn {
    margin: auto;
    text-align: center;
    width: 342rpx;
    height: 92rpx;
    line-height: 92rpx;
    font-size: 32rpx;
    font-weight: 700;
    color: #fff;
    background: linear-gradient(128deg,#438fff,#256de6);
    box-shadow: 12rpx 12rpx 20rpx 0 #d4d4d4,-12rpx -12rpx 20rpx 0 #fff;
    border-radius: 47rpx;
}

.confirmCard .bottomButton {
    background-color: #fff;
    box-shadow: 0 2px 4px 0 rgba(47,47,47,.5);
}

.btnCon .toPerfect {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.btnCon .toPerfect image {
    width: 26rpx;
    height: 26rpx;
    margin-left: 8rpx;
}

.writeIntroBc {
    height: 100%;
    width: 100%;
    background: rgba(0,0,0,.7);
}

.hasBorder {
    border: 2px solid #3f51b5;
}

@-webkit-keyframes to-up-new {
    0% {
        top: 100%;
    }

    100% {
        top: 33%;
    }
}

@keyframes to-up-new {
    0% {
        top: 100%;
    }

    100% {
        top: 33%;
    }
}

.toUpAnimationNew {
    animation: to-up-new .3s linear forwards;
    top: 100%;
    height: 67%;
}

.bottomButtonDetail {
    padding-bottom: 50rpx;
}