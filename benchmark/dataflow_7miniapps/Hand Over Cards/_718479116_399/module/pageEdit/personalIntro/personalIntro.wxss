.edit {
    width: 100%;
    height: 100%;
    overflow-x: hidden;
}

.intro-title {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    height: 30rpx;
    font-size: 30rpx;
    font-weight: 700;
    line-height: 30rpx;
    border-left: 6rpx solid #3f51b5;
    margin-left: 20rpx;
    padding-left: 8rpx;
}

.textarea-con {
    position: relative;
    background: #fff;
    border-radius: 6rpx;
    border: 2rpx solid #ededed;
    margin: 0 auto 30rpx;
}

.textarea,.textarea-con {
    width: 710rpx;
    height: 240rpx;
}

.textarea {
    overflow-y: scroll;
    word-wrap: break-word;
    white-space: pre-line;
    padding: 20rpx;
    border-radius: 6rpx;
    margin: auto;
    box-sizing: border-box;
}

.textarea text {
    word-break: break-all;
}

.textarea-con .intro {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 20;
}

.textarea-con .intro,.textarea-con .intro .intro-p {
    display: flex;
    flex-direction: column;
}

.textarea-con .intro .intro-p {
    margin: auto;
    text-align: center;
}

.textarea-con .intro .i {
    align-self: center;
    width: 36rpx;
    height: 36rpx;
}

.textarea-con .intro .txt {
    margin-top: 10rpx;
    align-self: center;
    font-size: 24rpx;
    font-weight: 400;
    color: #999;
}

.intro-photo-title {
    border-left: 6rpx solid #3f51b5;
    padding-left: 8rpx;
    display: flex;
    justify-content: flex-start;
    margin-top: 60rpx;
    height: 30rpx;
    font-size: 30rpx;
    font-weight: 700;
    line-height: 30rpx;
    margin-left: 20rpx;
}

.left {
    margin-left: auto;
    margin-right: 30rpx;
}

.photo {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    width: 710rpx;
    margin: 0 auto;
}

.photo .photo-item {
    position: relative;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    height: auto;
}

.photo .photo-item,.photo .photo-item image {
    width: 710rpx;
    border-radius: 6rpx;
}

.photo .photo-item .deleteImage {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: 0rpx;
    top: 0rpx;
    padding: 20rpx;
}

.add-photo {
    margin-top: 10rpx;
    position: relative;
    width: 710rpx;
    border-radius: 6rpx;
    border: 2rpx solid #ededed;
}

.add-photo,.photo .add {
    display: flex;
    flex-direction: column;
    height: 264rpx;
}

.photo .add {
    justify-content: center;
    text-align: center;
    margin: auto;
    width: 500rpx;
    border-radius: 6rpx;
}

.photo .add .i {
    align-self: center;
    width: 36rpx;
    height: 32rpx;
}

.photo .add .txt {
    margin-top: 10rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #999;
}

.photo .add .txt-tip {
    font-size: 24rpx;
    color: #f2a72c;
}

.add-more {
    margin-top: 10rpx;
    display: flex;
    justify-content: center;
}

.add-more .img {
    width: 18rpx;
    height: 18rpx;
}

.add-more .img,.add-more .txt {
    align-self: center;
}

.add-more .txt {
    margin-left: 8rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #999;
}

.add-more .new-txt,.photo .add .new-txt,.textarea-con .intro .new-txt {
    color: #2979ff;
}

.drop-con .name {
    display: flex;
    position: relative;
}

.drop-con .cloud {
    margin: auto 5rpx;
    width: 32rpx;
    height: 24rpx;
}