.business-con {
    box-sizing: border-box;
    width: 100%;
    margin-top: 40rpx;
    padding: 20rpx;
}

.business-title {
    display: flex;
    flex-direction: row;
    height: 30rpx;
    border-left: 6rpx solid #3f51b5;
}

.business-title .txt {
    padding-left: 8rpx;
    font-size: 30rpx;
    line-height: 30rpx;
    font-weight: 700;
    color: #333;
}

.business-title .business-connect {
    display: flex;
    justify-content: flex-start;
    margin-left: auto;
}

.business-title .img1 {
    width: 28rpx;
    height: 28rpx;
}

.business-title .img1,.business .v {
    align-self: center;
}

.business .v {
    margin-left: 10rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #ef0000;
}

.add-business {
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    width: 710rpx;
    height: 128rpx;
    justify-content: center;
    border-radius: 6rpx;
    border: 2rpx solid #e3e3e3;
}

.add-business .i {
    width: 36rpx;
    height: 32rpx;
}

.add-business .i,.add-business .txt {
    align-self: center;
}

.add-business .txt {
    margin-top: 10rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #333;
}

.business-list {
    margin-top: 20rpx;
    display: flex;
    justify-content: flex-start;
    width: 710rpx;
    height: 128rpx;
    padding: 20rpx;
    background: #fff;
    box-shadow: 0 0 14rpx 0 rgba(61,64,81,.15);
    box-sizing: border-box;
    border-radius: 6rpx;
}

.business-list .busi-img {
    align-self: center;
    width: 89rpx;
    height: 89rpx;
    margin-right: 20rpx;
}

.business-list .busi-com {
    align-self: center;
    display: flex;
    flex-direction: column;
}

.business-list .busi-com .t1 {
    font-size: 34rpx;
    font-weight: 500;
    color: #333;
}

.business-list .busi-com .t2 {
    font-size: 27rpx;
    font-weight: 400;
    color: #333;
}

.business-list .more {
    margin-left: auto;
    align-self: center;
    width: 14rpx;
    height: 24rpx;
}