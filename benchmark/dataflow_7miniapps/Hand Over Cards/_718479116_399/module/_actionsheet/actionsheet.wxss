.actionsheet-con {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 120;
    overflow: hidden;
}

.actionsheet-con .actionsheet-back {
    position: absolute;
    z-index: -1;
    height: 100%;
    width: 100%;
    background-color: rgba(0,0,0,.75);
}

.actionsheet-con .actionsheet-content {
    position: relative;
    top: 100%;
    background: #fff;
    border-radius: 24px 24px 0 0;
}

.actionsheet-con .content-item {
    height: 112rpx;
    max-height: 112rpx;
    line-height: 112rpx;
    width: 100%;
    text-align: center;
    border-bottom: 1px solid #f7f7f7;
}