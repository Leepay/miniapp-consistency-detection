<view class="addMoreChar">
    <view class="addMoreChar-con">
        <view class="title">输入自定义项名称</view>
        <input adjustPosition="{{true}}" autoFocus="true" bindblur="_input" bindinput="_input" maxlength="4" placeholder="如传真、网址" placeholderClass="placeholderColor" style="color:{{custom.fail?'#F33632':''}}" value="{{custom.value}}"></input>
        <view class="addMoreChar-button">
            <view bindtap="_cancel" class="cancel" data-title="取消">取消</view>
            <view bindtap="{{custom.confirm?'_confirm':'aa'}}" class="confirm" data-title="确认" style="{{custom.confirm?'':'color:#cacaca;'}}">
        确定
      </view>
        </view>
    </view>
</view>
