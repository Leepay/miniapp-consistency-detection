.build {
    position: relative;
    display: flex;
    justify-content: flex-start;
    width: 100%;
    height: 82rpx;
    margin-bottom: 24rpx;
    background: #f4f4fc;
}

.build .img {
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
}

.build .img1 {
    width: 270rpx;
    height: 82rpx;
}

.build .img2 {
    width: 510rpx;
    height: 82rpx;
}

.build .img3 {
    width: 750rpx;
    height: 82rpx;
}

.build-con {
    position: absolute;
    z-index: 2;
    display: flex;
    justify-content: flex-start;
    width: 100%;
    height: 82rpx;
    margin-bottom: 24rpx;
}

.build-con .item {
    width: 33.33%;
    height: 82rpx;
    text-align: center;
    font-size: 24rpx;
    font-weight: 700;
    color: #999;
    line-height: 82rpx;
}

.build-con .active {
    color: #fff;
}