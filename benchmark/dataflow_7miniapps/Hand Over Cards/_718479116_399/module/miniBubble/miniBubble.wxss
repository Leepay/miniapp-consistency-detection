.minibubble {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 75%;
    height: 54rpx;
    text-align: center;
    z-index: 10;
}

.minibubble .v {
    height: 44rpx;
    line-height: 44rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    text-align: center;
    font-size: 24rpx;
    background-color: #fad7ab;
    border-radius: 44rpx;
    position: relative;
    display: inline-block;
    color: #a9783d;
}

.minibubble .v::after {
    position: absolute;
    top: 44rpx;
    content: "";
    left: 50%;
    margin-left: -8rpx;
    border: 8rpx solid transparent;
    border-top-color: #fad7ab;
}