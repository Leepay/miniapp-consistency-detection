.modal {
    position: fixed;
    z-index: 120;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.modal,.modal .modal-back {
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
}

.modal .modal-back {
    position: absolute;
    z-index: -1;
    background-color: rgba(0,0,0,.75);
}

.modal .modal-content {
    width: 640rpx;
    background: #fff;
    border-radius: 24rpx;
    margin-top: -60rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
}

.modal .modal-content-icon {
    width: 107rpx;
    height: 107rpx;
    padding: 64rpx 30rpx 16rpx;
}

.modal .modal-content-title {
    text-align: center;
    font-size: 34rpx;
    font-weight: 700;
    color: #000;
    line-height: 48rpx;
    padding: 0 30rpx;
}

.modal .modal-content-content {
    text-align: center;
    font-size: 34rpx;
    color: #999;
    line-height: 48rpx;
    padding: 32rpx 30rpx 0;
}

.modal .modal-content-tip {
    text-align: center;
    font-size: 24rpx;
    color: #999;
    line-height: 48rpx;
    padding: 10rpx 30rpx 0;
}

.modal .modal-content-button {
    margin-top: 50rpx;
    border-top: 1px solid #dbdee3;
    height: 110rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
}

.modal .modal-content-button .button-main {
    width: 100%;
}

.modal .modal-content-button .button-cancel,.modal .modal-content-button .button-main {
    font-size: 34rpx;
    height: 110rpx;
    line-height: 110rpx;
    background-color: transparent;
    font-weight: 700;
}

.modal .modal-content-button .button-cancel {
    width: 320rpx;
    color: #000;
    border-right: 1px solid #dbdee3;
}

.modal .modal-content-button .button-confirm {
    width: 320rpx;
    color: #ff3b2f;
    line-height: 110rpx;
    font-size: 34rpx;
    font-weight: 700;
    background-color: transparent;
}

.modal .modal-content-close {
    position: absolute;
    bottom: -140rpx;
    height: 60rpx;
    width: 60rpx;
    padding: 20rpx;
}

.modal .title-padding {
    padding-top: 64rpx;
}