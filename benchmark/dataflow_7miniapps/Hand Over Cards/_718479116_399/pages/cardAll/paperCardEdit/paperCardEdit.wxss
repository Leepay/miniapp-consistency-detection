.businessCard {
    position: relative;
    padding-top: 20rpx;
    padding-bottom: 60rpx;
}

.bussinessCard-top {
    width: 700rpx;
    height: 420rpx;
    display: block;
    margin: auto;
    background: #fff;
}

.bussinessCard-top .imageShu {
    width: 252rpx;
    height: 420rpx;
    display: block;
    margin: auto;
}

.coverMessage {
    position: absolute;
    top: 36rpx;
    left: 50%;
    margin-left: -350rpx;
    overflow: hidden;
}

.coverMessage text {
    position: absolute;
    word-break: break-all;
    line-height: 30rpx;
}

.cengdie,.cengdie2 {
    height: 8rpx;
    opacity: .8;
    width: 644rpx;
    margin: auto;
    border-top-right-radius: 6rpx;
    border-top-left-radius: 6rpx;
}

.cengdie2 {
    opacity: .9;
    width: 684rpx;
    height: 10rpx;
}

.bussinessCard-form {
    padding: 0 26rpx;
}

.bussinessCard-form .form-itemL {
    height: 80rpx;
    margin-bottom: 18rpx;
    border-bottom: 1px solid #e3e3e3;
}

.bussinessCard-form .form-itemL,.bussinessCard-form .form-itemL-title {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.bussinessCard-form .form-itemL-title {
    height: 100%;
    width: 30%;
}

.bussinessCard-form .form-itemL-title-v {
    color: #e91e63;
    height: 32rpx;
    margin-left: 12rpx;
}

.bussinessCard-form .form-itemL-input {
    height: 100%;
    width: 70%;
}

.bussinessCard-form .form-addMore {
    display: flex;
    flex-direction: row;
    justify-content: center;
    margin-top: 40rpx;
    margin-bottom: 40rpx;
}

.bussinessCard-form .form-addMore .picker__title {
    font-size: 28rpx;
    letter-spacing: -.09px;
    height: 66rpx;
    line-height: 66rpx;
    display: inline-block;
}

.bussinessCard-form .form-addMore .picker_picker {
    height: 100%;
    padding: 0 34rpx;
}

.bottomButton {
    background: #fff;
    box-shadow: 0 4rpx 8rpx 0 rgba(47,47,47,.5);
}

.changeImage {
    position: absolute;
    right: 25rpx;
    bottom: 60rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    font-size: 28rpx;
    padding: 0 20rpx;
    background-color: rgba(0,0,0,.7);
    color: #fff;
}