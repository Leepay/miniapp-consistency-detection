    font-size: 32rpx;
    font-weight: 700;
    background: linear-gradient(128deg,#438fff,#256de6);
    color: #fff;
}

.mid-success-btn {
    width: 460rpx;
}

.big-disabled-btn {
    width: 710rpx;
}

.big-disabled-btn,.mid-disabled-btn {
    height: 92rpx;
    line-height: 92rpx;
    border-radius: 47rpx;
    font-size: 32rpx;
    font-weight: 700;
    color: #fff;
    background-color: #e3e3e3;
