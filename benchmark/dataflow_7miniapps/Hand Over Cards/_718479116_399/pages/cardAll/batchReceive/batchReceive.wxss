.small-disabled-btn {
    color: #fff;
    background-color: #e3e3e3;
}

.bottomButtonDetail {
    padding-bottom: 50rpx;
}

.bottomButton {
    width: 93%;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 10;
    height: 92rpx;
    line-height: 92rpx;
    padding: 20rpx 3.5%;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.title {
    font-size: 42rpx;
    line-height: 58rpx;
    top: 0rpx;
    padding-top: 30rpx;
    padding-left: 2.7%;
    padding-right: 2.7%;
    z-index: 1;
}

.notSaved,.title {
    position: fixed;
    width: 94.6%;
    background-color: #fff;
}

.notSaved {
    top: 82rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 40rpx 2.7% 20rpx;
    z-index: 2;
    justify-content: space-between;
}

.notSaved radio {
    transform: scale(.7);
}

.item-title {
    margin-top: 40rpx;
    font-size: 30rpx;
    line-height: 42rpx;
}

.bottomButton {
    box-shadow: 0 4rpx 8rpx 0 rgba(47,47,47,.5);
}

.item-container {
    width: 94.6%;
    padding-left: 2.7%;
    padding-right: 2.7%;
}

.cardList {
    margin-left: 1%;
    margin-right: 1%;
    width: 98%;
    display: flex;
    flex-direction: row;
}

.cardList-item {
    width: 86%;
}

.cardList-radioContainer {
    width: 10%;
    height: 212rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-left: -26rpx;
}

.cardList-radio {
    transform: scale(.7);
}

.radioAll {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.cardList .cardList-item .cardList-item-con {
    width: 46%;
}