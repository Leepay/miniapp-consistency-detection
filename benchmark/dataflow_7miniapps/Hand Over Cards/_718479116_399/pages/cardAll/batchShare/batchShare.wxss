.search {
    position: fixed;
    top: 0;
    z-index: 2;
    height: 110rpx;
    width: 100%;
    background-color: #fff;
}

.search-container {
    margin-left: 2.7%;
    margin-right: 2.7%;
    width: 94.6%;
    height: 66rpx;
    background-color: #f1f1f3;
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.search-icon {
    height: 26rpx;
    width: 26rpx;
    margin-left: 20rpx;
    margin-right: 6rpx;
}

.search-input {
    font-size: 28rpx;
    color: #8d8c91;
    width: 90%;
}

.batchContainerF {
    position: fixed;
    top: 0;
    z-index: 1;
    height: 100%;
    width: 100%;
    overflow: hidden;
}

.noResult {
    padding: 40rpx 0;
    font-size: 28rpx;
    color: #999;
    line-height: 50rpx;
}

.noResult text {
    font-size: 36rpx;
    color: #e91e63;
}

.noResult,.selectCard,.selectedCard {
    width: 92%;
    padding-left: 2.7%;
    padding-right: 5.3%;
}

.haveSelected {
    width: 98%;
    margin-left: 1%;
    padding-top: 30rpx;
}

.haveSelected-title {
    line-height: 58rpx;
    font-size: 42rpx;
}

.haveSelected-container {
    height: 92rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 94%;
    padding-left: 3%;
    padding-right: 3%;
    white-space: nowrap;
}

.haveSelected-container view {
    line-height: 92rpx;
    display: inline-block;
    font-size: 30rpx;
}

.selectCard {
    position: relative;
    font-size: 42rpx;
    margin-top: 30rpx;
    height: 100%;
}

.selectCard-title {
    justify-content: space-between;
    line-height: 58rpx;
}

.selectCard-title,.selectCard-title .selectCard-radioAll {
    display: flex;
    flex-direction: row;
}

.selectCard-title .selectCard-radioAll {
    align-items: center;
    font-size: 28rpx;
}

.selectCard-title radio {
    transform: scale(.7);
}

.batchContainerS {
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 2;
    margin-top: 6rpx;
}

.batchContainerS .cardList {
    margin-left: 1%;
    width: 98%;
}

.listTag {
    position: relative;
    padding-top: 24rpx;
    font-size: 32rpx;
}

.listTag,.listTag image {
    height: 42rpx;
    width: 81.2rpx;
}

.listTag image {
    position: absolute;
    z-index: 0;
}

.listTag view {
    position: relative;
    z-index: 1;
    height: 42rpx;
    line-height: 42rpx;
    width: 70rpx;
    text-align: center;
    color: #8f8f93;
}

.cardList-label {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.cardList-radio {
    transform: scale(.7);
    padding: 30rpx 10rpx 30rpx 13rpx;
}

.cardList .cardList-item {
    padding-left: 0;
    width: 87%;
}

.letterList {
    position: fixed;
    right: 0;
    z-index: 3;
    width: 44rpx;
    letter-spacing: 0;
}

.letterList image {
    display: block;
    height: 15px;
    width: 15px;
    margin: 2px 3px;
}

.letterList view {
    height: 17px;
    line-height: 17px;
    width: 44rpx;
    text-align: center;
    font-size: 24rpx;
}

.lettershow {
    height: 120rpx;
    line-height: 120rpx;
    text-align: center;
    width: 120rpx;
    position: fixed;
    z-index: 10;
    top: 50%;
    margin-top: -60rpx;
    left: 50%;
    margin-left: -60rpx;
    border-radius: 10rpx;
    opacity: .8;
    background-color: #484646;
    font-size: 80rpx;
    color: #fff;
}

.lettershow-img {
    height: 90rpx;
    width: 90rpx;
    margin-top: 15rpx;
}