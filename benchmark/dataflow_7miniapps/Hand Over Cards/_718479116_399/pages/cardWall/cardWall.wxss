page {
    width: 100%;
    height: 100%;
}

.top-fixed {
    position: fixed;
    z-index: 1;
    width: 100%;
    background-color: #fff;
}

.navigationSwiper {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.navigationSwiper-item {
    padding: 10rpx 40rpx 10rpx 20rpx;
    height: 50rpx;
    line-height: 50rpx;
}

.navigationSwiper-selsected {
    position: relative;
    font-size: 28rpx;
    font-weight: 400;
    color: #333;
}

.navigationSwiper-selsected::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 45%;
    margin-left: -24rpx;
    width: 48rpx;
    height: 4rpx;
    background: #2979ff;
    border-radius: 2rpx;
}

.navigationSwiper-notSelected {
    font-size: 28rpx;
    color: #999;
}

.introCon {
    width: 100%;
    height: 336rpx;
    background: linear-gradient(90deg,#824ad9,#5a82f6);
    text-align: right;
    position: relative;
}

.introConBg {
    width: 300rpx;
    height: 262rpx;
    margin-top: 74rpx;
}

.introTxtCon {
    position: absolute;
    top: 0;
    left: 0;
    font-size: 36rpx;
    font-weight: 700;
    text-align: left;
    z-index: 2;
    padding: 30rpx 20rpx 0rpx;
}

.introTit {
    font-size: 32rpx;
    font-family: PingFangSC-Semibold,PingFang SC;
    font-weight: 600;
    color: #fff;
    line-height: 44rpx;
    margin-bottom: 10rpx;
}

.introTxt {
    font-size: 24rpx;
    font-weight: 400;
    line-height: 36rpx;
}

.introTip,.introTxt {
    font-family: PingFangSC-Regular,PingFang SC;
    color: #fff;
}

.introTip {
    margin-top: 10rpx;
    font-size: 28rpx;
    font-weight: 700;
    line-height: 34rpx;
}

.wallListCon {
    width: 100%;
    overflow-x: hidden;
}

.gray-bg {
    background: #f7f7f7;
}

.white-bg {
    background: #fff;
}

.top-con {
    padding: 30rpx 20rpx 20rpx;
}

.mainPage-button {
    position: relative;
    display: flex;
    width: 710rpx;
    height: 152rpx;
    border-radius: 12rpx;
    border: 1px solid #dcdfe6;
    flex-direction: row;
    align-items: center;
}

.mainPage-button .t-1 {
    width: 426rpx;
    font-size: 24rpx;
    color: #333;
    line-height: 34rpx;
    margin-left: 20rpx;
    margin-right: 10rpx;
}

.mainPage-button .new-btn {
    font-size: 32rpx;
    font-weight: 700;
    color: #fff;
    width: 234rpx;
    min-width: 234rpx;
    height: 92rpx;
    line-height: 92rpx;
    background: linear-gradient(128deg,#438fff,#256de6);
    box-shadow: 12rpx 12rpx 20rpx 0rpx rgba(41,46,59,.17);
    border-radius: 47rpx;
    text-shadow: 12rpx 12rpx 20rpx rgba(41,46,59,.17);
}

.top-share {
    display: flex;
    justify-content: center;
}

.top-share .big-btn {
    font-size: 32rpx;
    font-weight: 700;
    color: #fff;
    width: 234rpx;
    min-width: 444rpx;
    height: 92rpx;
    line-height: 92rpx;
    background: linear-gradient(128deg,#438fff,#256de6);
    box-shadow: 12rpx 12rpx 20rpx 0rpx rgba(41,46,59,.17);
    border-radius: 47rpx;
    text-shadow: 12rpx 12rpx 20rpx rgba(41,46,59,.17);
}

.totalGroup {
    width: 300rpx;
    text-align: center;
    font-size: 24rpx;
    font-family: PingFangSC-Regular,PingFang SC;
    font-weight: 400;
    color: #999;
    line-height: 34rpx;
    margin: 20rpx auto 40rpx;
}

.activity {
    width: 750rpx;
}

.look-con {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 20rpx;
    height: 64rpx;
    align-items: center;
}

.look-con .look-con-title {
    font-size: 32rpx;
    font-weight: 700;
    color: #333;
}

.look-con .look-con-list {
    display: flex;
    flex-direction: row;
}

.look-con .look-item {
    font-size: 24rpx;
    color: #333;
}

.look-con .active {
    font-weight: 700;
    color: #2979ff;
}

.noRecordsCon {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.noRecordsCon .noRecords {
    margin: auto auto 0;
    width: 258rpx;
    height: 258rpx;
}

.noRecordsCon .name {
    padding: 0 20rpx;
    font-size: 32rpx;
    font-weight: 700;
    color: #333;
}

.noRecordsCon .no-card {
    position: absolute;
    left: 38%;
    top: 40%;
    text-align: center;
    font-size: 28rpx;
    font-weight: 400;
    color: #999;
}

.noRecordsCon .noRecordsText {
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
    padding: 20rpx;
}

.noRecordsText .block {
    margin-bottom: 20rpx;
}

.left .block-1 {
    height: 572rpx;
}

.left .block-1,.left .block-2 {
    width: 344rpx;
    background: hsla(0,0%,96.9%,.5);
    border-radius: 12rpx;
}

.left .block-2 {
    height: 306rpx;
}

.right .block-1 {
    height: 294rpx;
}

.right .block-1,.right .block-2 {
    width: 344rpx;
    background: hsla(0,0%,96.9%,.5);
    border-radius: 12rpx;
}

.right .block-2 {
    height: 428rpx;
}