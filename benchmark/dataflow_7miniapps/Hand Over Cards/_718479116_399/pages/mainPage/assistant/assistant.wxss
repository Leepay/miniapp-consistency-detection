.save-borders,.save-borders-2,.save-button {
    position: absolute;
    width: 610rpx;
    height: 90rpx;
    border-radius: 45rpx;
}

.save-borders-2 {
    animation: pulse 4s ease-in-out infinite;
    background: #ffd29a;
}

.save-borders {
    animation: pulse 2s ease-in-out infinite;
    background: #ffd29a;
}

.save-button {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    z-index: 99;
    border: none;
    background: linear-gradient(180deg,#ffb355,#ef8700);
    box-shadow: 2rpx 2rpx 10rpx 0 rgba(174,119,2,.83);
    background-size: 100% 100%;
}

.save-button .btn {
    position: absolute;
    font-size: 36rpx;
    font-weight: 500;
    color: #fff;
    background: none;
}

@-webkit-keyframes pulse {
    0% {
        transform: scale(1,1);
    }

    50% {
        opacity: .8;
    }

    100% {
        transform: scale(1.15,1.55);
        opacity: 0;
    }
}

@keyframes pulse {
    0% {
        transform: scale(1,1);
    }

    50% {
        opacity: .8;
    }

    100% {
        transform: scale(1.15,1.55);
        opacity: 0;
    }
}

.water-con {
    background: linear-gradient(51deg,#5c6bc0,#3949ab);
    box-shadow: 2rpx 6rpx 20rpx 0 rgba(30,38,102,.5);
    position: relative;
    border-radius: 6rpx;
    overflow: hidden;
}

.navTitle {
    height: 50rpx;
    font-size: 36rpx;
    font-weight: 700;
    color: #333;
    line-height: 50rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.navTitle image {
    width: 22rpx;
    height: 12rpx;
    margin-left: 10rpx;
}

.nav-title-t {
    transform: rotate(180deg);
}

.nav-title-f {
    transform: rotate(0deg);
}

.mine,.mine .img {
    background: #22263b;
}

.mine .img {
    width: 40rpx;
    height: 40rpx;
}

.activity {
    width: 750rpx;
    min-height: 254rpx;
}

.as-con {
    padding: 68rpx 40rpx 0;
}