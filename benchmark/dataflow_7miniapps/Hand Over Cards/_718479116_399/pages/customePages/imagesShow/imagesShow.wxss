.container {
    position: fixed;
    font-size: 30rpx;
    background-color: #000;
}

.top {
    height: 8%;
    width: 94%;
    padding: 0 3.5% 0 3%;
    display: table;
    color: #fff;
}

.top .top_item {
    height: 100%;
    vertical-align: middle;
    display: table-cell;
    width: 30%;
}

.item1 {
    padding-left: 40rpx;
}

.item3 {
    text-align: right;
}

.top .top_item image {
    position: absolute;
}

.top .item1 image {
    top: 28rpx;
    left: 25rpx;
    width: 35rpx;
    height: 35rpx;
}

.top .item3 image {
    top: 20rpx;
    right: 25rpx;
    width: 55rpx;
    height: 55rpx;
}

swiper {
    width: 100%;
    height: 92%;
    will-change: tranform;
    position: relative;
}

swiper image {
    height: 100%;
    width: 100%;
}