.industryCon {
    width: 710rpx;
    margin-left: 20rpx;
    padding-top: 60rpx;
}

.industryCon-container {
    min-height: 62rpx;
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    width: 690rpx;
    padding: 10rpx;
    border-radius: 8rpx;
    border: 1px solid #dcdfe6;
}

.industryCon-container .itemIndustry {
    display: inline-block;
    padding: 8rpx;
    margin: 10rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #2979ff;
    line-height: 28rpx;
    background: rgba(41,121,255,.1);
    border-radius: 4rpx;
    position: relative;
}

.delBtn {
    position: absolute;
    left: 50%;
    margin-left: -49rpx;
    top: -76rpx;
    width: 98rpx;
    line-height: 58rpx;
    text-align: center;
    color: #fff;
    background: #000;
    border-radius: 16rpx;
}

.triangle {
    position: absolute;
    left: 33rpx;
    bottom: -30rpx;
    width: 0;
    height: 0;
    font-size: 0;
    border: 16rpx dashed transparent;
    border-top: 16rpx solid #000;
}

.industryCon-container .inputContainer {
    display: inline-flex;
    position: relative;
    min-width: 120rpx;
    height: 44rpx;
}

.hideView {
    color: transparent;
    margin-left: 10rpx;
    padding-left: 30rpx;
}

.moreIndustryInput {
    position: absolute;
    top: 0;
    left: 0;
}

.industryInput {
    font-size: 24rpx;
    margin-left: 10rpx;
    padding-right: 20rpx;
}

.inputHasBorder {
    border-radius: 2px;
    border: 1px dashed #999;
    padding-left: 20rpx;
}

.noTags {
    width: 100%;
    font-size: 32rpx;
    min-height: 42rpx;
    line-height: 100%;
    padding-left: 10rpx;
}

.itemIndustryName {
    height: 92rpx;
    line-height: 92rpx;
    margin: 0rpx 20rpx;
    border-bottom: 1px solid #eceeea;
    font-size: 28rpx;
    font-weight: 400;
    color: #333;
}

.noBorder {
    border-bottom: none;
}

.hasMar {
    margin-top: 10rpx;
}

.completeBtn {
    margin: 0rpx auto;
    width: 372rpx;
    height: 92rpx;
    background: linear-gradient(128deg,#438fff,#256de6);
    box-shadow: 6px 6px 10px 0 rgba(41,46,59,.17);
    border-radius: 48rpx;
    text-align: center;
    font-size: 16px;
    font-weight: 500;
    color: #fff;
    line-height: 92rpx;
}

.disabledBg {
    background: #e1e1e1;
    box-shadow: none;
}