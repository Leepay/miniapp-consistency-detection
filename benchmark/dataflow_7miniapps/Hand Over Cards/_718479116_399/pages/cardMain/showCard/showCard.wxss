page {
    background-color: #fff;
}

.container {
    width: 100%;
    position: relative;
    overflow-x: hidden;
}

.success {
    text-align: center;
    padding-top: 0rpx;
    position: relative;
    overflow: hidden;
    font-size: 36rpx;
}

.success .tip {
    font-size: 28rpx;
    line-height: 40rpx;
}

.send-p,.success .tip {
    font-weight: 700;
    color: #333;
}

.send-p {
    display: flex;
    justify-content: center;
    margin: 60rpx auto 20rpx;
    text-align: center;
    height: 60rpx;
    font-size: 44rpx;
    line-height: 60rpx;
}

.send-p .name {
    width: 150rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.about-button {
    height: 94rpx;
    line-height: 94rpx;
    font-size: 34rpx;
    width: 354rpx;
    color: #fff;
    border-radius: 47rpx;
    margin: 140rpx auto;
    background: linear-gradient(135deg,#4457c3,#2e40a5);
    box-shadow: 0rpx 10rpx 18rpx 0rpx rgba(17,27,82,.4);
    font-weight: 700;
}

.container_B .card-heng {
    width: 700rpx;
    height: 420rpx;
    margin: 40rpx auto;
    border-radius: 6rpx;
    box-shadow: 0rpx 6rpx 18rpx 0rpx hsla(0,0%,73.7%,.68),0 0 6px 0 hsla(0,0%,73.7%,.5);
}

.container_B .card-heng image {
    height: 100%;
    width: 100%;
}

.container_B .card-shu {
    width: 700rpx;
    height: 420rpx;
    margin: 40rpx auto;
    display: flex;
    justify-content: center;
}

.container_B .card-shu image {
    height: 420rpx;
    width: 252rpx;
    border-radius: 6rpx;
    box-shadow: 0rpx 6rpx 18rpx 0rpx hsla(0,0%,73.7%,.68),0 0 6px 0 hsla(0,0%,73.7%,.5);
}