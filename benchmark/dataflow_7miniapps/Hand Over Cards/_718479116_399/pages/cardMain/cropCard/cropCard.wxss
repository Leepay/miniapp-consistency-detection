.container,page {
    height: 100%;
}

.container {
    position: relative;
    overflow: hidden;
}

.canvasCon {
    height: 90%;
    width: 100%;
    position: fixed;
    bottom: 140px;
}

.canvasCon2 {
    position: absolute;
    display: block;
    top: 0;
    height: 100px;
    width: 100px;
    overflow: hidden;
}

.canvasCon image {
    margin: auto;
}

.canvasCon2 image,canvas {
    position: fixed;
}

.preview {
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.preview_title {
    position: absolute;
    top: 30%;
    left: 50rpx;
    font-size: 32rpx;
    letter-spacing: -.1px;
}

.preview_item {
    width: 100%;
}

.preview_item image {
    margin: 0 auto;
    display: block;
}

.rotateIcon {
    height: 130rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    background-color: #000;
    color: #fff;
    margin-top: 90rpx;
    padding-bottom: 20rpx;
}

.rotateIcon .rotateIcon-item {
    margin: 0 18%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.rotateIcon .rotateIcon-item image {
    height: 50rpx;
    width: 50rpx;
    margin-top: 15rpx;
}

.rotateIcon .rotateIcon-item view {
    font-size: 24rpx;
    height: 50rpx;
    line-height: 50rpx;
}