.search,page {
    background-color: #f9f9fa;
}

.search {
    position: fixed;
    top: 0;
    padding-top: 10rpx;
    width: 100%;
    color: #333;
    z-index: 10;
}

.addrDeleteTip {
    padding: 20rpx;
    color: #f12424;
    height: 34rpx;
    font-size: 24rpx;
    line-height: 34rpx;
    width: 120rpx;
    text-align: right;
    margin-left: 590rpx;
}

.search .search-con {
    height: 92rpx;
    width: 94.6%;
    margin-left: 2.7%;
    background: #fff;
    box-shadow: 0 0 4rpx 0 hsla(0,0%,73.7%,.5);
    border-radius: 6rpx;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.position {
    height: 60rpx;
    width: 25%;
    font-size: 24rpx;
    line-height: 60rpx;
}

.inp {
    height: 100%;
    font-size: 32rpx;
    padding: 0 2.7%;
    width: 85%;
}

.clear {
    width: 10%;
    height: 16px;
    margin-left: 6rpx;
}

.result {
    background-color: #fff;
    width: 100%;
    margin-top: 170rpx;
    color: #333;
    font-size: 32rpx;
}

.result-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 94.6%;
    margin-left: 2.7%;
    border-bottom: 1px solid #eee;
}

.result-item view {
    word-break: break-all;
}

.result-item .result-item-con {
    width: 85%;
    padding: 10rpx 2.7%;
}

.result-item .result-item-con .result-item-con-list1 {
    font-size: 28rpx;
    line-height: 44rpx;
}

.result-item .result-item-con .result-item-con-list2 {
    font-size: 24rpx;
    line-height: 40rpx;
    color: #999;
    margin-top: 6rpx;
}

.result-item-image {
    width: 10%;
    margin-left: 6rpx;
}

.result-item image {
    height: 26rpx;
    width: 26rpx;
}