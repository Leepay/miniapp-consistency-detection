page {
    height: 100%;
    background-color: #000;
}

.container {
    position: relative;
    height: 100%;
    overflow: hidden;
}

.canvasCon {
    height: 90%;
    width: 100%;
}

.canvasCon2 {
    position: absolute;
    display: block;
    top: 0;
    height: 100px;
    width: 100px;
    overflow: hidden;
}

.canvasCon image {
    margin: auto;
}

.canvasCon2 image,canvas {
    position: fixed;
}

canvas {
    top: 0;
}

.rotate {
    flex-direction: row;
    color: #fff;
}

.rotate,.rotate .rotate-item {
    display: flex;
    justify-content: center;
}

.rotate .rotate-item {
    flex-direction: column;
    align-items: center;
    font-size: 24rpx;
}

.rotate .rotate-item view {
    line-height: 50rpx;
}

.rotate image {
    height: 70rpx;
    width: 70rpx;
}

.rotate .rotateImage1 {
    margin-right: 160rpx;
}

.preview,.preview_title {
    position: relative;
}

.preview_title {
    top: 40%;
    left: 5%;
    color: #000;
}

.preview_item {
    width: 100%;
    position: absolute;
    top: 0;
}

.preview_item image {
    margin: auto;
    display: block;
}

.rotateIcon {
    height: 80rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    background-color: #000;
}

.rotateIcon view {
    margin: 0 18%;
}

.rotateIcon view image {
    height: 50rpx;
    width: 50rpx;
    margin-top: 15rpx;
}

.bottomButton .buttonPrimaryCoverView {
    width: 63%;
    background: #4457a3;
    color: #fff;
}

.bottomButton .buttonDefaultCoverView {
    width: 33%;
    background: #fff;
    border: 1px solid #e3e3e3;
}