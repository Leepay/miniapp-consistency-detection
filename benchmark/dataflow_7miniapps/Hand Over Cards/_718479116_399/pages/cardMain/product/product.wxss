.container .abbreviation {
    padding: 58rpx 0 0;
}

.abbreviation .abbreviation-title {
    font-size: 28rpx;
    color: #333;
    height: 40rpx;
    line-height: 40rpx;
    padding-bottom: 10rpx;
    font-weight: 700;
}

.abbreviation .abbreviation-title .abbreviation-title-number {
    font-size: 24rpx;
    float: right;
    font-weight: 400;
}

.abbreviation .abbreviation-title .abbreviation-title-mark {
    color: #e91e63;
    height: 12rpx;
    width: 12rpx;
    margin-left: 10rpx;
}

.abbreviation .abbreviation-con {
    width: 100%;
}

.abbreviation .abbreviation-con .abbreviation-con-input {
    border: 1px solid #e3e3e3;
    border-radius: 6rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 32rpx;
    padding: 0 20rpx;
}

.abbreviation .abbreviation-con .abbreviation-con-p {
    color: #cacaca;
    font-size: 32rpx;
    line-height: 44rpx;
}

.abbreviation .abbreviation-con .abbreviation-con-logo {
    height: 216rpx;
    width: 216rpx;
    background: #f2f2f2;
    border-radius: 6rpx;
    margin-top: 2rpx;
    position: relative;
}

.abbreviation .abbreviation-con .abbreviation-con-logo2 {
    height: 54rpx;
    width: 54rpx;
    position: absolute;
    right: 0;
    top: 0;
}

.abbreviation .abbreviation-con .abbreviation-con-beizhu {
    margin-left: 20rpx;
    background: #e4f5e4;
    border-radius: 6rpx;
    color: #1aad19;
    font-size: 24rpx;
    height: 44rpx;
    line-height: 44rpx;
    padding: 0 16rpx;
}

.abbreviation .abbreviation-con .abbreviation-con-textarea {
    border: 1px solid #e3e3e3;
    border-radius: 6rpx;
    font-size: 32rpx;
    line-height: 44rpx;
    height: 374rpx;
    padding: 29rpx 2.9%;
    width: 94.2%;
    word-break: break-all;
}

.abbreviation .abbreviation-con .abbreviation-con-item {
    height: 176rpx;
    background: #fff;
    box-shadow: 0 0 14rpx 0 hsla(0,0%,73.7%,.5);
    border-radius: 6rpx;
    margin: 2rpx 0 40rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.abbreviation .abbreviation-con .abbreviation-con-item .abbreviation-con-item-image {
    height: 108rpx;
    width: 108rpx;
}

.container .saveButton {
    position: absolute;
    bottom: auto;
    margin: 42rpx 0 0;
}

.rowFlexend {
    align-items: flex-end;
}

.productShow,.rowFlexend {
    display: flex;
    flex-direction: row;
}

.productShow {
    margin-top: 21px;
    width: 100%;
    height: 87%;
    align-items: center;
    justify-content: space-between;
}

.productShow-item {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.productShow-item-scroll {
    width: 100%;
    float: left;
}

.productShow .productShow-item:nth-child(1),.productShow .productShow-item:nth-child(3) {
    width: 8.8%;
    height: 100rpx;
}

.productShow .productShow-item:nth-child(2) {
    width: 82.4%;
    box-shadow: 0 0 14rpx 0 hsla(0,0%,73.7%,.5);
    height: 100%;
}

.productShow .productShow-item:nth-child(1) image,.productShow .productShow-item:nth-child(3) image {
    height: 36rpx;
    width: 36rpx;
    margin: 32rpx auto;
    display: block;
}

.productShow .productShow-item .productShow-item-top {
    height: 460rpx;
    width: 620rpx;
    position: relative;
    top: 0;
}

.productShow .productShow-item .productShow-item-top image {
    height: 306rpx;
    width: 100%;
}

.productShow .productShow-item-top-item {
    width: 100%;
    height: 390rpx;
    overflow: hidden;
}

.productShow .productShow-item .productShow-item-bottom {
    height: 580rpx;
    width: 93.2%;
    margin: -10rpx auto;
    overflow: hidden;
    white-space: pre-wrap;
    word-break: break-all;
}

.productButton {
    margin-top: 32rpx;
    width: 82.4%;
    margin-left: 8.8%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.productButton .productButton-item {
    width: 48.5%;
    height: 80rpx;
    font-size: 32rpx;
    letter-spacing: -0.2rpx;
    border-radius: 6rpx;
}

.productButton .productButton-item:nth-child(1) {
    background-color: #fff;
    box-shadow: 0 0 4rpx 0 hsla(0,0%,60%,.5);
    color: #333;
}

.productButton .productButton-item:nth-child(2) {
    color: #fff;
}