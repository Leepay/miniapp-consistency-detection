<view class="cropper-wrapper">
    <canvas bindtouchend="touchEnd" bindtouchmove="touchMove" bindtouchstart="touchStart" canvasId="{{cropperOpt.id}}" class="cropper" disableScroll="true" style="width:{{cropperOpt.width}}px;height:{{cropperOpt.height-40}}px;background-color: black;"></canvas>
</view>
<view class="bottomButton {{systemInfoN.modelX?'bottomButtonDetail':'bottomButtonDetailF'}}">
    <button bindtap="again" class="small-default-btn" data-title="重新选图">重新选图</button>
    <button bindtap="getCropperImage" class="mid-success-btn" data-title="确认">确认</button>
</view>
