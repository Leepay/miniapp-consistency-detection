.user {
    position: fixed;
    bottom: 0;
    height: 40px;
    width: 100%;
    background-color: #000;
    padding: 10px 0;
}

button {
    float: right;
    height: 32px;
    line-height: 32px;
    width: 66px;
    margin-right: 20px;
    color: #fff;
    background: #2979ff;
}

.cropper-buttons .getCropperImage,.cropper-buttons .upload {
    width: 50%;
    text-align: center;
}

.cropper {
    position: absolute;
    top: 0;
    left: 0;
}

.cropper-wrapper {
    height: 100%;
    width: 100%;
    background-color: #000;
}