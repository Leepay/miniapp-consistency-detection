        <view class="addBold">制作成功</view>
    </view>
    <view class="about">
        <view class="about-top">
            <view class="title-1">电子名片的</view>
            <view class="title-1">使用方法</view>
            <view class="title-3"></view>
        </view>
        <image class="about-back" src="{{backSrc}}"></image>
        <view class="circle-1"></view>
        <view class="circle-2"></view>
        <view class="circle-3">
            <view></view>
        </view>
        <view class="circle-4">
            <view></view>
        </view>
