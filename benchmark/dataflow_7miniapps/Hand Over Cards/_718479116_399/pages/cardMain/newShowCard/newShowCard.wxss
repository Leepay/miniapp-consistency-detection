.container {
    height: 100%;
    width: 100%;
    position: relative;
    overflow-x: hidden;
}

.success {
    text-align: center;
    padding-top: 0rpx;
    overflow: hidden;
}

.about,.success {
    position: relative;
}

.about {
    width: 600rpx;
    margin: 40rpx auto;
    border-radius: 6rpx;
    box-shadow: 0 0 7rpx 0 rgba(63,81,181,.3);
    background-color: #fff;
}

.about-top {
    padding: 30rpx 0 40rpx;
    border-top-left-radius: 6rpx;
    border-top-right-radius: 6rpx;
    background: linear-gradient(103deg,#8841d5,#5191fd);
}

.title-1,.title-2 {
    line-height: 74rpx;
    padding-left: 40rpx;
    color: #fff;
    font-size: 52rpx;
    font-weight: 700;
}

.title-3 {
    height: 6rpx;
    width: 116rpx;
    background-color: #fff;
    margin-left: 40rpx;
    margin-top: 20rpx;
}

.about-back {
    position: absolute;
    top: 120rpx;
    right: -60rpx;
    width: 280rpx;
    height: 186rpx;
    z-index: 1;
}

.circle-1 {
    position: absolute;
    right: -90rpx;
    top: -46rpx;
    opacity: .16;
    z-index: -1;
}

.about .circle-1 {
    width: 166rpx;
    height: 166rpx;
    border: 48rpx solid #88889b;
    right: -154rpx;
    top: -106rpx;
}

.about .circle-2 {
    position: absolute;
    width: 130rpx;
    height: 134rpx;
    left: -107rpx;
    top: 120rpx;
    opacity: .29;
    z-index: -1;
    border: 48rpx solid #babac4;
}

.circle-3 {
    position: absolute;
    right: 0rpx;
    bottom: 0rpx;
    opacity: .1;
    z-index: 1;
    height: 100rpx;
    width: 100rpx;
    overflow: hidden;
}

.about .circle-3 view {
    border: 48rpx solid #88889b;
}

.circle-4 {
    position: absolute;
    right: 0rpx;
    top: 0rpx;
    opacity: .29;
    z-index: 1;
    height: 120rpx;
    width: 120rpx;
    overflow: hidden;
}

.circle-4 view {
    margin-top: -80rpx;
    margin-left: 0rpx;
}

.circle-5 {
    position: absolute;
    left: 0;
    top: 242rpx;
    opacity: .1;
    z-index: 1;
    height: 80rpx;
    width: 140rpx;
    overflow: hidden;
}

.circle-5 view {
    margin-top: -120rpx;
    margin-left: -120rpx;
}

.circle-1,.circle-2,.circle-3 view,.circle-4 view,.circle-5 view {
    width: 120rpx;
    height: 120rpx;
    border-radius: 100%;
    border: 40rpx solid #4f4ad5;
}

.about-list {
    background: #fff;
    border-radius: 32rpx;
    margin-left: 40rpx;
    padding-top: 30rpx;
}

.about-list .list-item {
    font-size: 32rpx;
    line-height: 66rpx;
}

.about-button {
    height: 94rpx;
    line-height: 94rpx;
    width: 418rpx;
    color: #fff;
    font-size: 34rpx;
    border-radius: 44rpx;
    font-weight: 700;
    background: linear-gradient(135deg,#4457c3,#2e40a5);
    margin: 80rpx auto;
}

.dotted {
    height: 66rpx;
    width: 112rpx;
}

.bgView {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -5;
    background: #f7f7f7;
}

.playCon {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    margin-top: 36rpx;
}

.playImg {
    width: 30rpx;
    height: 30rpx;
    margin-right: 6rpx;
}

.playBtn {
    text-decoration: underline;
    font-size: 28rpx;
    font-weight: 400;
    color: #333;
    line-height: 40rpx;
}

.about .circle-5 view {
    width: 172rpx;
    height: 114rpx;
}