<view class="page">
    <view class="page__hd">
        <view class="page__title">Uploader</view>
        <view class="page__desc">上传组件</view>
    </view>
    <view class="page__bd">
        <view class="weui-cells">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <view class="weui-uploader">
                        <view class="weui-uploader__hd">
                            <view class="weui-uploader__title">图片上传</view>
                            <view class="weui-uploader__info">{{files.length}}/2</view>
                        </view>
                        <view class="weui-uploader__bd">
                            <view class="weui-uploader__files" id="uploaderFiles">
                                <view bindtap="previewImage" class="weui-uploader__file" id="{{item}}">
                                    <image class="weui-uploader__img" mode="aspectFill" src="{{item}}"></image>
                                </view>
                                <view class="weui-uploader__file">
                                    <image class="weui-uploader__img" mode="aspectFill" src="../images/pic_160.png"></image>
                                </view>
                                <view class="weui-uploader__file">
                                    <image class="weui-uploader__img" mode="aspectFill" src="../images/pic_160.png"></image>
                                </view>
                                <view class="weui-uploader__file">
                                    <image class="weui-uploader__img" mode="aspectFill" src="../images/pic_160.png"></image>
                                </view>
                                <view class="weui-uploader__file weui-uploader__file_status">
                                    <image class="weui-uploader__img" mode="aspectFill" src="../images/pic_160.png"></image>
                                    <view class="weui-uploader__file-content">
                                        <icon color="#F43530" size="23" type="warn"></icon>
                                    </view>
                                </view>
                                <view class="weui-uploader__file weui-uploader__file_status">
                                    <image class="weui-uploader__img" mode="aspectFill" src="../images/pic_160.png"></image>
                                    <view class="weui-uploader__file-content">50%</view>
                                </view>
                            </view>
                            <view class="weui-uploader__input-box">
                                <view bindtap="chooseImage" class="weui-uploader__input"></view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>
