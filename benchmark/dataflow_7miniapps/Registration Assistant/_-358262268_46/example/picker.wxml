<view class="page">
    <view class="page__hd">
        <view class="page__title">Picker</view>
        <view class="page__desc">选择器，这里使用小程序原生的picker。</view>
    </view>
    <view class="page__bd">
        <view class="weui-btn-area">
            <picker bindchange="bindPickerChange" range="{{array}}" value="{{index}}">
                <button type="default">单列选择器</button>
            </picker>
            <picker bindchange="bindTimeChange" class="weui-btn" end="21:01" mode="time" start="09:01" value="{{time}}">
                <button type="default">时间选择器</button>
            </picker>
            <picker bindchange="bindDateChange" class="weui-btn" end="2017-09-01" mode="date" start="2015-09-01" value="{{date}}">
                <button type="default">日期选择器</button>
            </picker>
        </view>
    </view>
</view>
