page {
    background: rgba(0,0,0,.7);
}

.install-container {
    padding-bottom: 40rpx;
}

.install-container .next-btn {
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 9;
    box-sizing: border-box;
    padding: 30rpx 0;
    width: 100%;
}

.install-container .next-btn button {
    margin: 0 auto;
    width: 680rpx;
    height: 110rpx;
    box-sizing: border-box;
    background-color: #09bb07;
    border: 1rpx solid #029400;
    border-radius: 10rpx;
    line-height: 108rpx;
}

.install-container .next-btn button .btn-text {
    font-size: 36rpx;
    color: #f8f8f8;
    opacity: .5;
}

.install-container .next-btn button .btn-text.allow {
    opacity: 1!important;
}