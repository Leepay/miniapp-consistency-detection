page {
    padding-bottom: 140rpx;
    text-align: center;
    font-size: 18px;
}

.box_wrapper {
    padding: 50rpx 100rpx;
}

.box_wrapper input {
    display: block;
    width: 100%;
    margin: 40rpx 0;
    padding: 5rpx;
    border: 1px solid #ccc;
}

.title {
    margin: 200rpx auto 100rpx;
    font-weight: 700;
    text-align: center;
    color: #000;
}

.tip {
    margin-top: 40rpx;
    padding: 0 100rpx;
    font-size: 12px;
    text-align: left;
    color: #ccc;
}