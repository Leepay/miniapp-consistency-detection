page {
    padding-bottom: 140rpx;
    text-align: center;
    font-size: 18px;
}

.box_wrapper {
    margin: 50rpx;
    padding: 50rpx;
    text-align: left;
    background-color: #eee;
}

.box_wrapper input {
    display: block;
    width: 100%;
    box-sizing: border-box;
    padding: 5rpx 20rpx;
    border: 1px solid #ccc;
}

.box_wrapper .accredit_wrapper {
    display: flex;
    align-items: center;
    margin-top: 30rpx;
}

.box_wrapper .accredit_wrapper .accredit {
    height: 100%;
    margin-left: 20rpx;
    border: 1px solid #ff5001;
    color: #ff5001;
}

.title {
    margin: 100rpx auto 0;
    font-weight: 700;
    text-align: center;
    color: #000;
}

.title .warm {
    width: 200rpx;
    height: 200rpx;
}

.tip {
    margin: 20rpx 0;
    font-size: 16px;
    font-weight: 700;
    color: #333;
}

.weui-btn {
    color: #fff;
    background-color: #ff5001;
}

.weui-btn::after {
    border: 0;
}

.weui-btn.disabled {
    background-color: #ccc;
}