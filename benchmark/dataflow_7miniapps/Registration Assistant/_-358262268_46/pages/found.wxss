page {
    box-sizing: border-box;
    padding: 25rpx;
}

page .weui-cell-list {
    display: flex;
    flex-direction: column;
    padding: 0;
}

page .weui-cell-list .weui-cell__hd {
    width: 100%;
}

page .weui-cell-list .weui-cell__hd image {
    width: 100%;
    height: 360rpx;
}

page .weui-cell-list .weui-cell__bd {
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx;
}

page .weui-cell-list .weui-cell__bd .content {
    text-align: left;
}

page .weui-cell-list .weui-cell__bd .info {
    padding: 10rpx 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

page .weui-cell-list .weui-cell__bd .info image {
    display: block;
    width: 30px;
    height: 30px;
    border-radius: 100%;
}

page .weui-cell-list .weui-cell__bd .info .weui-cell__bd {
    font-size: 16px;
}

page .weui-cell-list .weui-cell__bd .info .weui-cell__bd view {
    padding-bottom: 10rpx;
}